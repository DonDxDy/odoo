<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_test_base" model="ir.ui.view">
        <field name="name">test.base.form</field>
        <field name="model">test.base</field>
        <field name="arch" type="xml">
            <form string="Test base">
                <group>
                    <group>
                        <field name="name"/>
