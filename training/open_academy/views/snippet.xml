<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="my_title" inherit_id="website.snippets" name="Title Header">

    <xpath expr="//div[@id='snippet_content']/div[@class='o_panel_body']" position="inside">
        <div>
            <div class="oe_snippet_thumbnail">
                <img class="oe_snippet_thumbnail_img" src="/open_academy/static/src/img/title_header.png"/>
                <span class="oe_snippet_thumbnail_title">Header Title</span>
            </div>

            <section class="oe_snippet_body my_title">
                <div class="container">
                    <div class="row">
                        <h3>Your Main Title, You can change it by clicking here!</h3>
                    </div>
                </div>
            </section>
        </div>
    </xpath>
    <xpath expr="//div[@id='snippet_options']" position="inside">
        <div data-js='my_title'
            data-selector=".my_title"
           >
            <li class="dropdown-submenu">
                <a tabindex="-1" href="#"><i class="fa fa-picture-o"/>Forground Color</a>
                <ul class="dropdown-menu">
                    <li class="o_select_font_color" data-toggle_class="o_black_color" style="background-color: white; color: black;"><a href="#">Black</a></li>
                    <li class="divider"></li>
                    <li class="o_select_font_color" data-toggle_class="o_green_color" style="background-color: white; color: green;"><a href="#">Green</a></li>
                    <li class="divider"></li>
                    <li class="o_select_font_color" data-toggle_class="o_red_color" style="background-color: white; color: red;"><a href="#">Red</a></li>
                </ul>
            </li>
        </div>
    </xpath>

</template>

</odoo>
