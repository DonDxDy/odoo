<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Top menu item -->
    <menuitem name="Purchase"
        id="menu_purchase_root"
        groups="group_purchase_manager,group_purchase_user"
        web_icon="purchase,static/description/icon.png"
        sequence="25">

        <menuitem id="menu_procurement_management"
            name="Orders"
            sequence="1">
            <menuitem id="menu_purchase_rfq"
                action="purchase_rfq"
                sequence="0"/>
            <menuitem id="menu_purchase_form_action"
                action="purchase_form_action"
                sequence="6"/>

            <!--Supplier menu-->
            <menuitem id="menu_procurement_management_supplier_name"
                name="Vendors"
                action="account.res_partner_action_supplier"
                sequence="15"/>
        </menuitem>

        <!-- Products Control Menu -->
        <menuitem id="menu_purchase_products"
            name="Products"
            sequence="5">

            <!-- This xmlid is really not adapted... -->
            <menuitem id="menu_procurement_partner_contact_form"
                name="Products"
                action="product_normal_action_puchased"
                sequence="20"/>
            <menuitem id="product_product_menu"
                name="Product Variants"
                action="product_product_action"
                groups="product.group_product_variant"
                sequence="21"/>

        </menuitem>

        <menuitem id="purchase_report"
            name="Reporting"
            action="action_purchase_order_report_all"
            groups="purchase.group_purchase_manager"
            sequence="99"/>

        <menuitem id="menu_purchase_config"
            name="Configuration"
            groups="group_purchase_manager"
            sequence="100">
            <menuitem id="menu_purchase_general_settings"
                name="Settings"
                action="action_purchase_configuration"
                groups="base.group_system"
                sequence="0"/>

            <menuitem id="menu_product_pricelist_action2_purchase"
                action="product.product_supplierinfo_type_action"
                sequence="1"/>
            <menuitem id="menu_product_in_config_purchase"
                name="Products"
                sequence="30">
                <menuitem id="menu_product_attribute_action"
                    name="Product Attributes"
                    action="product.attribute_action"
                    groups="product.group_product_variant"
                    sequence="1"/>

                <menuitem id="menu_product_category_config_purchase"
                    action="product.product_category_action_form"
                    sequence="3" />
            </menuitem>
            <menuitem id="menu_unit_of_measure_in_config_purchase"
                name="Units of Measures"
                groups="uom.group_uom"
                sequence="40">
                <!-- VFE TODO remove submenus groups -->
                <menuitem id="menu_purchase_uom_form_action"
                    action="uom.product_uom_form_action"
                    groups="uom.group_uom"
                    sequence="5"/>

                <menuitem id="menu_purchase_uom_categ_form_action"
                    action="uom.product_uom_categ_form_action"
                    groups="uom.group_uom"
                    sequence="10"/>
            </menuitem>
        </menuitem>
    </menuitem>

    <record model="ir.ui.menu" id="menu_product_in_config_purchase">
        <field name="groups_id" eval="False"/>
    </record>
</odoo>