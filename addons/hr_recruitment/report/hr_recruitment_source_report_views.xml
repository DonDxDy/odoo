<?xml version="1.0"?>
<odoo>
    <data>
    <!-- Recruitment Source Report -->
    <record id="recruitment_source_report_view_pivot" model="ir.ui.view">
        <field name="name">hr.recruitment.source.report.pivot</field>
        <field name="model">hr.recruitment.source.report</field>
        <field name="arch" type="xml">
            <pivot string="Recruitment Sources" disable_linking="True">
                <field name="job_id" type="row"/>
                <field name="source_id" type="row"/>
                <field name="applicant" type="measure"/>
                <field name="hired" type="measure"/>
                <field name="refused" type="measure"/>
                <field name="cost" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="recruitment_source_report_view_graph" model="ir.ui.view">
        <field name="name">hr.recruitment.source.report.graph</field>
        <field name="model">hr.recruitment.source.report</field>
        <field name="arch" type="xml">
            <graph string="Recruitment Sources" type="bar">
                <field name="job_id" type="row"/>
                <field name="source_id" type="row"/>
                <field name="applicant" type="measure"/>
            </graph>
        </field>
    </record>
    
    <record id="recruitment_source_report_view_search" model="ir.ui.view">
        <field name="name">hr.recruitment.source.report.search</field>
        <field name="model">hr.recruitment.source.report</field>
        <field name="arch" type="xml">
            <search string="Recruitment Sources">
                <field name="job_id" filter_domain="[('job_id', 'ilike', self)]"/>
                <group expand="1" string="Group By">
                    <filter string="Job Position" name="job_id" context="{'group_by':'job_id'}"/>
                    <filter string="Source" name="source_id" context="{'group_by':'source_id'}"/>
                    <filter string="Campaign" name="campaign_id" context="{'group_by':'campaign_id'}"/>
                </group>
            </search>
        </field>
    </record>

     <record id="recruitment_source_report_action" model="ir.actions.act_window">
        <field name="name">Recruitment Sources</field>
        <field name="res_model">hr.recruitment.source.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="recruitment_source_report_view_search"/>
        <field name="context">{
            'search_default_year': True
        }</field>
        <field name="help">This report performs analysis on your recruitment source.</field>
    </record>

    <menuitem name="Recruitment Sources" 
              id="hr_recruitment_source_report" 
              parent="report_hr_recruitment"
              sequence="51" 
              action="recruitment_source_report_action"/>
    </data>
</odoo>
