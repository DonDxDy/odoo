<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_adyen_by_odoo" model="ir.ui.view">
        <field name="name">payment.acquirer.form.inherit</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'adyen_by_odoo')]}">
                    <field name="o_adyen_account_id"/>
                    <field name="o_adyen_merchant_account" attrs="{'required':[ ('provider', '=', 'adyen_by_odoo'), ('state', '!=', 'disabled')]}" />
                    <field name="o_adyen_api_key" attrs="{'required':[ ('provider', '=', 'adyen_by_odoo'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
