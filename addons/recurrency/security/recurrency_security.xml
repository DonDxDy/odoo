<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_recurrency_category" model="ir.module.category">
        <field name="name">Recurrency</field>
    </record>

    <record id="group_recurrency_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_recurrency_category"/>
    </record>

    <record id="group_recurrency_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_recurrency_category"/>
        <field name="implied_ids" eval="[(4, ref('group_recurrency_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


</odoo>

