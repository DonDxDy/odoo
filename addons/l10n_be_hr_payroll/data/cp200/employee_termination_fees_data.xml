<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Salary Structure -->
    <record id="hr_payroll_salary_structure_departure_termination" model="hr.payroll.structure">
        <field name="code">TERMINATION</field>
        <field name="name">Termination fees</field>
        <field eval="[(6, 0, [
            ref('hr_payroll_rule_basic_12_92'),
            ref('hr_payroll_rule_year_end_bonus'),
            ref('hr_payroll_rule_residence'),
            ref('hr_payroll_rule_expatrie'),
            ref('hr_payroll_rule_ch_year'),
            ref('hr_payroll_eco_checks'),
            ref('hr_payroll_annual_variable_salary'),
            ref('hr_payroll_pay_variable_salary'),
            ref('hr_payroll_benefit_in_kind'),
            ref('hr_payroll_advantage_any_kind'),
            ref('hr_payroll_company_car_annual'),
            ref('hr_payroll_hospital_insurance'),
            ref('hr_payroll_group_insurance'),
            ref('hr_payroll_stock_option'),
            ref('hr_payroll_specific_CP'),
            ref('hr_payroll_other_annual'),
            ref('hr_payroll_annual_salary_revalued'),
            ref('hr_payroll_notice_duration_month'),
            ref('hr_payroll_notice_duration_week'),
            ref('hr_payroll_notice_duration_day'),
            ref('hr_payroll_termination_total'),
            ref('hr_payroll_termination_outplacement'),
            ref('hr_payroll_termination_ONSS'),
            ref('hr_payroll_termination_unreasonable_dismissal'),
            ref('hr_payroll_termination_non_respect_motivation'),
            ref('hr_payroll_termination_total_cost'),
        ])]" name="rule_ids"/>
        <field name="country_id" ref="base.be"/>
        <field name="report_id" ref="l10n_be_hr_payroll.action_report_termination_fees"/>
        <field name="payslip_name">Termination</field>
        <field name="parent_id"></field>
    </record>

    <record id="hr_payroll_rule_basic_12_92" model="hr.salary.rule">
        <field name="name">Gross Monthly Salary</field>
        <field name="sequence" eval="1"/>
        <field name="code">BASIC2</field>
        <field name="category_id" ref="hr_payroll.BASIC"/>
        <field name="condition_select">none</field>
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
result_qty = 12.92
result = contract.wage
        </field>
    </record>

