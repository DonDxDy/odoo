<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ActivityMarkDonePopover" owl="1">
        <div class="o-ActivityMarkDonePopover" t-on-keydown="_onKeydown">
            <t t-if="activity">
                <textarea class="o-ActivityMarkDonePopover-feedback form-control" rows="3" placeholder="Write Feedback" t-ref="feedbackTextarea"/>
                <div class="o-ActivityMarkDonePopover-buttons">
                    <button type="button" class="o-ActivityMarkDonePopover-doneScheduleNextButton btn btn-sm btn-primary" t-on-click="_onClickDoneAndScheduleNext" t-esc="DONE_AND_SCHEDULE_NEXT"/>
                    <t t-if="!activity.$$$forceNext(mself)">
                        <button type="button" class="o-ActivityMarkDonePopover-doneButton btn btn-sm btn-primary" t-on-click="_onClickDone">
                            Done
                        </button>
                        <button type="button" class="o-ActivityMarkDonePopover-discardButton btn btn-sm btn-link" t-on-click="_onClickDiscard">
                            Discard
                        </button>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
