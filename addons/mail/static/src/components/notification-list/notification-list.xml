<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.NotificationList" owl="1">
        <div class="o-NotificationList" t-att-class="{ 'o-isEmpty': notifications.length === 0 }">
            <t t-if="notifications.length === 0">
                <div class="o-NotificationList-noConversation">
                    No conversation yet...
                </div>
            </t>
            <t t-else="">
                <t t-foreach="notifications" t-as="notification" t-key="notification.uniqueId">
                    <t t-if="notification.type === 'thread' and notification.thread">
                        <ThreadPreview
                            class="o-NotificationList-preview"
                            t-att-class="{ 'o-isMobile': env.messaging.$$$device(mself).$$$isMobile(mself) }"
                            thread="notification.thread"
                        />
                    </t>
                    <t t-if="notification.type === 'thread_needaction' and notification.thread">
                        <ThreadNeedactionPreview
                            class="o-NotificationList-preview"
                            t-att-class="{ 'o-isMobile': env.messaging.$$$device(mself).$$$isMobile(mself) }"
                            thread="notification.thread"
                        />
                    </t>
                    <t t-if="notification.notificationGroup">
                        <NotificationGroup
                            class="o-NotificationList-group"
                            notificationGroup="notification.notificationGroup"
                        />
                    </t>
                    <t t-if="notification.type === 'odoobotRequest'">
                        <NotificationRequest
                            class="o-NotificationList-notificationRequest"
                            t-att-class="{ 'o-isMobile': env.messaging.device.isMobile }"
                        />
                    </t>
                    <t t-if="!notification_last">
                        <div class="o-NotificationList-separator"/>
                    </t>
                </t>
            </t>
        </div>
    </t>

</templates>
