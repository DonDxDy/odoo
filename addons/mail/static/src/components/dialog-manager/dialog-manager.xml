<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.DialogManager" owl="1">
        <div class="o-DialogManager">
            <t t-if="env.messaging">
                <t t-foreach="env.messaging.$$$dialogManager(mself).$$$dialogs(mself)" t-as="dialog" t-key="dialog.localId">
                    <Dialog
                        class="o-DialogManager-dialog"
                        dialog="dialog"
                    />
                </t>
            </t>
        </div>
    </t>

</templates>
