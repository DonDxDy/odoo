<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ThreadIcon" owl="1">
        <div class="o-ThreadIcon">
            <t t-if="thread" name="rootCondition">
                <t t-if="thread.$$$channelType(mself) === 'channel'">
                    <t t-if="thread.$$$public(mself) === 'private'">
                        <!-- AKU TODO: channel of type 'groups' should maybe also have lock icon -->
                        <div class="o-ThreadIcon-channelPrivate fa fa-lock" title="Private channel"/>
                    </t>
                    <t t-else="">
                        <div class="o-ThreadIcon-channelPublic fa fa-hashtag" title="Public channel"/>
                    </t>
                </t>
                <t t-elif="thread.$$$channelType(mself) === 'chat' and thread.$$$correspondent(mself)">
                    <t t-if="thread.$$$orderedOtherTypingMembers(mself).length > 0">
                        <ThreadTypingIcon
                            class="o-ThreadIcon-typing"
                            animation="'pulse'"
                            title="thread.$$$typingStatusText(mself)"
                        />
                    </t>
                    <t t-elif="thread.$$$correspondent(mself).$$$im_status(mself) === 'online'">
                        <div class="o-ThreadIcon-online fa fa-circle" title="Online"/>
                    </t>
                    <t t-elif="thread.$$$correspondent(mself).$$$im_status(mself) === 'offline'">
                        <div class="o-ThreadIcon-offline fa fa-circle-o" title="Offline"/>
                    </t>
                    <t t-elif="thread.$$$correspondent(mself).$$$im_status(mself) === 'away'">
                        <div class="o-ThreadIcon-away fa fa-circle" title="Away"/>
                    </t>
                    <t t-elif="thread.$$$correspondent(mself) === env.messaging.$$$partnerRoot(mself)">
                        <div class="o-ThreadIcon-online fa fa-heart" title="Bot"/>
                    </t>
                    <t t-else="" name="noImStatusCondition">
                        <div class="o-ThreadIcon-noImStatus fa fa-question-circle" title="No IM status available"/>
                    </t>
                </t>
                <t t-elif="thread.$$$model(mself) === 'mail.box'">
                    <t t-if="thread === env.messaging.$$$inbox(mself)">
                        <div class="o-ThreadIcon-mailboxInbox fa fa-inbox"/>
                    </t>
                    <t t-elif="thread === env.messaging.$$$starred(mself)">
                        <div class="o-ThreadIcon-mailboxStarred fa fa-star-o"/>
                    </t>
                    <t t-elif="thread === env.messaging.$$$history(mself)">
                        <div class="o-ThreadIcon-mailboxHistory fa fa-history"/>
                    </t>
                    <t t-elif="thread === env.messaging.$$$moderation(mself)">
                        <div class="o-ThreadIcon-mailboxModeration fa fa-envelope"/>
                    </t>
                </t>
            </t>
        </div>
    </t>

</templates>
