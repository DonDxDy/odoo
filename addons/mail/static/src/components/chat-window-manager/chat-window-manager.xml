<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.ChatWindowManager" owl="1">
        <div class="o-ChatWindowManager">
            <t t-if="env.isMessagingInitialized()">
                <!-- Note: DOM elements are ordered from left to right -->
                <t t-if="env.messaging.$$$chatWindowManager(mself).$$$hasHiddenChatWindows(mself)">
                    <ChatWindowHiddenMenu class="o-ChatWindowManager-hiddenMenu"/>
                </t>
                <t t-foreach="env.messaging.$$$chatWindowManager(mself).$$$allOrderedVisible(mself)" t-as="chatWindow" t-key="chatWindow.localId">
                    <ChatWindow
                        chatWindow="chatWindow"
                        hasCloseAsBackButton="env.messaging.$$$device(mself).$$$isMobile(mself)"
                        isExpandable="!env.messaging.$$$device(mself).$$$isMobile(mself) and !!chatWindow.$$$thread(mself)"
                        isFullscreen="env.messaging.$$$device(mself).$$$isMobile(mself)"
                    />
                </t>
            </t>
        </div>
    </t>

</templates>
