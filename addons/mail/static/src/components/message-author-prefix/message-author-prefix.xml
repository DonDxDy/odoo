<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.MessageAuthorPrefix" owl="1">
        <span class="o-MessageAuthorPrefix">
            <t t-if="message">
                <t t-if="message.$$$author(mself) and message.$$$author(mself) === env.messaging.$$$currentPartner(mself)">
                    <i class="o-MessageAuthorPrefix-icon fa fa-mail-reply"/>You:
                </t>
                <t t-elif="thread and message.$$$author(mself) !== thread.$$$correspondent(mself)">
                    <t t-esc="message.$$$author(mself).$$$nameOrDisplayName(mself)"/>:
                </t>
            </t>
        </span>
    </t>

</templates>
