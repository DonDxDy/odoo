<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.FollowButton" owl="1">
        <div class="o-FollowButton">
            <t t-if="thread.$$$isCurrentPartnerFollowing(mself)">
                <button class="o-FollowButton-unfollow btn btn-link" t-att-class="{ 'o-isFollowing': !state.isUnfollowButtonHighlighted, 'o-isUnfollowing': state.isUnfollowButtonHighlighted }" t-att-disabled="isDisabled" t-on-click="_onClickUnfollow" t-on-mouseenter="_onMouseEnterUnfollow" t-on-mouseleave="_onMouseLeaveUnfollow">
                    <t t-if="state.isUnfollowButtonHighlighted">
                        <i class="fa fa-times"/> Unfollow
                    </t>
                    <t t-else="">
                        <i class="fa fa-check"/> Following
                    </t>
                </button>
            </t>
            <t t-else="">
                <button class="o-FollowButton-follow btn btn-link" t-att-disabled="isDisabled" t-on-click="_onClickFollow">
                    Follow
                </button>
            </t>
        </div>
    </t>

</templates>
