<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.Dialog" owl="1">
        <div class="o-Dialog">
            <t t-if="dialog">
                <t t-if="dialog.$$$record(mself)">
                    <t
                        t-component="{{ dialog.$$$record(self)['constructor'].name }}"
                        class="o-Dialog-component"
                        t-props="{ record: dialog.$$$record(mself) }"
                        t-ref="component"
                    />
                </t>
                <t t-else="">
                    <span>Only dialog linked to a record is currently supported!</span>
                </t>
            </t>
        </div>
    </t>

</templates>
