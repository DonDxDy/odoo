<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_ChatWindowHeader"
        owl="1"
        t-name="mail.component.ChatWindowHeader"
        t-on-click="_onClick">
        <Icon
            class="
                o_ChatWindowHeader_icon
                o_ChatWindowHeader_item"
            threadLocalId="props.chatWindowId"
            t-if="props.thread"/>
        <div
            class="
                o_ChatWindowHeader_item
                o_ChatWindowHeader_name"
            t-att-title="name"
            t-key="'name'">
            <t t-esc="name"/>
        </div>
        <div
            class="
                o_ChatWindowHeader_counter
                o_ChatWindowHeader_item"
            t-if="props.thread and props.thread.message_unread_counter > 0"
            t-key="'counter'">
            (<t t-esc="props.thread.message_unread_counter"/>)
        </div>
        <div
            class="o_autogrow"/>
        <div
            class="
                o_ChatWindowHeader_commands
                o_ChatWindowHeader_item">
            <div
                aria-label="Shift left"
                class="
                    o_ChatWindowHeader_command
                    o_ChatWindowHeader_commandShiftLeft"
                title="Shift left"
                t-if="props.shiftLeft"
                t-key="'shift_left'"
                t-on-click.stop="_onClickShiftLeft">
                <i
                    class="
                        fa
                        fa-angle-left"/>
            </div>
            <div
                aria-label="Shift right"
                class="
                    o_ChatWindowHeader_command
                    o_ChatWindowHeader_commandShiftRight"
                title="Shift right"
                t-if="props.shiftRight"
                t-key="'shift_right'"
                t-on-click.stop="_onClickShiftRight">
                <i
                    class="
                        fa
                        fa-angle-right"/>
            </div>
            <div
                aria-label="Open in Discuss"
                class="
                    o_ChatWindowHeader_command
                    o_ChatWindowHeader_commandExpand"
                title="Open in Discuss"
                t-if="props.expand"
                t-key="'expand'"
                t-on-click.stop="_onClickExpand">
                <i
                    class="
                        fa
                        fa-expand"/>
            </div>
            <div
                aria-label="Close chat window"
                class="
                    o_ChatWindowHeader_command
                    o_ChatWindowHeader_commandClose"
                title="Close chat window"
                t-on-click.stop="_onClickClose">
                <i
                    class="
                        fa
                        fa-close"/>
            </div>
        </div>
    </div>

</templates>
