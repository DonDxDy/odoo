<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_Thread"
        owl="1"
        t-att-data-thread-local-id="props.threadLocalId"
        t-name="mail.component.Thread">
        <div
            class="o_Thread_loading"
            t-if="loading">
            <span><i
                aria-label="Loading..."
                class="
                    fa
                    fa-spinner
                    fa-spin
                    o_Thread_loadingIcon"
                role="img"
                title="Loading..."/>Loading messages...</span>
        </div>
        <div
            class="o_Thread_noMessage"
            t-elif="!hasMessages">
            There are no messages in this conversation.
        </div>
        <MessageList
            class="o_Thread_messageList"
            displayReplyIcons="props.displayReplyIcons"
            domain="props.domain"
            order="props.order"
            redirectAuthor="props.redirectAuthor"
            scrollTop="props.scrollTop"
            squashCloseMessages="props.squashCloseMessages"
            threadCacheLocalId="props.threadCacheLocalId"
            threadLocalId="props.threadLocalId"
            t-else=""
            t-ref="messageList"/>
        <Composer
            class="o_Thread_composer"
            attachmentEditable="props.composerAttachmentEditable"
            attachmentLayout="props.composerAttachmentLayout"
            attachmentLayoutCardLabel="props.composerAttachmentLayoutCardLabel"
            avatar="props.composerAvatar"
            sendButton="props.composerSendButton"
            threadLocalId="props.threadLocalId"
            t-if="props.showComposer"
            t-ref="composer"/>
    </div>

</templates>
