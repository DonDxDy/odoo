                    <t t-set="multi_upload" t-value="true"/>
                    <input type="hidden" name="model" t-att-value="props.currentResModel"/>
                    <input type="hidden" name="id" t-att-value="props.currentResId"/>
                    <center><span class="btn btn-link o_upload_attachments_button"><span class="fa fa-plus-square"/> Add Attachments</span></center>
                </t> -->
                <center><span class="btn btn-link o_upload_attachments_button"><span class="fa fa-plus-square"/> Add Attachments</span></center>
            </div>
        </div>
    </div>
</templates>
