<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
        <span
            class="o_UserStatus"
            owl="1"
            t-name="mail.component.UserStatus">
            <i t-if="props.author.im_status == 'online'" class="o_mail_user_status o_user_online fa fa-circle" title="Online" role="img" aria-label="User is online"/>
            <i t-if="props.author.im_status == 'away'" class="o_mail_user_status o_user_idle fa fa-circle" title="Idle" role="img" aria-label="User is idle"/>
            <i t-if="props.author.im_status == 'offline'" class="o_mail_user_status fa fa-circle-o" title="Offline" role="img" aria-label="User is offline"/>
        </span>

</templates>
