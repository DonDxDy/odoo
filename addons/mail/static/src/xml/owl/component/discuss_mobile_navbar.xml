<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <div
        class="o_DiscussMobileNavbar"
        owl="1"
        t-name="mail.component.DiscussMobileNavbar">
        <div
            class="o_DiscussMobileNavbar_tab"
            data-tab="mailbox"
            t-att-class="{
                o_active: active === 'mailbox',
            }"
            t-on-click="_onClick">
            <span class="
                fa
                fa-inbox
                o_DiscussMobileNavbar_tabIcon"/>
            <span class="o_DiscussMobileNavbar_tabLabel">Mailboxes</span>
        </div>
        <div
            class="o_DiscussMobileNavbar_tab"
            data-tab="chat"
            t-att-class="{
                o_active: active === 'chat',
            }"
            t-on-click="_onClick">
            <span class="
                fa
                fa-user
                o_DiscussMobileNavbar_tabIcon"/>
            <span class="o_DiscussMobileNavbar_tabLabel">Chat</span>
        </div>
        <div
            class="o_DiscussMobileNavbar_tab"
            data-tab="channel"
            t-att-class="{
                o_active: active === 'channel',
            }"
            t-on-click="_onClick">
            <span class="
                fa
                fa-users
                o_DiscussMobileNavbar_tabIcon"/>
            <span class="o_DiscussMobileNavbar_tabLabel">Channels</span>
        </div>
    </div>

</templates>
