<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <span
        class="o_MessageAuthorPrefix"
        owl="1"
        t-name="mail.component.MessageAuthorPrefix">
        <t t-if="
            props.author and
            props.author.localId === props.currentPartnerLocalId">
            <i
                class="
                    fa
                    fa-mail-reply
                    o_MessageAuthorPrefixIcon"/>You:
        </t>
        <t t-elif="
            props.thread and
            props.thread.channel_type === 'channel'">
            <t t-esc="props.authorName"/>:
        </t>
    </span>

</templates>
