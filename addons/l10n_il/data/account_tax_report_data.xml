<!-- SALES lines -->
	<record id="account_tax_report_line_vat_outputs" model="account.tax.report.line">
        <field name="name">TOTAL VAT OUTPUTS (BASE + TAX)</field>
        <field name="sequence">1</field>
        <field name="country_id" ref="base.il"/>
    </record>

	<record id="account_tax_report_line_vat_sales_tax" model="account.tax.report.line">
        <field name="name">TOTAL VAT SALES (TAX)</field> <!-- //1 -->
        <field name="code">ILTAX_OUT_BALANCE</field>
        <field name="sequence">1</field>
        <field name="parent_id" ref="account_tax_report_line_vat_outputs"/>
        <field name="country_id" ref="base.il"/>
    </record>

    <record id="account_tax_report_line_out_balance" model="account.tax.report.line">
        <field name="name">Total VAT Sales</field>
        <field name="tag_name">Total VAT Sales</field>
        <field name="code">ILTAX_OUT_BALANCE_00</field> <!-- // 2 -->
        <field name="sequence">2</field>
        <field name="parent_id" ref="account_tax_report_line_vat_sales_tax"/>
        <field name="country_id" ref="base.il"/>
    </record>

    <record id="account_tax_report_line_out_balance_pa" model="account.tax.report.line">
        <field name="name">Total VAT PA Sales</field>
        <field name="tag_name">Total VAT PA Sales</field>
        <field name="code">ILTAX_OUT_BALANCE_PA</field> <!-- // 2 -->
        <field name="sequence">2</field>
        <field name="parent_id" ref="account_tax_report_line_vat_sales_tax"/>
        <field name="country_id" ref="base.il"/>
    </record>

	<record id="account_tax_report_line_vat_sales_base" model="account.tax.report.line">
        <field name="name">TOTAL VAT SALES (BASE)</field>
        <field name="tag_name">TOTAL VAT SALES (BASE)</field>
        <field name="code">ILTAX_OUT_BASE</field> <!-- // 3 -->
        <field name="sequence">3</field>
        <field name="parent_id" ref="account_tax_report_line_vat_outputs"/>
        <field name="country_id" ref="base.il"/>
    </record>

    <record id="account_tax_report_line_out_base_exempt" model="account.tax.report.line">
        <field name="name">TOTAL VAT Exempt Sales (BASE)</field>
        <field name="tag_name">TOTAL VAT Exempt Sales (BASE)</field>
        <field name="code">ILTAX_OUT_BASE_exempt</field> <!-- // 4 -->
        <field name="sequence">4</field>
        <field name="parent_id" ref="account_tax_report_line_vat_outputs"/>
        <field name="country_id" ref="base.il"/>
    </record>

    <record id="account_tax_report_line_vat_in_fa" model="account.tax.report.line">
        <field name="name">TOTAL VAT INPUTS (fixed assets)</field>
        <field name="tag_name">TOTAL VAT INPUTS (fixed assets)</field>
        <field name="code">ILTAX_VAT_IN_FA</field> <!-- // 7 -->
        <field name="sequence">7</field>
        <field name="parent_id" ref="account_tax_report_line_in_balance"/>
        <field name="country_id" ref="base.il"/>
    </record>

    <record id="account_tax_report_line_vat_due" model="account.tax.report.line">
        <field name="name">TOTAL VAT DUE</field>
        <field name="formulas">(ILTAX_OUT_BALANCE_00 + ILTAX_OUT_BALANCE_PA) - (ILTAX_IN_BALANCE_17 + ILTAX_IN_BALANCE_2_3 + ILTAX_IN_BALANCE_1_4) - ILTAX_VAT_IN_FA - ILTAX_IN_BALANCE_EQUIPMENT</field> <!-- -ILTAX_IN_BALANCE_EQUIPMENT// 8 -->
        <field name="sequence">8</field>
        <field name="country_id" ref="base.il"/>
    </record>

    <record id="account_tax_report_line_in_balance_equipment" model="account.tax.report.line">
        <field name="name">Total VAT equipment inputs</field>
        <field name="tag_name">Total VAT equipment inputs</field>
        <field name="code">ILTAX_IN_BALANCE_EQUIPMENT</field>
        <field name="sequence">8</field>
        <field name="country_id" ref="base.il"/>
    </record> <!-- vat_equipment_inputs (type purchase) to be subtracted from sales part -->
</odoo>
