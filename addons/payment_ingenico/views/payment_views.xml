<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_ingenico" model="ir.ui.view">
            <field name="name">acquirer.form.ingenico</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'ingenico')]}">
                        <field name="ingenico_pspid"/>
                        <field name="ingenico_userid"/>
                        <field name="ingenico_password"/>
                        <field name="ingenico_shakey_in"/>
                        <field name="ingenico_shakey_out"/>
                        <field name="ingenico_alias_usage"/>
                        <a colspan="2" href="http://payment-services.ingenico.com/int/en/ogone/support/guides/user%20guides/test-account-creation" target="_blank">How to configure my Ingenico account?</a>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
