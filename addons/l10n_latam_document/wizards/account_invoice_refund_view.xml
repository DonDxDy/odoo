<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_invoice" model="ir.ui.view">
        <field name="name">account.move_refund.view</field>
        <field name="model">account.move.refund</field>
        <field name="inherit_id" ref="account.view_account_invoice_refund"/>
        <field name="arch" type="xml">
            <form>
                <field name="l10n_latam_use_documents" invisible="1"/>
                <field name="l10n_latam_sequence_id" invisible="1"/>
                <field name="l10n_latam_move_id" invisible="1"/>
            </form>
            <field name="invoice_date" position="before">
                <field name="l10n_latam_document_type_id" attrs="{'invisible': ['|', ('l10n_latam_use_documents', '=', False), ('filter_refund', '=', 'refund')], 'required': [('l10n_latam_use_documents', '=', True), ('filter_refund', '!=', 'refund')]}" options="{'no_open': True, 'no_create': True}"/>
                <field name="l10n_latam_document_number" attrs="{'invisible': ['|', ('l10n_latam_use_documents', '=', False), ('filter_refund', '=', 'refund')], 'required': [('l10n_latam_use_documents', '=', True), ('filter_refund', '!=', 'refund')]}"/>
            </field>
        </field>
    </record>

</odoo>
