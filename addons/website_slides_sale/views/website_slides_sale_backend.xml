<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <menuitem name="Courses"
            id="menu_website_course_root"
            sequence="32"
            parent="website.menu_website_configuration"
            groups="website.group_website_designer"/>

        <!-- Slide Channel Views -->
        <record id="view_slides_channel_form_inherit_slides_sale" model="ir.ui.view">
            <field name="name">slides.channel.form.inherit.slides.sale</field>
            <field name="model">slide.channel</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <field name="share_template_id" position="after">
                    <field name="is_course"/>
                </field>
            </field>
        </record>

        <!-- Course Views -->
         <record id="view_course_course_search" model="ir.ui.view">
            <field name="name">course.course.search</field>
            <field name="model">course.course</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="website_slides.slide_channel_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <filter name="filter_course_channels" string="Courses" domain="[('is_course', '=', True)]"/>
                    <filter name="filter_channels" string="Channels" domain="[('is_course', '=', False)]"/>
                </xpath>
            </field>
        </record>

        <record id="view_course_course_tree" model="ir.ui.view">
            <field name="name">course.course.tree</field>
            <field name="model">course.course</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_tree"/>
            <field name="arch" type="xml">
                <field name="promote_strategy" position="after">
                    <field name="language"/>
                    <field name="course_price"/>
                </field>
            </field>
        </record>

        <record id="view_course_course_form" model="ir.ui.view">
            <field name="name">course.course.form</field>
            <field name="model">course.course</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='security']" position="after">
                    <page string="Course">
                        <group>
                            <group>
                                <field name="language"/>
                                <field name="instructor_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="product_id" context="{'default_is_course': True}"/>
                                <field name="course_price"/>
                            </group>
                        </group>
                        <label for="course_html" string="Course HTML Content"></label>
                        <div>
                            <field name="course_html" no_label="1"/>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="action_course_course" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">course.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_course_course" id="submenu_action_course_course" parent="menu_website_course_root" sequence="3"/>


        <!-- Lecture Views -->
        <record id="view_course_lecture_tree" model="ir.ui.view">
            <field name="name">course.lecture.tree</field>
            <field name="model">course.lecture</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="website_slides.view_slide_slide_tree"/>
            <field name="arch" type="xml">
                <field name="slide_type">
                    <field name="slide_view_type"/>
                </field>
                <field name="channel_id" position="replace">
                    <field name="course_id"/>
                </field>
            </field>
        </record>

        <record id="view_course_lecture_form" model="ir.ui.view">
            <field name="name">course.lecture.form</field>
            <field name="model">course.lecture</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="website_slides.view_slide_slide_form"/>
            <field name="arch" type="xml">
                <field name="slide_type" position="after">
                    <field name="slide_view_type"/>
                </field>
                <field name="category_id" position="attributes">
                    <attribute name="context">{}</attribute>
                    <attribute name="domain">[]</attribute>
                </field>
                <field name="channel_id" position="replace">
                    <field name="course_id"/>
                </field>
            </field>
        </record>
        <record id="view_course_lecture_search" model="ir.ui.view">
            <field name="name">course.lecture.filter</field>
            <field name="model">course.lecture</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="website_slides.view_slide_slide_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <filter string="Preview" name="preview_slides" domain="[('slide_view_type','=','preview')]"/>
                    <filter string="Free" name="free_slides" domain="[('slide_view_type','=','free')]"/>
                </xpath>
            </field>
        </record>

        <record id="action_course_lecture" model="ir.actions.act_window">
            <field name="name">Lectures</field>
            <field name="res_model">course.lecture</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_course_lecture" id="submenu_action_course_lecture" parent="menu_website_course_root" sequence="4"/>


        <!-- Lecture Attendee: Will opened through stat buttons -->
        <record id="view_lecture_attendee_tree" model="ir.ui.view">
            <field name="name">lecture.attendee.tree</field>
            <field name="model">lecture.attendee</field>
            <field name="arch" type="xml">
                <tree string="Lecture Attendees">
                    <field name="name"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="slide_id"/>
                    <field name="date_view"/>
                </tree>
            </field>
        </record>

        <record id="view_lecture_attendee_form" model="ir.ui.view">
            <field name="name">lecture_attendee.form</field>
            <field name="model">lecture.attendee</field>
            <field name="arch" type="xml">
                <form string="Lecture Attendees">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="slide_id"/>
                                <field name="date_view"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Product Template Views -->
        <record id="product_template_search_view_inherit_slides_sale" model="ir.ui.view">
            <field name="name">product.template.search.slides.sale.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='filter_to_sell']" position="after">
                    <filter name="filter_course" string="Course Products" domain="[('is_course', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_view_form_inherit_slide_sale" model="ir.ui.view">
            <field name="name">product.template.form.slide.sale.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale']" position="inside">
                    <group>
                        <field name="is_course"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Course Regiostration Views -->
        <record id="view_course_registration_search" model="ir.ui.view">
            <field name="name">course.registration.filter</field>
            <field name="model">course.registration</field>
            <field name="arch" type="xml">
                <search string="Search Registrations">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="course_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Partner" domain="[]" context="{'group_by': 'partner_id'}"/>
                        <filter string="Course" domain="[]" context="{'group_by': 'course_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_course_registration_tree" model="ir.ui.view">
            <field name="name">course.registration.tree</field>
            <field name="model">course.registration</field>
            <field name="arch" type="xml">
                <tree string="Registrations">
                    <field name="name"/>
                    <field name="partner_id" invisible="1"/>
                    <field name="course_id"/>
                    <field name="course_start_date"/>
                    <field name="course_end_date"/>
                </tree>
            </field>
        </record>

        <record id="view_course_registration_form" model="ir.ui.view">
            <field name="name">course.registration.form</field>
            <field name="model">course.registration</field>
            <field name="arch" type="xml">
                <form string="Course Registration">
                    <sheet>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="course_start_date"/>
                                <field name="last_view" attrs="{'invisible': [('last_view', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="course_id"/>
                                <field name="course_end_date"/>
                                <field name="viewed_slides" attrs="{'invisible': [('viewed_slides', '=', 0)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_course_registrations" model="ir.actions.act_window">
            <field name="name">Course Registrations</field>
            <field name="res_model">course.registration</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="action_course_registrations" id="submenu_action_course_registrations" parent="menu_website_course_root" sequence="5"/>

    </data>
</odoo>