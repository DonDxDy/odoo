<?xml version="1.0" ?>
<odoo>
<data>

<!-- assets -->
<template id="assets_editor" inherit_id="website.assets_editor" name="Course Editor">
    <xpath expr="." position="inside">
        <script type="text/javascript" src="/website_slides_sale/static/src/js/website_slides_sale.editor.js"></script>
    </xpath>
</template>

<template id="assets_frontend_course" inherit_id="website.assets_frontend" name="Course">
    <xpath expr="." position="inside">
        <link type="text/less" href="/website_slides_sale/static/src/less/website_slides_sale.less" rel="stylesheet" t-ignore="true"/>
        <script type="text/javascript" src="/website_slides_sale/static/src/js/website_slides_sale.js"></script>
    </xpath>
</template>


<!-- User Navbar TODO: Move this link inside instructor dashboard because if user is not website designer then he/she will not be able to create course -->
<template id="content_new_course" inherit_id="website.user_navbar">
    <xpath expr="//div[@id='o_website_add_page_modal']//ul" position="inside">
        <li groups="website.group_website_designer"><a href="#" data-action="new_course"><i class="fa fa-book"/><p>New Course</p></a></li>
    </xpath>
</template>

<template id="course_dashboard_link" name="Link to frontend portal" inherit_id="website.layout">
    <xpath expr="//li[@id='o_logout']" position="before">
        <li><a href="/course/dashboard" role="menuitem">Course Dashboard</a></li>
    </xpath>
</template>

<!-- add link to the standard footer -->
<template id="course_footer" inherit_id="website.footer_default" name="Footer Course Link">
    <xpath expr="//div[@id='info']//ul[@class='list-unstyled']" position="inside">
        <li>
            <a href="/courses">Courses</a>
        </li>
    </xpath>
</template>

<!-- Channels: no channel found -->
<template id="course_not_found" inherit_id="website_slides.channel_not_found" primary="True">
    <xpath expr="//h2" position="replace">
        <h2>No course created or published yet.</h2>
    </xpath>
</template>

<template id="portal_my_home_menu_courses" name="Portal layout : courses menu entries" inherit_id="website_portal.portal_layout" priority="20">
    <xpath expr="//ul[contains(@class,'o_portal_submenu')]" position="inside">
        <li t-if="course_count" t-att-class="page_name == 'course' and 'active'">
            <a href="/my/courses">Courses</a>
        </li>
    </xpath>
</template>

<template id="portal_my_home_courses" name="Portal My Home : courses entries" inherit_id="website_portal.portal_my_home" priority="20">
    <xpath expr="//div[contains(@class,'o_my_home_content')]" position="inside">
        <h3 t-if="quotation_count" class="page-header">
          <a href="/my/courses">Your Courses
            <small class="ml8">
              <span class='badge'><t t-esc="course_count"/></span>
            </small>
          </a>
        </h3>
    </xpath>
</template>

<template id="portal_my_courses" name="My Courses">
  <t t-call="website_portal.portal_layout">
    <div class="page-header">
        <span class="h3">Your Courses</span>
        <t t-call="website_portal.portal_searchbar"/>
    </div>
    <t t-if="not courses">
        <p>There are currently no courses for your account.</p>
    </t>
    <t t-if="courses">
        <div class="table-responsive">
            <table class="table table-hover o_my_status_table">
                <thead>
                  <tr class="active">
                    <th>Course Name</th>
                    <th>Instructors</th>
                    <th>Course Price</th>
                    <th>Total</th>
                  </tr>
                </thead>
                <t t-foreach="courses" t-as="course">
                    <tr>
                        <td>
                            <a t-attf-href="/course/learn/#{slug(course)}"><t t-esc="course.name"/></a>
                        </td>
                        <td>
                            <t t-set="instructors" t-value="[x.name for x in course.instructor_ids]"/>
                            <span t-esc="', '.join(instructors)"/>
                        </td>
                        <td>
                            <span t-field="course.course_price"></span>
                        </td>
                        <td><span t-field="course.total"/></td>
                    </tr>
                </t>
            </table>
        </div>
        <div t-if="pager" class="o_portal_pager text-center">
          <t t-call="website.pager"/>
        </div>
    </t>
  </t>
</template>

<template id="course_instructor_dashboard" name="Insructor Dashboard">
    <t t-call="website.layout">
        <div class="container mt32 mb32">
            <div class="row course_filters">
                <form action="/course/search_instructor_courses" method="POST" id="search-form" class="form-inline">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input type="text" name="course_name" class="form-control" placeholder="Search your course"/>
                            <span class="input-group-btn">
                                <button class="btn btn-secondary" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-4 scol-sm-offset-2">
                        <div class="dropdown btn-group dropdown_sorty_by">
                            <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown">
                                <span>Sort by</span>
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="/course/search_instructor_courses?sort=asc">
                                        <span><i class="fa fa-sort-alpha-asc"></i></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/course/search_instructor_courses?sort=dsc">
                                        <span><i class="fa fa-sort-alpha-desc"></i></span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row mt32">
                <div class="course_card" style="display: flex; border: 1px solid rgba(0,0,0,.25); background-color: #FFFFFF; min-height: 120px; max-height: 120px;" t-foreach="courses" t-as="course">
                    <div class="col-md-2">
                        <img t-if="course.promoted_slide_id" t-attf-src="/web/image/course.lecture/#{course.promoted_slide_id.id}/image_medium" class="img-responsive oe_slides_channel_thumbnail"/>
                        <img t-if="not course.promoted_slide_id" src="/website_slides/static/src/img/channel-default.jpg" class="img-responsive oe_slides_opacity"/>
                    </div>
                    <div class="col-md-10 course_card_body" style="padding: 10px;">
                        <div class="col-md-8">
                            <div>
                                <strong>
                                    <span t-esc="course.name"></span>
                                </strong>
                            </div>
                            <div class="text-muted">
                                <t t-foreach="course.instructor_ids" t-as="instructor">
                                    <span href="#" t-esc="instructor.name"></span>
                                    <t t-if="instructor_index != len(course.instructor_ids)-1">,</t>
                                </t>
                            </div>
                            <div class="text-muted">
                                <span class="pull-left" t-if="course.website_published">Published</span>
                                <span class="pull-left" t-if="not course.website_published">Draft</span>
                                <span class="pull-right" t-if="course.visibility == 'public'">Free-Public</span>
                                <span class="pull-right" t-if="course.visibility != 'public'"><t t-esc="course.course_price"/></span>
                            </div>
                        </div>
                        <div class="col-md-4" style="border-left: 1px solid rgba(0,0,0,.25)">
                            <div class="text-muted">
                                <div>
                                    <span>
                                        Published Curriculam Items
                                    </span>
                                    <!-- TODO: Get numbers -->
                                    <span style="font-size: 24px;">0</span>
                                </div>
                            </div>
                        </div>
                        <a class="open_manage_course" t-attf-href="/course/manage/#{slug(course)}"></a>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>

<!-- TODO Note: We can use channel's view and use primary=True here -->
<template id="courses" name="Courses">
    <t t-call="website.layout">
        <div class="container mt32">
            <div class="row course_filters">
                <form action="/courses" method="POST" id="search-form" class="form-inline">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="col-sm-6">
                        <select name="category" id="category" class="form-control">
                            <option value="" selected="">
                              Filter by category
                            </option>
                            <option value="all">All Courses</option>
                        </select>
                    </div>
                    <div class="col-sm-4 scol-sm-offset-2">
                        <input type="search" name="search" placeholder="Search" value="" class="form-control"/>
                    </div>
                </form>
            </div>
            <div class="row">
                <t t-foreach="courses" t-as="course">
                    <div t-if="course_index % 4 == 0" class="clearfix"/>
                    <div class="col-sm-3 mt16 mb16">
                        <div class="well well-sm">
                            <div>
                                <a t-attf-href="/courses/#{slug(course)}">
                                    <img t-if="course.promoted_slide_id" t-attf-src="/web/image/course.lecture/#{course.promoted_slide_id.id}/image_medium" class="img-responsive oe_slides_channel_thumbnail"/>
                                    <img t-if="not course.promoted_slide_id" src="/website_slides/static/src/img/channel-default.jpg" class="img-responsive oe_slides_opacity"/>
                                </a>
                            </div>
                            <div>
                                <div class="mt4 pull-right">
                                    <t t-call="website.publish_management">
                                        <t t-set="object" t-value="course"/>
                                        <t t-set="publish_edit" t-value="True"/>
                                        <t t-set="action" t-value="'website_slides_sale.action_course_course'"/>
                                    </t>
                                </div>
                                <h4 class="mt4 mb4" t-att-title="course.name" style="width:55%">
                                    <a t-attf-href="/courses/#{slug(course)}" t-esc="course.name"/>
                                </h4>
                                <span class="label label-warning" t-if="not course.can_see_full">Private course</span>
                            </div>
                            <div>
                                <p class="text-muted oe_no_empty" t-field="course.description"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
            <div class="row text-center">
                <t t-call="website.pager"/>
            </div>
        </div>
    </t>
</template>

<template id="course_details" name="Course Details">
    <t t-call="website.layout">
        <div style="width: 100%; background: linear-gradient(#333,#333,rgba(51,51,51,0)); background-color: rgba(0,0,0,.8); color: #FFFFFF;">
            <div class="container" style="padding-bottom: 15px;">
                <div class="row">
                    <div class="col-md-8 col-xs-12">
                        <div>
                            <h1><t t-esc="course.name"/></h1>
                        </div>
                        <div t-esc="course.course_subtitle"></div>
                        <div>
                            <!-- TODO: Open partner details on anchor tag -->
                            <div>
                                <span>Created By: 
                                    <t t-foreach="course.instructor_ids" t-as="instructor">
                                        <a href="#" t-esc="instructor.name"></a>
                                        <t t-if="instructor_index != len(course.instructor_ids)-1">,</t>
                                    </t>
                                </span>
                            </div>
                            <div t-esc="course.language.name"></div>
                        </div>
                    </div>
                    <div class="col-md-4 col-xs-12">
                        <div class="course_right_column">
                            <div style="display: flex; flex-direction: column; border: none; position: relative;">
                                <a t-attf-href="/courses/#{slug(course)}">
                                    <div class="course_play">
                                        <div class="course_play_button"></div>
                                        <span class="introduction_asset__text">Preview This Course</span>
                                    </div>
                                    <img t-if="course.promoted_slide_id" t-attf-src="/web/image/course.lecture/#{course.promoted_slide_id.id}/image_medium" class="img-responsive oe_slides_channel_thumbnail"/>
                                    <img t-if="not course.promoted_slide_id" src="/website_slides/static/src/img/channel-default.jpg" class="img-responsive oe_slides_opacity"/>
                                </a>
                            </div>
                            <div class="course_right_column_inner" style="padding: 15px 30px;">
                                <div>
                                    <div>
                                        <span t-if="course.visibility == 'public'"><h3>Free</h3></span>
                                        <span t-else="">
                                            <h3 t-field="course.course_price"></h3>
                                        </span>
                                    </div>
                                    <div>
                                        <button t-if="course.visibility == 'public'" class="btn btn-primary" style="width: 100%;">Enroll Now</button>
                                        <div t-else="">
                                            <button style="width: 100%;" class="btn btn-primary">Buy Now</button>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div><strong>Includes:</strong></div>
                                    <ul style="list-style: none; margin: 0px; padding:0px;">
                                        <li>
                                            <i class="fa fa-file-video-o"></i>
                                            <span>10 hours of videos</span>
                                        </li>
                                        <li>
                                            <i class="fa fa-slideshare"></i>
                                            <span>20 Slides</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="left-content container mb32">
            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <!-- Put html field snippet here, for now it is static -->
                    <div style="margin-top: 40px;">
                        <div style="background-color: #f9f9f9; border: 1px solid #dedede; padding: 10px 15px;">
                            <div>
                                <div>What you will get?</div>
                                <div style="display: flex; justify-content: space-between; flex-wrap: wrap; align-items: flex-start;">
                                    <div style="width: 45%; display: flex; align-items: center; margin-bottom: 10px;">
                                        <i class="fa fa-check-circle-o"></i>
                                        <span style="margin-left: 15px;">Over 20 highly detailed manuals &amp; 20 video tutorials with step-by-step "connect-the-dots" instructions.</span>
                                    </div>
                                    <div style="width: 45%; display: flex; align-items: center; margin-bottom: 10px;">
                                        <i class="fa fa-check-circle-o"></i>
                                        <span style="margin-left: 15px;">Over 20 highly detailed manuals &amp; 20 video tutorials with step-by-step "connect-the-dots" instructions.</span>
                                    </div>
                                    <div style="width: 45%; display: flex; align-items: center; margin-bottom: 10px;">
                                        <i class="fa fa-check-circle-o"></i>
                                        <span style="margin-left: 15px;">Over 20 highly detailed manuals &amp; 20 video tutorials with step-by-step "connect-the-dots" instructions.</span>
                                    </div>
                                    <div style="width: 45%; display: flex; align-items: center; margin-bottom: 10px;">
                                        <i class="fa fa-check-circle-o"></i>
                                        <span style="margin-left: 15px;">Over 20 highly detailed manuals &amp; 20 video tutorials with step-by-step "connect-the-dots" instructions.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <div><h3><strong>Description</strong></h3></div>
                    <div class="description">
                        <div t-if="course.description" t-field="course.description"></div>
                        <div t-else=""><strong>No description given on this course.</strong></div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <div><h3><strong>Curriculam For This Course</strong></h3></div>
                    <div class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                     <i class="expand_collapse glyphicon glyphicon-plus"></i>
                                    <a data-toggle="collapse" href="#collapse1">Collapsible panel</a>
                                </h4>
                            </div>
                            <div id="collapse1" class="panel-collapse collapse in" aria-expanded="true">
                                <div class="panel-body">Panel Body</div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                     <i class="expand_collapse glyphicon glyphicon-plus"></i>
                                    <a data-toggle="collapse" href="#collapse2">Collapsible panel</a>
                                </h4>
                            </div>
                            <div id="collapse2" class="panel-collapse collapse">
                                <div class="panel-body">Panel Body</div>
                            </div>
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                     <i class="expand_collapse glyphicon glyphicon-plus"></i>
                                    <a data-toggle="collapse" href="#collapse3">Collapsible panel</a>
                                </h4>
                            </div>
                            <div id="collapse3" class="panel-collapse collapse">
                                <div class="panel-body">Panel Body</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <div><h3><strong>About Instructor</strong></h3></div>
                    <div t-foreach="course.instructor_ids" t-as="instructor" style="display: flex; margin-top: 20px;">
                        <div class="instructor_left">
                            <!-- TODO: move use to instructor page -->
                            <a t-attf-href="#">
                                <img t-if="instructor.image" t-attf-src="/web/image/res.partner/#{instructor.id}/image_medium" class="img-responsive"/>
                                <img t-if="not instructor.image" src="/web/static/src/img/placeholder.png" class="img-responsive"/>
                            </a>
                        </div>
                        <div class="instructor_right" style="margin-left: 30px;">
                            <div>
                                <a href="#" t-esc="instructor.name"></a>
                            </div>
                            <div t-if="instructor.about_details" t-esc="instructor.about_details"></div>
                            <div t-else=""><h5><strong>No details available about instrucotr</strong></h5></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="my_course_details" name="My Course Details">
    <t t-call="website.layout">
        <div class="course_content" style="height: 100%; display: flex;">
            <div class="o_course_navigation col-md-3" style="background-color: #8e6383; padding-right: 0px; padding-left: 0px;">
                <div class="course_top_nav" style="color: #FFFFFF; padding-left: 10px;">
                    <div>
                        <a href="/courses">
                            <i class="fa fa-angle-left"></i>
                            <span style="margin-left: 10px;"><strong>Dashboard</strong></span>
                        </a>
                    </div>
                    <div>
                        <h2 t-esc="course.name"></h2>
                    </div>
                    <ul style="list-style: none; margin: 0px; padding: 0px; margin-bottom: 10px; margin-right: 10px;">
                        <li class="course_achievements">
                            <a href="#" style="display: block;">
                                <i class="fa fa-trophy"></i>
                                <span><strong>Achievemnts &amp; Progress</strong></span>
                                <!-- TODO: add server value -->
                                <span class="pull-right badge" style="background-color: rgba(255,255,255,.1); box-shadow: inset 0 1px 0 0 rgba(0,0,0,.1); padding: 5px 7px;"><strong>0/40</strong></span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="o_course_index">
                    <ul t-if="category_datas" class="" style="list-style: none; padding: 0px; margin: 0px;">
                        <t t-foreach="category_datas" t-as="categ_data">
                            <li class="o_category_menu">
                                <a href="#" t-att-data-category_id="categ_data.get('id')" t-esc="categ_data.get('name')"></a>
                            </li>
                            <t t-foreach="categ_data.get('lectures')" t-as="lecture">
                                <li t-attf-class="o_lecture_menu #{lecture.id == current_lecture.id and 'active' or ''}" t-att-data-lecture_id="lecture.id">
                                    <a href="#">
                                        <div class="o_lecture_name" t-esc="lecture.name"></div>
                                        <div class="o_lecture_status text-right"><i class="fa fa-circle"></i></div>
                                    </a>
                                </li>
                            </t>
                        </t>
                    </ul>
                </div>
            </div>
            <div class="o_course_body col-md-9 col-xs-12" style="padding-left: 0px; padding-right: 0px;">
                <div class="o_lecture_header">
                    <div class="col-xs-hidden col-md-1">
                        <button class="toggle_fullscreen">
                            <i class="fa fa-arrows-alt fa-2x"></i>
                        </button>
                        <button class="toggle_fullscreen hidden-xs" style="display: none;">
                            <i class="fa fa-chevron-circle-right"></i>
                        </button>
                    </div>
                    <div class="col-xs-10 col-md-11 text-center o_course_title">
                        <span t-esc="current_lecture.name"></span>
                    </div>
                </div>
                <div class="course_lecture_content col-xs-12" style="margin-top: 15px;">
                    <!-- Here content of the lecture will come -->
                </div>
            </div>
        </div>
    </t>
</template>

<template id="course_new_form" name="New Course">
    <t t-call="website.layout">
        <div class="container new_course_form mt32 mb32">
            <div class="row">
                <div class="col-xs-2">
                    <a t-attf-href="/courses/#{slug(course)}">
                        <img t-if="course.promoted_slide_id" t-attf-src="/web/image/course.lecture/#{course.promoted_slide_id.id}/image_medium" class="img-responsive oe_slides_channel_thumbnail"/>
                        <img t-if="not course.promoted_slide_id" src="/website_slides/static/src/img/channel-default.jpg" class="img-responsive oe_slides_opacity"/>
                    </a>
                </div>
                <div class="col-xs-8">
                    <h3><span t-esc="course.name"></span></h3>
                    <h4>
                        <t t-foreach="course.instructor_ids" t-as="instructor">
                            <span>
                                <a href="#" t-esc="instructor.name"></a>
                                <t t-if="instructor_index != len(course.instructor_ids)-1">, </t>
                            </span>
                        </t>
                    </h4>
                    <!-- <span>DRAFT</span> -->
                    <t t-call="website.publish_management">
                        <t t-set="object" t-value="course"/>
                        <t t-set="publish_edit" t-value="True"/>
                        <t t-set="action" t-value="'website_slides_sale.action_course_course'"/>
                    </t>
                </div>
            </div>
            <div class="row mt32">
                <div class="col-xs-3">
                    <div class="sidebar" style="border-right: 1px solid #e6e6e6;">
                        <ul role="menu" class="menu" style="list-style: none; padding: 0px; margin: 0px;">
                            <li class="active">
                                <a disable_anchor="true" href="#course_basic_details">
                                    <span>Course Basic Details</span>
                                </a>
                            </li>
                            <li>
                                <a disable_anchor="true" href="#course_preview_video">
                                    <span>Course Preview Video</span>
                                </a>
                            </li>
                            <li>
                                <a disable_anchor="true" href="#course_curriculam">
                                    <span>Course Curriculam</span>
                                </a>
                            </li>
                            <li>
                                <a disable_anchor="true" href="#course_security">
                                    <span>Course Security</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-xs-9">
                    <div id="course_basic_details" class="course_page">
                        <div style="font-size: 36px; font-weight: 500; border-bottom: 1px solid #bfbfbf;" class="mb16">
                            <span>Course Basic Information</span>
                        </div>
                        <p>Enter your basic course information like Course Pre-requisite, Target Audience etc.</p>
                        <div>
                            <div class="form-group">
                                <label for="course_subtitle">Course Substitle</label>
                                <input type="text" name="course_subtitle" id="course_subtitle" placeholder="Master in Odoo" required="True" class="form-control" t-att-value="course.course_subtitle"/>
                            </div>
                            <div class="form-group">
                                <label for="promote_strategy">Promote Strategy</label>
                                <select name="promote_strategy" id="promote_strategy" required="True" class="form-control">
                                    <option value="" t-att-selected="course.promote_strategy == False">Select</option>
                                    <option value="none" t-att-selected="course.promote_strategy == 'none'">No Featured Presentation</option>
                                    <option value="latest" t-att-selected="course.promote_strategy == 'latest'">Latest Published</option>
                                    <option value="most_voted" t-att-selected="course.promote_strategy == 'most_voted'">Most Voted</option>
                                    <option value="most_viewed" t-att-selected="course.promote_strategy == 'most_viewed'">Most Viewed</option>
                                    <option value="custom" t-att-selected="course.promote_strategy == 'custom'">Featured Presentation</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="language">Language</label>
                                <select name="language" id="language" required="True" class="form-control">
                                    <option value="" t-att-selected="not course.language">Select</option>
                                    <t t-foreach="languages" t-as="l">
                                        <option t-att-value="l.id" t-att-selected="l.id == course.language.id"><t t-esc="l.name"/></option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="description">Write your Pre-requisite, Target Audience and Result of Course</label>
                                <textarea name="description" id="description" required="True" class="form-control load_editor">
                                    <t t-esc="course.description"/>
                                </textarea>
                            </div>
                        </div>
                    </div>
                    <div id="course_preview_video" class="course_page">
                        <div style="font-size: 36px; font-weight: 500; border-bottom: 1px solid #bfbfbf;" class="mb16">
                            <span>Course Preview Video</span>
                        </div>
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        Read this Preview Video Requirements
                                        <i class="expand_collapse fa fa-infor-circle"></i>
                                        <a data-toggle="collapse" href="#preview_video_info">
                                            <i class="pull-right expand_collapse fa fa-chevron-down"></i>
                                        </a>
                                    </h4>
                                </div>
                                <div id="preview_video_info" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <p>A preview video should be small in terms of duration, it should be recorded in good quality, qualituy of recoding, sound must be good.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="form-group" t-if="not course.promoted_slide_id">
                                <label for="usr">Upload Your Preview Lecture</label>
                                <div class="input-group">
                                    <input type="file" name="promoted_slide_id" class="form-control" placeholder="Upload Preview File"/>
                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button">Upload</button>
                                    </span>
                                </div>
                            </div>
                            <div class="form-group" t-if="course.promoted_slide_id">
                                <img t-if="course.promoted_slide_id" t-attf-src="/web/image/course.lecture/#{course.promoted_slide_id.id}/image_medium" class="img-responsive oe_slides_channel_thumbnail"/>
                            </div>
                        </div>
                    </div>
                    <div id="course_curriculam" class="course_page">
                        <div style="font-size: 36px; font-weight: 500; border-bottom: 1px solid #bfbfbf;" class="mb16">
                            <span>Course Curriculam</span>
                        </div>
                        <p>Enter your Curriculam here, course slides</p>
                    </div>
                    <div id="course_security" class="course_page">
                        <div style="font-size: 36px; font-weight: 500; border-bottom: 1px solid #bfbfbf;" class="mb16">
                            <span>Course Security</span>
                        </div>
                        <p>Enter course security information.</p>
                    </div>
                </div>
            </div>

            <div class="row mt32">
                <div class="col-xs-12 text-center">
                    <a href="/courses/save_course_details/#{slug(course)}" class="btn btn-primary btn_update_course">
                        Update Course
                    </a>
                </div>
            </div>
        </div>
    </t>
</template>

</data>
