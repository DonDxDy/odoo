<?xml version="1.0" encoding="UTF-8"?>
<template>
    <t t-name="web.recurrent_task" owl="1">
        <div class="o_container-div border mt-2 mb-2">
            <div class="row mt-2 mb-2 mr-2 ml-1">
                <t t-foreach="weekdays" t-as="day">
                    <div class="text-center border font-weight-bold col px-0 pt-1 pb-1 mb-1 ml-1">
                        <t t-esc="day"/>
                    </div>
                </t>
                <div class="w-100"></div>
                <t t-foreach="weekdays" t-as="day">
                    <div class="custom-checkbox check_box-div text-center border col px-0 pl-3 pt-1 pb-1 ml-1">
                        <input
                            type="checkbox"
                            class="custom-control-input position-relative"
                            t-att-id="day"
                            t-att-value="day"
                            t-on-click="_onCheckboxClick"
                            t-att-checked="state.days[day]"
                        />
                        <label class="custom-control-label"></label>
                    </div>
                </t>
            </div>
        </div>
    </t>
</template>
