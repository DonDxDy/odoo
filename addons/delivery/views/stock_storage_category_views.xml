<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_storage_category_form_delivery" model="ir.ui.view">
        <field name="name">stock.storage.category.form.delivery</field>
        <field name="model">stock.storage.category</field>
        <field name="inherit_id" ref="stock.stock_storage_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='product_capacity']" position="after">
                <page string="Package Capacity" name="package_capacity" groups="stock.group_tracking_lot">
                    <field name="package_capacity_ids" context="{'default_storage_category_id': id}">
                        <tree editable="bottom">
                            <field name="package_type_id" required="1"/>
                            <field name="quantity"/>
                            <field name="company_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="stock_storage_category_capacity_tree_delivery" model="ir.ui.view">
        <field name="name">stock.storage.category.capacity.tree.delivery</field>
        <field name="model">stock.storage.category.capacity</field>
        <field name="inherit_id" ref="stock.stock_storage_category_capacity_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="replace">
                <field name="product_id" invisible="context.get('default_product_id')" attrs="{'required': [('package_type_id', '=', False)], 'readonly': [('package_type_id', '!=', False)]}"/>
                <field name="package_type_id" attrs="{'required': [('product_id', '=', False)], 'readonly': [('product_id', '!=', False)]}" invisible="context.get('hide_packaging_type', False)"/>
            </xpath>
        </field>
    </record>
</odoo>
