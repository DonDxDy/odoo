<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="10n_it_add_picking_to_ddt_wizard">
        <field name="name">l10n.it.ddt.add.pickings</field>
        <field name="model">l10n.it.ddt.add.pickings</field>
        <field name="arch" type="xml">
            <form string="DDT From Picking">
                <field name="ddt_id"/>
            
                <footer>
                    <button name="do_print_ddt" string="ADD" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
  
    <record id="action_ddt_from_pickings" model="ir.actions.act_window">
        <field name="name">Link with existing DDT</field>
        <field name="res_model">l10n.it.ddt.add.pickings</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="10n_it_add_picking_to_ddt_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>

