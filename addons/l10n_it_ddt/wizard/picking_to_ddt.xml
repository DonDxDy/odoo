<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="10n_it_to_picking_to_ddt_wizard">
        <field name="name">l10n.it.ddt.to.pickings</field>
        <field name="model">l10n.it.ddt.to.pickings</field>
        <field name="arch" type="xml">
            <form string="DDT From Picking">
                <field name="ddt_id" options="{'no_create_edit': True}" invisible="context.get('create_ddt')"/>
                <field name="picking_ids" options="{'no_create_edit': True}" invisible="not context.get('create_ddt')"/>
                <footer>
                    <button name="add_ddt" string="ADD DDT" type="object" class="oe_highlight" invisible="context.get('create_ddt')"/>
                    <button name="create_ddt" string="Create DDT" type="object" class="oe_highlight" invisible="not context.get('create_ddt')"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
  
    <record id="action_ddt_link_with_pickings" model="ir.actions.act_window">
        <field name="name">Link with existing DDT</field>
        <field name="res_model">l10n.it.ddt.to.pickings</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="10n_it_to_picking_to_ddt_wizard"/>
        <field name="target">new</field>
    </record>

    <record id="action_ddt_create_with_pickings" model="ir.actions.act_window">
        <field name="name">Create DDT</field>
        <field name="res_model">l10n.it.ddt.to.pickings</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="10n_it_to_picking_to_ddt_wizard"/>
        <field name="target">new</field>
        <field name="context">{'create_ddt': True}</field>
    </record>


     <act_window id="action_add_pickingd_to_ddt"
            multi="True"
            key2="client_action_multi" name="Add Pickings to DDT"
            res_model="l10n.it.ddt.to.pickings" src_model="stock.picking"
            view_mode="form" target="new" view_type="form" context="{'create_ddt': True}"/>
</odoo>

