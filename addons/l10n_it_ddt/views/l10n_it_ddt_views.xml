<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="0">
  <record id="l10n_it_ddt_tree" model="ir.ui.view">
    <field name="name">l10n.it.ddt</field>
    <field name="model">l10n.it.ddt</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="date"/>
        <field name="date_done"/>
        <field name="package_id"/>
       <!--  <field name="state"/> -->
        <field name="package_id"/>
        <field name="company_id"/>
        <field name="orgin"/>
        <field name="package_no"/>
        <field name="weight"/>
        <field name="volume"/>
      </tree>
    </field>
  </record>

  <record id="l10n_it_ddt_form" model="ir.ui.view">
    <field name="name">l10n.it.ddt</field>
    <field name="model">l10n.it.ddt</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="date"/>
              <field name="date_done"/>
              <field name="package_id"/>
              <field name="transfers_reason"/>
              <field name="quantity"/>
            </group>
            <group>
              <field name="package_id"/>
              <field name="company_id"/>
              <field name="orgin"/>
              <field name="package_no"/>
              <field name="weight"/>
              <field name="volume"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.actions.act_window" id="l10n_it_ddt_action">
    <field name="name">l10n.it.ddt</field>
    <field name="res_model">l10n.it.ddt</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem action="l10n_it_ddt_action" id="l10n_it_ddt_menu"/>

</odoo>
