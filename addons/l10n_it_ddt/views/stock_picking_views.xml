<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_picking_form_inherit_l10n_it_ddt" model="ir.ui.view">
        <field name="name">stock.picking.form.l10n.it.ddt</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="l10n_it_ddt_id" string="DDt No" attrs="{'invisible':[('state','!=','done')]}"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="l10n_it_ddt_id" string="DDt No"/>
            </xpath>
            <xpath expr="//button[@name='button_validate']" position="after">
                <button name="%(action_ddt_from_pickings)d" string="DDT From Packing" type="action"/>
            </xpath>
        </field>
    </record>
</odoo>