<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadIcon" t-inherit-mode="extension">
        <xpath expr="//*[@name='noImStatusCondition']" position="before">
            <t t-elif="thread.$$$correspondent(mself).$$$im_status(mself) === 'leave_online'">
                <div class="o-ThreadIcon-leaveOnline fa fa-plane" title="Online"/>
            </t>
            <t t-elif="thread.$$$correspondent(mself).$$$im_status(mself) === 'leave_offline'">
                <div class="o-ThreadIcon-leaveOffline fa fa-plane" title="Out of office"/>
            </t>
        </xpath>
    </t>
</templates>
