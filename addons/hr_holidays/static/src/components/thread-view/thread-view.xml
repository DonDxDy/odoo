<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadView" t-inherit-mode="extension">
        <xpath expr="//*[@name='loadingCondition']" position="before">
            <t t-if="threadView.$$$thread(mself).$$$correspondent(mself) and threadView.$$$thread(mself).$$$correspondent(mself).$$$out_of_office_date_end(mself)">
                <div class="o-ThreadView-outOfOffice alert alert-primary" t-esc="getOutOfOfficeText()" role="alert"/>
            </t>
        </xpath>
    </t>
</templates>
