<odoo>
    <record id="hr_accrual_plan_view_form" model="ir.ui.view">
        <field name="name">hr.accrual.plan.form</field>
        <field name="model">hr.accrual.plan</field>
        <field name="arch" type="xml">
            <form string="Accrual Plan">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Accrual plan"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                        <label for="accrual_ids"/>
                        <field name="accrual_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_accrual_plan_view_tree" model="ir.ui.view">
        <field name="name">hr.accrual.plan.tree</field>
        <field name="model">hr.accrual.plan</field>
        <field name="arch" type="xml">
            <tree string="Accrual Plan">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hr_accrual_plan">
        <field name="name">Accrual Plans</field>
        <field name="res_model">hr.accrual.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new accrual plan
          </p>
        </field>
    </record>

    <record id="hr_accrual_view_form" model="ir.ui.view">
        <field name="name">hr.accrual.form</field>
        <field name="model">hr.accrual</field>
        <field name="arch" type="xml">
            <form string="Accrual Name">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                <group class="col-md-10">
                    <label for="start_count" string="Start Date"/>
                    <div class="o_row">
                           <field name="start_count"/>
                           <field name="start_type"/>
                           <span> after employee's start date</span>
                    </div>
                    <label for="added_hours" string="Accrue of"/>
                    <div class="o_row">
                            <field name="added_hours"/>
                            <span> hours per worked hours</span>
                    </div>
                    <label for="frequency" string="Accrual period"/>
                    <div class="o_row">
                         <field name="frequency"/>
                         <field name="start_of_period"/>
                         <span> of the accrual period</span>
                    </div>
                    <label for="maximum" string="Max Accrual"/>
                    <div class="o_row">
                           <field name="maximum"/>
                           <field name="maximum_type"/>
                            <span> by </span>
                           <field name="maximum_period"/>
                    </div>
                  </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_accrual_view_tree" model="ir.ui.view">
        <field name="name">hr.accrual.tree</field>
        <field name="model">hr.accrual</field>
        <field name="arch" type="xml">
            <tree string="Accrual Plan Line">
                <field name="name"/>
                <field name="added_hours"/>
                <field name="frequency"/>
            </tree>
        </field>
    </record>
    <record id="hr_employee_view_form_inherit_accrual" model="ir.ui.view">
        <field name="name">hr.employee.form.accrual</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="inside">
                <group string="Time Off" name="timeoff" groups="hr_holidays.group_allow_accrual">
                    <label for="accrual_plan_id"/>
                        <div>
                            <field name="accrual_plan_id" class="oe_inline"/>
                        </div>
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_holidays_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'hr_holidays'}</field>
    </record>

</odoo>