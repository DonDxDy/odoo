<odoo>
    <record id="hr_accrual_plan_view_form" model="ir.ui.view">
        <field name="name">hr.accrual.plan.form</field>
        <field name="model">hr.accrual.plan</field>
        <field name="arch" type="xml">
            <form string="Accrual Plan">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Accrual plan"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                        <label for="line_ids"/>
                        <field name="line_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_accrual_plan_view_tree" model="ir.ui.view">
        <field name="name">hr.accrual.plan.tree</field>
        <field name="model">hr.accrual.plan</field>
        <field name="arch" type="xml">
            <tree string="Accrual Plan">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_accrual_plan" model="ir.actions.act_window">
        <field name="name">Accrual Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.accrual.plan</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <record id="hr_accrual_plan_line_view_form" model="ir.ui.view">
        <field name="name">hr.accrual.plan.line.form</field>
        <field name="model">hr.accrual.plan.line</field>
        <field name="arch" type="xml">
            <form string="Accrual Plan Line">
                <sheet>
                <group>
                    <!-- START -->
                    <div class="o_row">
                           Start <field name="start_count" class="oe_inline font-weight-bold ml-2"/>
                           <field name="start_type"  class="oe_inline font-weight-bold ml-2"/>  after start date
                    </div>
                    <br/>
                    <!-- ADDED HOURS -->
                    <div class="o_row mt4">
                            Add <field name="added_hours" class="oe_inline font-weight-bold ml-2"/> hours of time off
                            <field name="frequency" class="oe_inline font-weight-bold ml-2"/>
                    </div>
                    <br/>
                    <!-- WEEKLY or EVERY OTHER WEEKS -->
                    <div class="o_row ml8  mt4" attrs="{'invisible': [('frequency', '!=', 'weekly'),('frequency', '!=', 'every other week')]}">
                            <span> on <field name="period_weekday" class="oe_inline font-weight-bold ml-2"/></span>
                            <span attrs="{'invisible': [('frequency', '!=', 'every other week')]}">
                                Which weeks ?
                                <field name="period_even_or_odd_week"  class="oe_inline font-weight-bold ml-2"/>
                            </span>
                    </div>
                    <br attrs="{'invisible': [('frequency', '!=', 'weekly'),('frequency', '!=', 'every other week')]}" />
                    <!-- START OF THE FIRST PERIOD -->
                    <div class="o_row ml8 mt4" attrs="{'invisible': [('frequency', '!=', 'monthly'),('frequency','!=','twice a month'),('frequency','!=','twice a year'),('frequency','!=','quarterly'),('frequency','!=','yearly')]}">
                            <span> on the <field name="period_day_1" class="oe_inline font-weight-bold ml-2"/></span>
                            <span attrs="{'invisible': [('frequency','!=','twice a year'),('frequency','!=','quarterly'),('frequency','!=','yearly')]}">
                                day of <field name="period_month_1" class="oe_inline font-weight-bold ml-2"/>
                            </span>
                    </div>
                    <br attrs="{'invisible': [('frequency', '!=', 'monthly'),('frequency','!=','twice a month'),('frequency','!=','twice a year'),('frequency','!=','quarterly'),('frequency','!=','yearly')]}"/>
                    <!-- START OF THE SECOND PERIOD -->
                    <div class="o_row ml8 mt4" attrs="{'invisible': [('frequency','!=','twice a month'),('frequency','!=','twice a year'),('frequency','!=','quarterly')]}">
                            <span>
                                and the <field name="period_day_2"  class="oe_inline font-weight-bold ml-2"/>
                            </span>
                            <span attrs="{'invisible': [('frequency','!=','twice a year'),('frequency','!=','quarterly')]}">
                                 day of <field name="period_month_2" class="oe_inline font-weight-bold ml-2"/>
                            </span>
                    </div>
                    <br  attrs="{'invisible': [('frequency','!=','twice a month'),('frequency','!=','twice a year'),('frequency','!=','quarterly')]}"/>
                    <!-- START OF THE THIRD PERIOD -->
                    <div class="o_row ml8 mt4" attrs="{'invisible': [('frequency','!=','quarterly')]}">
                            <span>
                                and the <field name="period_day_3" class="oe_inline font-weight-bold ml-2"/>
                            
                                 day of <field name="period_month_3" class="oe_inline font-weight-bold ml-2"/>
                            </span>
                    </div>
                    <br attrs="{'invisible': [('frequency','!=','quarterly')]}" />
                    <!-- START OF THE LAST PERIOD -->
                    <div class="o_row ml8 mt4" attrs="{'invisible': [('frequency', '!=', 'quarterly')]}">
                            <span >
                                and the <field name="period_day_4" class="oe_inline font-weight-bold ml-2"/>
                                day of <field name="period_month_4" class="oe_inline font-weight-bold ml-2"/>
                            </span>
                    </div>
                    <br attrs="{'invisible': [('frequency','!=','quarterly')]}" />
                    <!-- MAXIMUM HOURS -->
                    <div class="o_row mt4">
                            <label for="maximum_hours"/>
                           <field name="maximum_hours" class="font-weight-bold"/>
                    </div>
                    <br/>
                    <!-- NEGATIVE HOURS -->
                    <div class="o_row mt4">
                           <label for="allow_negative_hours"/>
                           <field name="allow_negative_hours" class="font-weight-bold"/>
                    </div>
                    <br/>
                    <!-- CARRYOVER -->
                    <div class="o_row mt4">
                            <label for="carryover_type"/>
                           <field name="carryover_type" class="font-weight-bold"/>
                             <!-- Carryover <field name="carryover_type"  class=" ml-2"/> -->
                            <field name="carryover_amount"  class="oe_inline ml-2 font-weight-bold" attrs="{'invisible': [('carryover_type', '!=', 'until')]}"/>
                    </div>
                    </group>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_accrual_plan_line_view_tree" model="ir.ui.view">
        <field name="name">hr.accrual.plan.line.tree</field>
        <field name="model">hr.accrual.plan.line</field>
        <field name="arch" type="xml">
            <tree string="Accrual Plan Line">
                <field name="start_count"/>
                <field name="start_type"/>
                <field name="added_hours"/>
                <field name="frequency"/>
                <field name="maximum_hours"/>
                <field name="allow_negative_hours"/>
                <field name="carryover_type"/>
            </tree>
        </field>
    </record>
</odoo>