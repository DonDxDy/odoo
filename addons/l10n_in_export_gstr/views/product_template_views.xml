<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="l10n_in_export_gstr.product_template_hs_code">
        <field name="name">l10n_in_export_gstr.product.template.form.hs_code</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="l10n_in_hsn_code" position="after">
                <field name="hsn_description" attrs="{'required':[('l10n_in_hsn_code','=',False)]}"/>
            </field>
            <group name="bill" position="inside">
                <field name="is_eligible_for_itc"/>
            </group>
            <div name="options" position="inside">
                <div attrs="{'invisible':[('type','=', 'service')]}">
                    <field name="is_asset"/>
                    <label for="is_asset"/>
                </div>
            </div>
        </field>
    </record>
</odoo>
