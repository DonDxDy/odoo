<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_invoice_form_inherit_l10n_in_export_gstr" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.l10n.in.export.gstr</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="gst_exports_type" attrs="{'invisible':[('type', '!=', 'out_invoice')]}"/>
                <field name="reverse_charge" attrs="{'invisible':[('type', 'in', ['out_refund','in_refund'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="account_invoice_supplier_form_inherit_l10n_in_export_gstr" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.l10n.in.export.gstr</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="is_eligible_for_itc"/>
                <field name="itc_percentage" attrs="{'readonly':[('is_eligible_for_itc', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="gst_import_type"/>
                <field name="reverse_charge" attrs="{'invisible':[('type', 'in', ['out_refund','in_refund'])]}"/>
            </xpath>
        </field>
    </record>

</odoo>
