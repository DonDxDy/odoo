<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="export_gst_return_view_form" model="ir.ui.view">
        <field name="name">export.gst.return.form</field>
        <field name="model">export.gst.return</field>
        <field name="arch" type="xml">
        <form string="Export GSTR xls">
            <group>
                <group>
                    <field name="gst_return_type" invisible="1"/>
                </group>
            </group>
            <group>
                <group>
                    <field name="month"/>
                </group>
                <group>
                    <field name="year"/>
                </group>
            </group>
            <group>
                <group>
                    <field name="export_summary"/>
                </group>
            </group>
            <footer>
                <button name="export_gstr" string="Export(CSV)" type="object" class="btn-primary o_gst_export"/>
                <button string="Cancel" class="btn-default" special="cancel" />
            </footer>
        </form>
        </field>
    </record>

    <record id="export_gstr_one_return_action" model="ir.actions.act_window">
        <field name="name">Export GSTR-1</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">export.gst.return</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_gst_return_type':'gstr1'}</field>
    </record>

    <menuitem
        name="Export GSTR-1"
        parent="l10n_in.account_reports_in_statements_menu"
        sequence="2"
        action="export_gstr_one_return_action"
        id="menu_export_gstr_one_return_xls"
        />

    <record id="export_gstr_two_return_action" model="ir.actions.act_window">
        <field name="name">Export GSTR-2</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">export.gst.return</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_gst_return_type':'gstr2'}</field>
    </record>

    <menuitem
        name="Export GSTR-2"
        parent="l10n_in.account_reports_in_statements_menu"
        sequence="3"
        action="export_gstr_two_return_action"
        id="menu_export_gstr_two_return_xls"
        />

</odoo>
