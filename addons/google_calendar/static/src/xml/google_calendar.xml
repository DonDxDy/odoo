<?xml version="1.0" encoding="UTF-8"?>
<template>
    <t t-name="google.calendar.sidebar" t-inherit="web.CalendarRenderer" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[@class='o_calendar_sidebar']/div[@t-ref='calendar-mini']" position="after">
            <button t-if="props.model === 'calendar.event'" type="button"
                class="o_google_sync_button oe_button btn btn-secondary"
                t-att-disabled="isDisabled.value" t-on-click="_onSyncCalendar">
                <img src="/google_calendar/static/src/img/calendar_32.png"/>
                Sync with <b>Google</b>
            </button>
        </xpath>
    </t>
</template>
