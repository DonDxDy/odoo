<odoo>
    <record id="message_view_form" model="ir.ui.view">
        <field name="name">message form</field>
        <field name="model">im_chatbot.message</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Message" />
                        <group>
                            <field name="answer_type" />
                            <field name="answer_ids" attrs="{'invisible': [('answer_type', '!=', 'selection' )] }" />
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
