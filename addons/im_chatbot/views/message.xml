<odoo>
    <record id="message_view_form" model="ir.ui.view">
        <field name="name">message form</field>
        <field name="model">im_chatbot.script</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Message" />
                        <group>
                            <field name="answer_type" />
                            <field
                                name="answer_ids"
                                attrs="{'invisible': [('answer_type', '!=', 'selection' )] }"
                                widget="many2many_tags"
                            />
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="message_view_tree" model="ir.ui.view">
        <field name="name">Message Tree view</field>
        <field name="model">im_chatbot.script</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="answer_type" />
                <field name="answer_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>

</odoo>
