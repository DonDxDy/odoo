<odoo>

    <!-- Main window, chatbot list -->
    <record model="ir.actions.act_window" id="chatbots_main">
        <field name="name">Chatbots</field>
        <field name="res_model">im_chatbot.chatbot</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first chatbot !
            </p>
        </field>
    </record>

    <record model="ir.ui.view" id="im_chatbot.list">
        <field name="name">im_chatbot list</field>
        <field name="model">im_chatbot.chatbot</field>
        <field name="arch" type="xml">
            <tree>
                <field name="livechat_username"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Extend the livechat_channel form view to add chatbot counter -->
    <record id="extend_channel_form_view" model="ir.ui.view">
        <field name="name">Channel Chatbot</field>
        <field name="model">im_livechat.channel</field>
        <field name="inherit_id" ref="im_livechat.im_livechat_channel_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" icon="fa-android">
                    prout
                    <!-- <field
                         string="Chatbots"
                         name="nb_chatbot"
                         widget="statinfo"
                         /> -->
                </button>
            </xpath>
            <xpath expr="//page[last()]" position="after">
                <page string="Chatbots">
                    <field name="chatbot_id" />
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="im_chatbot.form">
        <field name="name">im_chatbot form</field>
        <field name="model">im_chatbot.chatbot</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="test_bot" type="object" class="btn btn-secondary" string="Test this bot" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="livechat_username" string="Bot name" />
                    </group>
                    <notebook>
                        <page string="Script">
                            <field name="message_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Main windows inside the livechat configuration module -->
    <menuitem
        id="chatbots"
        name="Chatbots"
        parent="im_livechat.livechat_config"
        action="chatbots_main"
        groups="im_livechat.im_livechat_group_user"
        sequence="20"
    />

</odoo>
