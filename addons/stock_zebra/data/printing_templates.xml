<t t-if="product.barcode ">
^FO100,100^BY3
^BCN,100,Y,N,N
^FD<t t-raw="product.barcode"/>^FS
</t>
^XZ
</t>
      </template>

            <report id="label_barcode_product_product"
                model="product.product"
                string="Product Barcode (ZPL)"
                name="stock_zebra.label_barcode_product_product_view"
                file="stock_zebra.label_barcode_product_product_view"
                report_type="qweb-other"
                />

                <template id="label_barcode_product_product_view">
                            <t t-foreach="docs" t-as="product">
^XA
^FO100,50
^A0N,44,33^FD<t t-raw="product.display_name"/>^FS
<t t-if="product.barcode">
