<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      <report id="label_product_template"
          model="product.template"
          string="Product Label (ZPL)"
          name="stock_zebra.label_product_template_view"
          file="stock_zebra.label_product_template_view"
          report_type="qweb-other"
          />

      <template id="label_product_template_view">
                  <t t-foreach="docs" t-as="product">
^XA
^FO100,50
^A0N,44,33^FD<t t-raw="product.display_name"/>^FS
^FO100,100
<t t-if="product.currency_id.position == 'after'">
^CI28
^A0N,44,33^FH^FDPrice: <t t-esc="product.list_price" t-options='{"widget": "float", "precision": 2}'/><t t-raw="product.currency_id.symbol"/>^FS
</t>
<t t-if="product.currency_id.position == 'before'">
^CI28
^A0N,44,33^FH^FDPrice: <t t-raw="product.currency_id.symbol"/><t t-esc="product.list_price" t-options='{"widget": "float", "precision": 2}'/>^FS
</t>
<t t-if="product.barcode">
^FO100,150^BY3
^BCN,100,Y,N,N
^FD<t t-raw="product.barcode"/>^FS
</t>
^XZ
</t>
      </template>

        <report id="label_product_product"
            model="product.product"
            string="Product Label (ZPL)"
            name="stock_zebra.label_product_product_view"
            file="stock_zebra.label_product_product_view"
            report_type="qweb-other"
            />

            <template id="label_product_product_view">
                        <t t-foreach="docs" t-as="product">
^XA
^FO100,50
^A0N,44,33^FD<t t-raw="product.display_name"/>^FS
^FO100,100
<t t-if="product.currency_id.position == 'after'">
^CI28
^A0N,44,33^FH^FDPrice: <t t-esc="product.list_price" t-options='{"widget": "float", "precision": 2}'/><t t-raw="product.currency_id.symbol"/>^FS
</t>
<t t-if="product.currency_id.position == 'before'">
^CI28
^A0N,44,33^FH^FDPrice: <t t-raw="product.currency_id.symbol"/><t t-esc="product.list_price" t-options='{"widget": "float", "precision": 2}'/>^FS
</t>
<t t-if="product.barcode">
^FO100,150^BY3
^BCN,100,Y,N,N
^FD<t t-raw="product.barcode"/>^FS
</t>
^XZ
</t>
      </template>

            <report id="label_barcode_product_template"
                model="product.template"
                string="Product Barcode (ZPL)"
                name="stock_zebra.label_barcode_product_template_view"
                file="stock_zebra.label_barcode_product_template_view"
