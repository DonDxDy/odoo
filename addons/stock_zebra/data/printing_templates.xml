          <report id="label_lot_template"
              model="stock.production.lot"
              string="Lot/Serial Number (ZPL)"
              name="stock_zebra.label_lot_template_view"
              file="stock_zebra.label_lot_template_view"
              report_type="qweb-other"
              />

              <template id="label_lot_template_view">
                          <t t-foreach="docs" t-as="lot">
^XA
^FO100,50
^A0N,44,33^FD<t t-raw="lot.product_id.display_name"/>^FS
^FO100,100
^A0N,44,33^FDLN/SN: <t t-raw="lot.name"/>^FS
^FO100,150^BY3
^BCN,100,Y,N,N
^FD<t t-raw="lot.name"/>^FS
^XZ
</t>
      </template>

            <report id="label_transfer_template"
                model="stock.picking"
                string="Barcodes (ZPL)"
                name="stock_zebra.label_transfer_template_view"
                file="stock_zebra.label_transfer_template_view"
                report_type="qweb-other"
                />

                <template id="label_transfer_template_view">
                            <t t-foreach="docs" t-as="picking">

<t t-foreach="picking.move_lines" t-as="move">
<t t-foreach="move.move_line_ids" t-as="move_line">
<t t-if="move_line.product_uom_id.category_id.measure_type == 'unit'">
    <t t-set="qty" t-value="int(move_line.qty_done)"/>
</t>
<t t-else="">
    <t t-set="qty" t-value="1"/>
</t>
<t t-foreach="range(qty)" t-as="item">
^XA
^FO100,50
^A0N,44,33^FD<t t-raw="move_line.product_id.display_name"/>^FS
^FO100,100
<t t-if="move_line.product_id.tracking != 'none' and move_line.lot_name">
^A0N,44,33^FDLN/SN: <t t-raw="move_line.lot_name"/>^FS
^FO100,150^BY3
^BCN,100,Y,N,N
^FD<t t-raw="move_line.lot_name"/>^FS
</t>
<t t-if="move_line.product_id.tracking == 'none' and move_line.product_id.barcode">
^BCN,100,Y,N,N
^FD<t t-raw="move_line.product_id.barcode"/>^FS
</t>
^XZ
</t>
</t>
</t>
</t>
      </template>
