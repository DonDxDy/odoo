<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- we add here a file to the assets_backent bundle so the widget will be available in the web client -->
    <template id="assets_backend" inherit_id="web.assets_backend" name="Demo backend assets">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/demo/static/src/js/large_float.js"></script>
        </xpath>
    </template>

    <!-- we add here a file to the test bundle so it will properly load it -->
    <template id="qunit_suite" name="demo_tests" inherit_id="web.qunit_suite">
        <xpath expr="//t[@t-set='head']" position="inside">
            <script type="text/javascript" src="/demo/static/tests/large_float_tests.js"></script>
        </xpath>
    </template>

</odoo>

