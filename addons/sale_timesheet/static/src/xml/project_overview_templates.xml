<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <div t-name="sale_timesheet.ProjectOverviewMenu" class="btn-group o_dropdown">
        <button class="o_dropdown_toggler_btn btn btn-secondary dropdown-toggle" data-toggle="dropdown">
            <span t-attf-class="fa {{widget.icon}}"/> <t t-esc="widget.title"/>
        </button>
        <div class="dropdown-menu o_dropdown_menu" role="menu">
            <t t-foreach="widget.presets" t-as="preset">
                <div t-attf-class="o_menu_item dropdown-item o_poject_filter_preset {{preset.is(widget.value) ?  'selected': 'cc'}}" t-att-id="preset.domId">
                    <t t-esc="preset.title"/>
                </div>
            </t>
            <div class="dropdown-divider" role="separator" />
            <div class="dropdown-item-text o_project_overview_filter">
            </div>
        </div>
    </div>

    <div t-name="sale_timesheet.ProjectOverviewMenu" class="btn-group o_dropdown">
        <button class="o_dropdown_toggler_btn btn btn-secondary dropdown-toggle" data-toggle="dropdown">
            <span t-attf-class="fa {{widget.icon}}"/> <t t-esc="widget.title"/>
        </button>
        <div class="dropdown-menu o_dropdown_menu" role="menu">
            <t t-foreach="widget.presets" t-as="preset">
                <div t-attf-class="o_menu_item dropdown-item o_poject_filter_preset {{preset.is(widget.value) ?  'selected': 'cc'}}" t-att-id="preset.domId">
                    <t t-esc="preset.title"/>
                </div>
            </t>
            <div class="dropdown-divider" role="separator" />
            <div class="dropdown-item-text o_project_overview_filter">
            </div>
        </div>
    </div>

</templates>


