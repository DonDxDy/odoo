<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_pricelist_page">
        <t t-set="is_product_tmpl" t-value="active_model == 'product.template'"/>
        <div class="container bg-white p-4 my-4">
            <div class="row my-3">
                <div class="col-12">
                    <h2 t-if="is_html_type">
                        Pricelist:
                        <a href="#" class="o_action" data-model="product.pricelist" t-att-data-res-id="pricelist.id">
                            <t t-esc="pricelist.display_name"/>
                        </a>
                    </h2>
                    <h2 t-else="">
                        Pricelist: <t t-esc="pricelist.display_name"/>
                    </h2>
                    <h6>
                        Quantities: <strong t-esc="quantity"/>
                    </h6>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Products</th>
                                <th class="text-right">Price Per Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="products" t-as="product">
                                <tr t-att-class="is_product_tmpl and 'bg-100' or None">
                                    <td t-att-class="is_product_tmpl and 'font-weight-bold' or None">
                                        <a t-if="is_html_type" href="#" class="o_action" t-att-data-model="active_model" t-att-data-res-id="product['id']">
                                            <t t-esc="product['name']"/>
                                        </a>
                                        <t t-else="" t-esc="product['name']"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="product['price']" t-options='{"widget": "monetary", "display_currency": pricelist.currency_id}'/>
                                    </td>
                                </tr>
                                <t t-if="is_product_tmpl">
                                    <tr t-foreach="product['variants']" t-as="variant">
                                        <td>
                                            <a t-if="is_html_type" href="#" class="o_action ml-4" data-model="product.product" t-att-data-res-id="variant['id']">
                                                <t t-esc="variant['display_name']"/>
                                            </a>
                                            <span t-else="" class="ml-4" t-esc="variant['display_name']"/>
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="variant['price']" t-options='{"widget": "monetary", "display_currency": pricelist.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </template>

    <template id="report_pricelist">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-call="product.report_pricelist_page"/>
            </div>
            <p style="page-break-before:always;"> </p>
        </t>
    </template>

</odoo>
