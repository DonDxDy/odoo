<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-extend="website_event.customize_options">
        <t t-jquery="a[name='display-website-menu']" t-operation="after">
            <a href="#" name="display-location" class="dropdown-item" role="menuitem">
                <label class="o_switch" for="display-location">
                    <input id="display-location" type="checkbox"/>
                    <span/>
                    Display Location
                </label>
            </a>
            <a href="#" name="display-agenda" class="dropdown-item" role="menuitem">
                <label class="o_switch" for="display-agenda">
                    <input id="display-agenda" type="checkbox"/>
                    <span/>
                    Display Agenda
                </label>
            </a>
        </t>
    </t>

</templates>
