<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Add action entry in the Action Menu for Events -->
    <record id="calendar_event_act_window_sms_composer_mass" model="ir.actions.act_window">
        <field name="name">Send SMS</field>
        <field name="res_model">sms.composer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_composition_mode': 'mass',
            'default_res_id': active_id,
        }</field>
    </record>

    <record id="view_calendar_event_tree_inherited" model="ir.ui.view">
        <field name="name">calendar.event.tree.calendar_sms</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <header>
                    <button name="%(calendar_event_act_window_sms_composer_mass)d" type="action"
                            string="Send SMS"/>
                </header>
            </xpath>
        </field>
    </record>

    <record id="view_calendar_event_form_inherited" model="ir.ui.view">
        <field name="name">calendar.event.form.calendar_sms</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='send_buttons']" position="inside">
                <button name="action_SMS" help="Send SMS to attendees" type="object" string="SMS" icon="fa-mobile"/>
            </xpath>
        </field>
    </record>

</odoo>
