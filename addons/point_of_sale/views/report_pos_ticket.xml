<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_pos_ticket">
        <t t-call="web.basic_layout">
            <div class="page">
            <link rel="stylesheet" type="text/css" href="/point_of_sale/static/src/css/report_pos_ticket.css"/>
                <t t-foreach="docs" t-as="receipt">
                    <div class="text-center"><img t-if="receipt.company_id.logo" t-att-src="image_data_uri(receipt.company_id.logo)" style="max-height: 45px;" alt="Logo"/></div>
                    <t t-raw="receipt.pos_ticket_html"/>
                    <div class="pos-order-ref text-center mt-3" style="page-break-inside:avoid">
                        <span t-field="receipt.pos_reference"/><br/>
                        <span t-field="receipt.date_order"/>
                    </div>
                </t>
            </div>
        </t>
    </template>

</odoo>
