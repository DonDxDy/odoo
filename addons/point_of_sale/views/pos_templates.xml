<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="index" name="POS Index">&lt;!DOCTYPE html&gt;
<html>
    <head>
        <title>Odoo POS</title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta http-equiv="content-type" content="text/html, charset=utf-8" />

        <meta name="viewport" content=" width=1024, user-scalable=no"/>
        <meta name="apple-mobile-web-app-capable" content="yes"/>
        <meta name="mobile-web-app-capable" content="yes"/>

        <link rel="shortcut icon"    sizes="196x196" href="/point_of_sale/static/src/img/touch-icon-196.png"/>
        <link rel="shortcut icon"    sizes="128x128" href="/point_of_sale/static/src/img/touch-icon-128.png"/>
        <link rel="apple-touch-icon"                 href="/point_of_sale/static/src/img/touch-icon-iphone.png"/>
        <link rel="apple-touch-icon" sizes="76x76"   href="/point_of_sale/static/src/img/touch-icon-ipad.png"/>
        <link rel="apple-touch-icon" sizes="120x120" href="/point_of_sale/static/src/img/touch-icon-iphone-retina.png"/>
        <link rel="apple-touch-icon" sizes="152x152" href="/point_of_sale/static/src/img/touch-icon-ipad-retina.png"/>

        <style> body { background: #222; } </style> 

        <link rel="shortcut icon" href="/web/static/src/img/favicon.ico" type="image/x-icon"/>

        <script type="text/javascript">
            var odoo = {
                csrf_token: "<t t-esc="request.csrf_token(None)"/>",
                session_info: <t t-raw="session_info"/>,
            };
        </script>

        <t t-call-assets="web.assets_common" t-css="false"/>
        <t t-call-assets="web.assets_backend" t-css="false"/>
        <t t-call-assets="web_editor.summernote" t-css="false"/>
        <t t-call-assets="web_editor.assets_editor" t-css="false"/>
        <t t-call-assets="point_of_sale.assets"/>

        <script type="text/javascript" id="loading-script" t-raw="init">
            odoo.define('web.web_client', function (require) {
                var WebClient = require('web.AbstractWebClient');
                var web_client = new WebClient();

                web_client._title_changed = function() {};
                web_client.show_application = function() {
                    return web_client.action_manager.do_action("pos.ui");
                };

                $(function () {
                    web_client.setElement($(document.body));
                    web_client.start();
                });
                return web_client;
            });
        </script>
    </head>
    <body>
        <div class="o_main_content"/>
    </body>
</html>
</template>

<template id="extra_head">
    <link href="/web/static/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/point_of_sale/static/src/css/customer_facing_display.css" rel="stylesheet"/>
    <style type="text/css">
        /* allow content to be max-width and height, because otherwise
        it's way narrower than what you actually get on the screen */
        #editable_area {
           max-width: unset;
           margin-top: unset;
        }

        /* hide dashed right margin */
        .editor_enable #wrapwrap > main > div:first-child:after {
           display: none;
        }

        /* set a dummy height for orderlines (normally this gets dynamically computed by js) */
        div.scroll-orderlines {
           height: 300px;
        }
    </style>
</template>

<template id="customer_facing_display_snippets">
    <!-- web_editor needs a ul (normally contains the header, body, extra buttons)-->
    <ul/>

    <div id="o_scroll">
        <div class="o_panel">
            <div class="o_panel_body">
                <div name="Text-Image" class="basic_theme o_user_facing_display_snippet">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="text-center">Fill in text here</h2>
                            </div>
                            <div class="col-xs-12">
                                <img src="/point_of_sale/static/src/img/odoo_ad.png" alt="" class="img-responsive"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div name="Text Block" class="basic_theme o_user_facing_display_snippet">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2 class="text-center">Fill in text here</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <div name="Orders Block" class="basic_theme o_user_facing_display_snippet">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-12">
                                <h2>The following items are in your basket:</h2>
                                <div class="scroll-orderlines">
                                    <table>
                                        <thead>
                                            <tr>
                                                <td>Image</td>
                                                <td>Product name</td>
                                                <td class="text-right">Quantity</td>
                                                <td class="text-right">Price</td>
                                            </tr>
                                        </thead>
                                        <tbody id="orderlines">
                                            <tr class="product-cell">
                                                <td>
                                                    <img alt="" class="img" src="/point_of_sale/static/img/evian_1l-image.jpg"/>
                                                </td>
                                                <td>Evian 2l</td>
                                                <td class="text-right">2.000</td>
                                                <td class="text-right">$ 1.02</td>
                                            </tr>

                                            <tr class="product-cell">
                                                <td>
                                                    <img alt="" class="img" src="/point_of_sale/static/img/oranges-image.jpg"/>
                                                </td>
                                                <td>Oranges</td>
                                                <td class="text-right">3.000</td>
                                                <td class="text-right">$ 3.12</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div name="Payment Info Block" class="basic_theme o_user_facing_display_snippet">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="payment-info">
                                <div class="col-xs-offset-4 col-xs-4">
                                    <span class="total-amount-formatting">TOTAL:</span>
                                </div>
                                <div class="col-xs-4 text-right">
                                    <span id="total-amount" class="total-amount-formatting">$ 4.14</span>
                                </div>
                                <div id="paymentlines">
                                    <div class="col-xs-offset-4 col-xs-4">
                                        <span>Cash (USD)</span>
                                    </div>
                                    <div class="col-xs-4 text-right">
                                        <span>$ 5.00</span>
                                    </div>
                                    <div class="col-xs-offset-4 col-xs-4">
                                        <span>CHANGE:</span>
                                    </div>
                                    <div class="col-xs-4 text-right">
                                        <span>$ 0.86</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="snippet_options" class="hidden">
        <t t-call="web_editor.snippet_options"/>

        <div data-js='content' class="hidden"
             data-selector="[data-oe-field='customer_facing_display_html'] > div, .oe_snippet_body"
             data-drop-near="[data-oe-field='customer_facing_display_html'] > *"
             data-drop-in="[data-oe-field='customer_facing_display_html'], .ad-space, div.row > div[class^='col-xs-']">
        </div>
    </div>
</template>
</odoo>
