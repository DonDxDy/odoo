<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="lunch_payment_wizard_view_form" model="ir.ui.view">
            <field name="name">lunch.payment.wizard.form.view</field>
            <field name="model">lunch.payment.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="currency_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <group>
                        <field name="amount" widget="monetary"/>
                        <field name="communication"/>
                    </group>
                    <footer>
                        <button name="action_validate" string="Go to payment" type="object" class="oe_highlight"/>
                        <button string="Discard" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
