<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <record id="event_stand_configurator_view_form" model="ir.ui.view">
        <field name="name">event.stand.configurator.view.form</field>
        <field name="model">event.stand.configurator</field>
        <field name="arch" type="xml">
            <form js_class="event_stand_configurator_form">
                <group>
                    <field name="product_id" invisible="1"/>
                    <field name="sale_order_line_id" invisible="1"/>
                    <field name="event_id" options="{'no_open': True, 'no_create': True}"
                           domain="[
                                ('event_stand_ids.product_id', '=', product_id),
                                ('date_end', '&gt;=', time.strftime('%Y-%m-%d 00:00:00'))
                           ]"/>
                    <field name="event_stand_id" options="{'no_open': True, 'no_create': True}"
                           attrs="{'invisible': [('event_id', '=', False)]}"
                           domain="[
                                ('event_id', '=', event_id),
                                ('product_id', '=', product_id),
                                ('state', '=', 'available')
                           ]"/>
                    <field name="event_stand_slot_ids" options="{'no_open': True, 'no_create': True}"
                           widget="many2many_checkboxes"
                           attrs="{'invisible': [('event_stand_id', '=', False)]}"
                           domain="[
                                ('event_stand_id', '=', event_stand_id),
                                '|',
                                    '&amp;',
                                        ('sale_order_line_id', '=', sale_order_line_id),
                                        ('sale_order_line_id', '!=', False),
                                    ('state', '=', 'available')
                           ]"/>
                    <!--TODO: Don't forget to check the availability when it's done-->
                </group>
                <footer>
                    <button string="Ok" class="btn-primary" special="save"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="event_stand_configurator_action" model="ir.actions.act_window">
        <field name="name">Configure an event stand</field>
        <field name="res_model">event.stand.configurator</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</data></odoo>
