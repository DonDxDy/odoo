<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <template id="event_stand_registration" name="Event Stand Registration">
        <t t-call="website_event.layout">
            <div class="o_wevent_stand_registration" name="event" t-att-data-event-id="event.id"
                 itemscope="itemscope" itemtype="http://schema.org/Event">
                <t t-call="website.record_cover">
                    <t t-set="_record" t-value="event"/>
                    <t t-set="use_filters" t-value="True"/>
                    <t t-set="use_size" t-value="True"/>
                    <t t-set="use_text_align" t-value="True"/>

                    <div class="container d-flex flex-column flex-grow-1 justify-content-around">
                        <h1 class="text-white">Become an Exhibitor</h1>
                    </div>
                    <div class="container">
                        <div class="bg-white"/>
                    </div>
                </t>
                <section class="mt-n5">
                    <div class="container overflow-hidden">
                        <div class="row mb64 bg-white no-gutters rounded shadow-sm">
                            <div class="col-lg-9 p-4">
                                <form method="post" t-attf-action="/event/#{slug(event)}/stands/confirm"
                                      id="stand-registration" class="form-horizontal justify-content-center mt32">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="row form-group justify-content-center">
                                        <div class="col-md-4" t-foreach="event.event_stand_type_ids" t-as="stand_type">
                                            <label>
                                                <input type="radio" name="stand_type_id" t-att-value="stand_type.id"/>
                                                <div>
                                                    <h5><t t-esc="stand_type.name"/></h5>
                                                    <span class="img img-responsive">
                                                        <img class="img img-fluid" t-att-title="stand_type.name" t-att-src="website.image_url(stand_type, 'image')"/>
                                                    </span>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-sm-2 offset-sm-1">
                                            <label for="stand_id" class="control-label">Booth</label>
                                        </div>
                                        <div class="col-sm-6">
                                            <select class="form-control" id="stand_id" name="stand_id"></select>
                                        </div>
                                        <div t-if="event.exhibition_map" class="col-sm-3 text-right">
                                            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#mapModal">View Floor Plan</button>
                                            <div role="dialog" id="mapModal" class="modal" tabindex="-1">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-body">
                                                            <div t-field="event.exhibition_map" t-options="{'widget': 'image'}" class="img img-responsive"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-sm-2 offset-sm-1">
                                            <label class="control-label">Slots</label>
                                        </div>
                                        <div class="col-sm-9 o_wevent_stand_slots"/>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-10 offset-sm-2">
                                            <button type="submit" class="btn btn-primary btn-lg">Book My Stand</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-lg-3 bg-200 hidden-sm hidden-xs o_wevent_stand_type_description py-4"/>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>

</data></odoo>