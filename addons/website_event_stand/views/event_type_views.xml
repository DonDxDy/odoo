<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <record id="event_type_view_form_inherit_stand" model="ir.ui.view">
        <field name="name">event.type.view.form.inherit.stand</field>
        <field name="model">event.type</field>
        <field name="inherit_id" ref="website_event.event_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='website_menu']" position='after'>
                <div class="row mt16" attrs="{'invisible': [('website_menu', '=', False)]}">
                    <label class="col-lg-4" for="website_stand"/> <field name="website_stand"/>
                </div>
            </xpath>
        </field>
    </record>

</data></odoo>