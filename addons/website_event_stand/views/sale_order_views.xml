<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>

    <record id="sale_order_view_form_inherit_website_event_stand" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.website.event.stand</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_attendee_list']" position="after">
                <button name="action_view_stand_list" type="object"
                        class="oe_stat_button" icon="fa-university" string="Slots"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='event_ticket_id']" position="after">
                <field name="is_event_stand" optional="hide"/>
                <field name="event_stand_id" optional="hide"/>
                <field name="event_stand_slot_ids" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_uom_qty']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_event_stand', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>

</data></odoo>
