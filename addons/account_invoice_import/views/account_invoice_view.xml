<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_supplier_import_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.supplier.import.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[hasclass('oe_subtotal_footer')]//field[@name='amount_total']" position="after">
                    <field name="amount_total_import" attrs="{'invisible': [('amount_total_import', '=', 0.0)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
