<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- CRON to aggregate post views every month/year -->
        <record id="post_views_agregate_cron" model="ir.cron">
            <field name="name">Post : Agregate views</field>
            <field name="model_id" ref="website_forum.model_forum_post_view"/>
            <field name="state">code</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="code">model._cron_agregate_views()</field>
        </record>
    </data>
</odoo>
