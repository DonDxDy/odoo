<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_lead_referral" model="res.groups">
            <field name="name">Referral reward based on lead</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <record id="lost_reason_cancel_by_referred" model="crm.lost.reason">
            <field name="name">Cancelled by referred</field>
        </record>

        <!-- Email templates -->
        <record id="referral_email_template" model="mail.template">
            <field name="name">Referral email</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <field name="email_to">${(object.email)}</field>
            <field name="subject">You have been referred !</field>
            <field name="body_html"><![CDATA[
            <p>Dear ${(object.name)},<br/><br/>
            You were invited to try Odoo, more information here: ${(ctx.get('link'))}<br/></p>
                Regards.<br/> 
                
            Not interested ?
            <p style="margin: 16px 0px 16px 0px;">
                <a href="${(ctx['decline_url'])}"
                    style="background-color:#875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px;">
                    Decline Here
                </a>
            </p>
            ]]></field>
                <field name="user_signature" eval="False"/>
        </record>
    </data>
</odoo>