<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Referral Form">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/website_crm_referral/static/src/js/referral_form.js"></script>
        </xpath>
    </template>


    <template id="referral_controller_template_extended" name="Referrals" inherit_id="website_sale_referral.referral_controller_template">
        <xpath expr="//div[@id='sharer']" position="after">
            <div id="lead_generator">
                <div class="col-lg-12 text-center mb32">
                    <hr/>
                    <h2 class="col-lg-12 text-center">Or refer us someone</h2>
                    <p>Give us details of your interested acquaintances, our business advisors will contact them soon.</p>
                    <hr/>
                </div>
                <div class="col-lg-12 text-center mb64">
                    <div class="container col-lg-12 mb16">
                        <div class="row mb16 col-lg-12">
                            <p class="col-sm-2 text-left">Name</p>
                            <input class="col-sm-4 form-control" type="text" name="name" id="referred_name"/>
                            <p class="col-sm-2 text-left">Company</p>
                            <input class="col-sm-4 form-control" type='text' name="company" id="referred_company"/>
                        </div>
                        <div class="row mb16 col-lg-12">
                            <p class="col-sm-2 text-left">Email</p>
                            <input class="col-sm-4 form-control" type="email" name="email" id="referred_email"/> <!-- TODO Required when press on submit (but not on facebook, etc) ? -->
                            <p class="col-sm-2 text-left">Phone</p>
                            <input class="col-sm-4 form-control" type="text" name="phone" id="referred_phone"/>
                        </div>
                        <div class="row mb16 col-lg-12">
                            <p class="col-sm-2 text-left">Comment</p>
                            <textarea class="col-sm-10 form-control" name="comment" placeholder="Write a comment..." id="referred_comment"></textarea>
                        </div>
                        <div class="row justify-content-end col-lg-12">
                            <button type="button" id="submit" name="channel" value="direct" class="btn btn-primary mt8">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

</odoo>