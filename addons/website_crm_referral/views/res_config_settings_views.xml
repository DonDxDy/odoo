<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.referral.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale_referral.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='referral_mail_template_setting']" position="after">
                <group>
                    <field name="referral_reward_on_lead" widget="radio"/>
                    <field name="group_referral_reward_on_lead" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>