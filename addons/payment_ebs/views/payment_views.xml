<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_ebs" model="ir.ui.view">
        <field name="name">acquirer.form.ebs</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'ebs')]}">
                    <field name="ebs_account_id"/>
                    <field name="ebs_secret_key"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
