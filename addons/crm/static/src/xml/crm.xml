<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="crm.KanbanProgressBar">
        <div class="o_kanban_counter">
            <div class="o_crm_kanban_counter_progress progress">
                <div class="progress-bar o_progress_success">
                    <span data-current-value="0" class="o_kanban_counter_label"/>
                </div>
                <div class="progress-bar o_progress_blocked"/>
                <div class="progress-bar o_progress_warning"/>
            </div>
            <div t-att-data-current-value="0" class="o_kanban_counter_side pull-right"/>
        </div>
    </t>
</templates>
