<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_update_probabilities_view_form" model="ir.ui.view">
        <field name="name">crm.update.probabilities.form</field>
        <field name="model">crm.lead.pls.update</field>
        <field name="arch" type="xml">
            <form string="Update Probabilities">
                <span attrs="{'invisible': [('pls_start_date', '=', False)]}">
                    Confirm to update the probabilities of all the Leads/Opportunities created since <field name="pls_start_date"/>.
                    This can take up to several minutes depending on the number of Leads/Opportunities you have.
                </span>
                <span attrs="{'invisible': [('pls_start_date', '!=', False)]}">
                    Please try again after selecting the staring date and saving the settings.
                    Leads created after selected date will only be considered for updating the probabilities.
                </span>
                <footer>
                    <button name="action_reset_lead_probabilities" type="object"
                        string="Confirm" class="btn-primary" attrs="{'invisible': [('pls_start_date', '=', False)]}"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_crm_lead_update_probabilities" model="ir.actions.act_window">
        <field name="name">Update Probabilities</field>
        <field name="res_model">crm.lead.pls.update</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="crm_update_probabilities_view_form"/>
    </record>

</odoo>
