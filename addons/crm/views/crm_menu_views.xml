<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        This menu item's purpose is to overwrite another one defined in
        the base module in order to set new groups.
    -->
    <menuitem id="crm_menu_root"
        name="CRM"
        action="crm.action_your_pipeline"
        web_icon="crm,static/description/icon.png"
        groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"
        sequence="6">

        <menuitem id="crm_menu_sales"
            name="Sales"
            sequence="1">

            <menuitem id="menu_crm_opportunities" name="My Pipeline"
                action="crm.action_your_pipeline"
                sequence="1"/>
            <menuitem id="crm_lead_menu_my_activities" name="My Activities"
                action="crm.crm_lead_action_my_activities"
                groups="sales_team.group_sale_manager"
                sequence="2"/>
            <menuitem id="sales_team_menu_team_pipeline" name="Teams"
                action="sales_team.crm_team_salesteams_pipelines_act"
                groups="sales_team.group_sale_manager"
                sequence="4"/>
            <menuitem id="res_partner_menu_customer" name="Customers"
                action="base.action_partner_form"
                sequence="5"/>
        </menuitem>

        <menuitem id="crm_menu_leads" name="Leads"
            action="crm.crm_lead_all_leads"
            groups="crm.group_use_lead"
            sequence="5"/>

        <menuitem id="crm_menu_report"
            name="Reporting"
            sequence="20"
            groups="sales_team.group_sale_manager">

            <menuitem id="crm_opportunity_report_menu_lead" name="Leads"
                action="crm.crm_opportunity_report_action_lead"
                groups="crm.group_use_lead"
                sequence="1"/>
            <menuitem id="crm_opportunity_report_menu" name="Pipeline"
                action="crm.crm_opportunity_report_action"
                sequence="2"/>
            <menuitem id="crm_activity_report_menu" name="Activities"
                action="crm_activity_report_action"
                sequence="3"/>
        </menuitem>

        <menuitem id="crm_menu_config"
            name="Configuration"
            groups="sales_team.group_sale_manager"
            sequence="25">

            <menuitem id="crm_config_settings_menu"
                name="Settings"
                action="crm.crm_config_settings_action"
                groups="base.group_system"
                sequence="0"/>
            <menuitem id="menu_crm_config_opportunity"
                name="Opportunities"
                sequence="1"/>
            <menuitem id="crm_team_config"
                name="Sales Teams"
                action="sales_team.sales_team_config_action"
                sequence="5"/>
            <menuitem id="crm_team_menu_config_activity_types"
                name="Activity Types"
                action="sales_team.mail_activity_type_action_config_sales"
                sequence="10"/>
            <menuitem id="menu_crm_config_lead"
                name="Pipeline"
                sequence="15">

                <menuitem id="menu_crm_lead_stage_act"
                    name="Stages"
                    sequence="0"
                    action="crm.crm_stage_action"
                    groups="base.group_no_one"/>
                <menuitem id="menu_crm_lead_categ"
                    name="Tags"
                    action="sales_team.sales_team_crm_tag_action"
                    sequence="1"/>
                <menuitem id="menu_crm_lost_reason"
                    name="Lost Reasons"
                    action="crm.crm_lost_reason_action"
                    sequence="6"/>
            </menuitem>
        </menuitem>

        <menuitem id="menu_import_crm" name="Import &amp; Synchronize" sequence="35"/>

    </menuitem>
</odoo>
