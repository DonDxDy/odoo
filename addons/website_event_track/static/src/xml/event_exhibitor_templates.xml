<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="exhibitor_jitsi_modal">
    <div role="dialog" class="modal fade o_wevent_exhibitor_jitsi_modal">
        <div class="modal-dialog">
            <div class="modal-content border-0">
                <main class="modal-body p-0">
                    <div class="o_wevent_exhibitor_jitsi_loading position-absolute w-100 text-center text-muted">
                        <i class="fa fa-spin fa-spinner mr-3"/><span>Loading your meeting...</span>
                    </div>
                </main>
                <footer class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </footer>
            </div>
        </div>
    </div>
</t>

</templates>
