<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Index Topbar -->
<template id="index_topbar" name="Topbar">
    <nav class="navbar navbar-light border-top shadow-sm d-print-none">
        <div class="container">
            <span class="navbar-brand h4 my-0 mr-4">Events</span>
            <ul id="o_we_index_topbar_filters" class="nav"/>
            <t t-call="website_event.search_box">
                <t t-set="_classes" t-value="'form-inline ml-auto'"/>
            </t>
        </div>
    </nav>
</template>

<!-- Filter - Date -->
<template id="event_time" inherit_id="website_event.index_topbar" customize_show="True" name="Filter by Date">
    <xpath expr="//ul[@id='o_we_index_topbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                <!-- TODO - Display the active filter instead of this hardcoded label -->
                <i class="fa fa-calendar"/>
                <span>Next Event</span>
            </a>
            <div class="dropdown-menu">
                <t t-foreach="dates" t-as="date">
                    <t t-if="date[3] or (date[0] in ('old','all'))">
                        <a t-attf-href="/event?{{ keep_query('country', 'type', date=date[0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('date') == date[0] and ' active' or ''}"><t t-esc="date[1]"/>
                            <span t-if="date[3]" class="badge badge-pill py-1 px-2 ml-auto"><t t-esc="date[3]"/></span>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Filter - Category -->
<template id="event_category" inherit_id="website_event.index_topbar" active="True" customize_show="True" name="Filter by Category">
    <xpath expr="//ul[@id='o_we_index_topbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                <!-- TODO - Display the active filter instead of this hardcoded label -->
                <i class="fa fa-folder-open"/>
                <span>All Categories</span>
            </a>
            <div class="dropdown-menu">
                <t t-foreach="types" t-as="type">
                    <t t-if="type['event_type_id']">
                        <a t-attf-href="/event?{{ keep_query('country', 'date', type=type['event_type_id'][0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('type') == str(type['event_type_id'] and type['event_type_id'][0]) and ' active' or ''}"><t t-esc="type['event_type_id'][1]"/>
                            <span class="badge badge-pill ml-auto"><t t-esc="type['event_type_id_count']"/></span></a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Filter - Location -->
<template id="event_location" inherit_id="website_event.index_topbar" active="True" customize_show="True" name="Filter by Country">
    <xpath expr="//ul[@id='o_we_index_topbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                <!-- TODO - Display the active filter instead of this hardcoded label -->
                <i class="fa fa-map-marker"/>
                <span>All countries</span>
            </a>
            <div class="dropdown-menu">
                <t t-foreach="countries" t-as="country">
                    <t t-if="country['country_id']">
                        <a t-attf-href="/event?{{ keep_query('type', 'date', country=country['country_id'][0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('country') == str(country['country_id'] and country['country_id'][0]) and ' active' or ''}">
                            <t t-esc="country['country_id'][1]"/>
                            <span class="badge badge-pill ml-auto"><t t-esc="country['country_id_count']"/></span>
                        </a>
                    </t>
                    <t t-if="not country['country_id']">
                        <a t-attf-href="/event?{{ keep_query('type', 'date', country='online') }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('country') == 'online' and ' active' or ''}">
                            <span>Online Events</span>
                            <span class="badge ml-auto"><t t-esc="country['country_id_count']"/></span>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Search Box -->
<!-- TODO - Make it works -->
<template id="search_box" name="Search box">
    <form id="o_we_search_box" t-attf-class="#{_classes}">
        <div class="input-group w-100">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search"/>
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit"><i class="fa fa-search"/></button>
            </div>
        </div>
    </form>
</template>

<!-- Index - Events list -->
<template id="events_list" name="Events list">
    <!-- Options -->
    <t t-set="opt_events_list_columns" t-value="False"/>
    <t t-set="opt_index_sidebar" t-value="request.website.viewref('website_event.opt_index_sidebar').active"/>
    <t t-if="opt_events_list_columns" t-set="opt_event_size" t-value="'col-12 col-lg-6' if opt_index_sidebar else 'col-12 col-md-6 col-lg-4'"/>
    <t t-else="" t-set="opt_event_size" t-value="'col-12' if opt_index_sidebar else 'col-xl-10 offset-xl-1'"/>
    <!-- No events -->
    <t t-if="not event_ids">
        <div class="h2 mb-3">No events found.</div>
        <div class="alert alert-info text-center" groups="event.group_event_manager">
            <p class="m-0">Use the top button '<b>+ New</b>' to create an event.</p>
        </div>
    </t>
    <!-- List -->
    <div t-foreach="event_ids" t-as="event" t-attf-class="mb-4 #{opt_event_size}">
        <article class="card" itemscope="itemscope" itemtype="http://schema.org/Event">
            <div class="row no-gutters">
                <!-- Header -->
                <header t-attf-class="#{'col-12 rounded-top' if opt_events_list_columns else 'col-sm-4 col-lg-3 rounded-left'} #{events_cover_properties[event_index].get('background-color')}">
                    <!-- Image + Link -->
                    <a t-attf-href="/event/#{ slug(event) }/#{(not event.menu_id) and 'register' or ''}" class="d-block h-100 w-100" t-attf-style="background-image: url('#{events_cover_properties[event_index].get('img_url')}'); background-size: cover; background-position: 50% 100%;">
                        <!-- Short Date -->
                        <div class="o_we_event_date position-absolute bg-white shadow-sm">
                            <span t-esc="event.with_context(tz=event.date_tz).date_begin.strftime('%b')" class="o_we_event_month"/>
                            <span t-esc="event.with_context(tz=event.date_tz).date_begin.strftime('%d')" class="o_we_event_day"/>
                        </div>
                        <!-- Participating -->
                        <small t-if="event.is_participating" class="o_we_event_participating bg-success">
                            <i class="fa fa-check mr-2"/>Registered
                        </small>
                        <!-- Unpublished -->
                        <small t-if="not event.website_published" class="o_we_event_unpublished bg-danger">
                            <i class="fa fa-ban mr-2"/>Unpublished
                        </small>
                    </a>
                </header>
                <div t-attf-class="d-flex flex-column #{'col-md-12' if opt_events_list_columns else 'col'}">
                    <!-- Body -->
                    <main class="card-body">
                        <!-- Category -->
                        <span t-attf-class="small #{'o_we_event_category position-absolute shadow-sm' if opt_events_list_columns else 'float-right mt-n2 mr-n1'}" t-if="event.event_type_id">
                            <i class="fa fa-folder-open fa-fw" role="img" aria-label="Event type" title="Event type"/>
                            <span class="text-600" t-field="event.event_type_id"/>
                        </span>
                        <!-- Title -->
                        <a t-attf-href="/event/#{ slug(event) }/#{(not event.menu_id) and 'register' or ''}" class="text-nowrap text-truncate" itemprop="url">
                            <h5 t-attf-class="card-title mt-2 mb-0 #{'text-danger' if not event.website_published else ''}" itemprop="name" t-field="event.name"/>
                        </a>
                        <!-- Organizer -->
                        <div t-if="event.organizer_id" class="text-muted text-nowrap text-truncate mb-3">
                            <small>Organizer: <span t-field="event.organizer_id" itemprop="organizer"/></small>
                        </div>
                        <!-- Location -->
                        <div t-if="event.is_online">Online</div>
                        <div t-else="" itemprop="location" t-field="event.address_id" t-options='{
                            "widget": "contact",
                            "fields": ["city"],
                            "no_marker": "true",
                        }'/>
                        <!-- Start Date & Time -->
                        <time itemprop="startDate" t-field="event.with_context(tz=event.date_tz).date_begin" t-options="{'format': 'MMMM d, yyyy - hh:mm'}" t-att-datetime="event.date_begin"/>
                    </main>
                    <!-- Footer -->
                    <footer class="card-footer small">
                        <b>PRICE</b>
                    </footer>
                </div>
            </div>
        </article>
    </div>
    <!-- Pager -->
    <div class="form-inline justify-content-center my-3">
        <t t-call="website.pager"/>
    </div>
</template>

<!-- Index - Events list - Columns -->
<template id="opt_index_events_list_columns" inherit_id="website_event.events_list" active="True" customize_show="True" name="Layout • Columns">
    <xpath expr="//t[@t-set='opt_events_list_columns']" position="attributes">
        <attribute name="t-value">True</attribute>
    </xpath>
</template>

<!-- Index - Sidebar -->
<template id="index_sidebar" name="Sidebar">
    <div id="o_we_index_sidebar" class="col-md-4 ml-lg-3 ml-xl-5 my-5"/>
</template>

<!-- Index - Sidebar - About us -->
<template id="index_sidebar_about_us" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="About us">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <h6 class="o_we_sidebar_title">About us</h6>
            <p>Use this paragrah to write a short text about your events or your company.<br/> <a href="/aboutus">Read more</a></p>
        </div>
        <div id="oe_structure_website_event_about_us_1" class="oe_structure"/>
    </xpath>
</template>

<!-- Index - Sidebar - Follow us -->
<template id="index_sidebar_follow_us" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Follow us">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <h6 class="o_we_sidebar_title">Follow Us</h6>
            <div class="o_we_sidebar_social mx-n1">
                <a t-if="website.social_facebook" t-att-href="website.social_facebook" class="o_we_social_link"><i class="fa fa-facebook text-facebook" aria-label="Facebook" title="Facebook"/></a>
                <a t-if="website.social_twitter" t-att-href="website.social_twitter" class="o_we_social_link"><i class="fa fa-twitter text-twitter" aria-label="Twitter" title="Twitter"/></a>
                <a t-if="website.social_linkedin" t-att-href="website.social_linkedin" class="o_we_social_link"><i class="fa fa-linkedin text-linkedin" aria-label="LinkedIn" title="LinkedIn"/></a>
                <a t-if="website.social_youtube" t-att-href="website.social_youtube" class="o_we_social_link"><i class="fa fa-youtube-play text-youtube" aria-label="Youtube" title="Youtube"/></a>
                <a t-if="website.social_github" t-att-href="website.social_github" class="o_we_social_link"><i class="fa fa-github text-github" aria-label="Github" title="Github"/></a>
                <a t-if="website.social_instagram" t-att-href="website.social_instagram" class="o_we_social_link"><i class="fa fa-instagram text-instagram" aria-label="Instagram" title="Instagram"/></a>
            </div>
            <!-- TODO: Keep this? -->
            <!-- <t t-call="website_mail.follow" t-if="event">
                <t t-set="email" t-value="user_id.email"/>
                <t t-set="object" t-value="event"/>
                <t t-set="div_class" t-value="'pt-2'"/>
            </t> -->
        </div>
        <div id="oe_structure_website_event_follow_us_1" class="oe_structure"/>
    </xpath>
</template>

<!-- Index - Sidebar - Photos -->
<template id="index_sidebar_photos" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Photos">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <h6 class="o_we_sidebar_title">Photos</h6>
        <a href="/event">
            <figure class="o_we_sidebar_block o_we_sidebar_figure figure">
                <img class="figure-img img-fluid rounded" src="/website_event/static/src/img/event_past_0.jpg" alt=""/>
                <figcaption class="figure-caption">Past event</figcaption>
            </figure>
        </a>
        <a href="/event">
            <figure class="o_we_sidebar_block o_we_sidebar_figure figure">
                <img class="figure-img img-fluid rounded" src="/website_event/static/src/img/event_training_0.jpg" alt=""/>
                <figcaption class="figure-caption">Our Trainings</figcaption>
            </figure>
        </a>
    </xpath>
</template>

<!-- Index - Sidebar - Categories -->
<template id="index_sidebar_categories" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Categories">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <h6 class="o_we_sidebar_title">Categories</h6>
            <t t-foreach="types" t-as="type">
                <t t-if="type['event_type_id']">
                    <a t-attf-href="/event?{{ keep_query('country', 'date', type=type['event_type_id'][0]) }}" class="badge badge-secondary o_we_badge mb-2"><t t-esc="type['event_type_id'][1]"/></a>
                </t>
            </t>
        </div>
    </xpath>
</template>

<!-- Index - Sidebar - Quotes -->
<template id="index_sidebar_quotes" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Quotes">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block card">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p><em>Write here a quote from one of your attendees. It gives confidence in your events.</em></p>
                    <footer class="blockquote-footer">Author</footer>
                </blockquote>
            </div>
        </div>
    </xpath>
</template>

<!-- Index - Sidebar - Snippet - Country Events -->
<template id="index_sidebar_country_event" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Country Events">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <t t-call="website_event.s_country_events"/>
        </div>
    </xpath>
</template>

</odoo>