<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Index Topbar -->
<template id="index_topbar" name="Topbar">
    <nav class="navbar navbar-light border-top shadow-sm d-print-none">
        <div class="container">
            <span class="navbar-brand h4 my-0 mr-4">Events</span>
            <ul id="o_we_index_topbar_filters" class="nav"/>
            <t t-call="website_event.search_box">
                <t t-set="_classes" t-value="'form-inline ml-auto'"/>
            </t>
        </div>
    </nav>
</template>

<!-- Filter - Date -->
<template id="event_time" inherit_id="website_event.index_topbar" customize_show="True" name="Filter by Date">
    <xpath expr="//ul[@id='o_we_index_topbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                <!-- TODO - Display the active filter instead of this hardcoded label -->
                <i class="fa fa-calendar"/>
                <span>Next Event</span>
            </a>
            <div class="dropdown-menu">
                <t t-foreach="dates" t-as="date">
                    <t t-if="date[3] or (date[0] in ('old','all'))">
                        <a t-attf-href="/event?{{ keep_query('country', 'type', date=date[0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('date') == date[0] and ' active' or ''}"><t t-esc="date[1]"/>
                            <span t-if="date[3]" class="badge badge-pill py-1 px-2 ml-auto"><t t-esc="date[3]"/></span>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Filter - Category -->
<template id="event_category" inherit_id="website_event.index_topbar" active="True" customize_show="True" name="Filter by Category">
    <xpath expr="//ul[@id='o_we_index_topbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                <!-- TODO - Display the active filter instead of this hardcoded label -->
                <i class="fa fa-folder-open"/>
                <span>All Categories</span>
            </a>
            <div class="dropdown-menu">
                <t t-foreach="types" t-as="type">
                    <t t-if="type['event_type_id']">
                        <a t-attf-href="/event?{{ keep_query('country', 'date', type=type['event_type_id'][0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('type') == str(type['event_type_id'] and type['event_type_id'][0]) and ' active' or ''}"><t t-esc="type['event_type_id'][1]"/>
                            <span class="badge badge-pill ml-auto"><t t-esc="type['event_type_id_count']"/></span></a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Filter - Location -->
<template id="event_location" inherit_id="website_event.index_topbar" active="True" customize_show="True" name="Filter by Country">
    <xpath expr="//ul[@id='o_we_index_topbar_filters']" position="inside">
        <li class="nav-item dropdown">
            <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">
                <!-- TODO - Display the active filter instead of this hardcoded label -->
                <i class="fa fa-map-marker"/>
                <span>All countries</span>
            </a>
            <div class="dropdown-menu">
                <t t-foreach="countries" t-as="country">
                    <t t-if="country['country_id']">
                        <a t-attf-href="/event?{{ keep_query('type', 'date', country=country['country_id'][0]) }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('country') == str(country['country_id'] and country['country_id'][0]) and ' active' or ''}">
                            <t t-esc="country['country_id'][1]"/>
                            <span class="badge badge-pill ml-auto"><t t-esc="country['country_id_count']"/></span>
                        </a>
                    </t>
                    <t t-if="not country['country_id']">
                        <a t-attf-href="/event?{{ keep_query('type', 'date', country='online') }}" t-attf-class="dropdown-item d-flex align-items-center #{searches.get('country') == 'online' and ' active' or ''}">
                            <span>Online Events</span>
                            <span class="badge ml-auto"><t t-esc="country['country_id_count']"/></span>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Search Box -->
<!-- TODO - Make it works -->
<template id="search_box" name="Search box">
    <form id="o_we_search_box" t-attf-class="#{_classes}">
        <div class="input-group w-100">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search"/>
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit"><i class="fa fa-search"/></button>
            </div>
        </div>
    </form>
</template>

<!-- Index - Sidebar -->
<template id="index_sidebar" name="Sidebar">
    <div id="o_we_index_sidebar" class="col-lg-4 offset-xl-1 my-5"/>
</template>

<!-- Index - Sidebar - About us -->
<template id="index_sidebar_about_us" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="About us">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <h6 class="o_we_sidebar_title">About us</h6>
            <p>Use this paragrah to write a short text about your events or your company.<br/> <a href="/aboutus">Read more</a></p>
        </div>
        <div id="oe_structure_website_event_about_us_1" class="oe_structure"/>
    </xpath>
</template>

<!-- Index - Sidebar - Follow us -->
<template id="index_sidebar_follow_us" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Follow us">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <h6 class="o_we_sidebar_title">Follow Us</h6>
            <div class="o_we_sidebar_social d-flex justify-content-between">
                <a t-if="website.social_facebook" t-att-href="website.social_facebook" class="o_we_sidebar_social_link"><i class="fa fa-facebook text-facebook" aria-label="Facebook" title="Facebook"/></a>
                <a t-if="website.social_twitter" t-att-href="website.social_twitter" class="o_we_sidebar_social_link"><i class="fa fa-twitter text-twitter" aria-label="Twitter" title="Twitter"/></a>
                <a t-if="website.social_linkedin" t-att-href="website.social_linkedin" class="o_we_sidebar_social_link"><i class="fa fa-linkedin text-linkedin" aria-label="LinkedIn" title="LinkedIn"/></a>
                <a t-if="website.social_youtube" t-att-href="website.social_youtube" class="o_we_sidebar_social_link"><i class="fa fa-youtube-play text-youtube" aria-label="Youtube" title="Youtube"/></a>
                <a t-if="website.social_github" t-att-href="website.social_github" class="o_we_sidebar_social_link"><i class="fa fa-github text-github" aria-label="Github" title="Github"/></a>
                <a t-if="website.social_instagram" t-att-href="website.social_instagram" class="o_we_sidebar_social_link"><i class="fa fa-instagram text-instagram" aria-label="Instagram" title="Instagram"/></a>
            </div>
            <t t-call="website_mail.follow" t-if="event">
                <t t-set="email" t-value="user_id.email"/>
                <t t-set="object" t-value="blog"/>
                <t t-set="div_class" t-value="'pt-2'"/>
            </t>
        </div>
        <div id="oe_structure_website_event_follow_us_1" class="oe_structure"/>
    </xpath>
</template>

<!-- Index - Sidebar - Photos -->
<template id="index_sidebar_photos" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Photos">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <h6 class="o_we_sidebar_title">Photos</h6>
        <a href="/event">
            <figure class="o_we_sidebar_block o_we_sidebar_figure figure">
                <img class="figure-img img-fluid rounded" src="/website_event/static/src/img/event_past_0.jpg" alt=""/>
                <figcaption class="figure-caption">Past event</figcaption>
            </figure>
        </a>
        <a href="/event">
            <figure class="o_we_sidebar_block o_we_sidebar_figure figure">
                <img class="figure-img img-fluid rounded" src="/website_event/static/src/img/event_training_0.jpg" alt=""/>
                <figcaption class="figure-caption">Our Trainings</figcaption>
            </figure>
        </a>
    </xpath>
</template>

<!-- Index - Sidebar - Categories -->
<template id="index_sidebar_categories" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Categories">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <h6 class="o_we_sidebar_title">Categories</h6>
            <t t-foreach="types" t-as="type">
                <t t-if="type['event_type_id']">
                    <a t-attf-href="/event?{{ keep_query('country', 'date', type=type['event_type_id'][0]) }}" class="badge badge-secondary o_we_badge mb-2"><t t-esc="type['event_type_id'][1]"/></a>
                </t>
            </t>
        </div>
    </xpath>
</template>

<!-- Index - Sidebar - Quotes -->
<template id="index_sidebar_quotes" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Quotes">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block card">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p><em>Write here a quote from one of your attendees. It gives confidence in your events.</em></p>
                    <footer class="blockquote-footer">Author</footer>
                </blockquote>
            </div>
        </div>
    </xpath>
</template>

<!-- Index - Sidebar - Snippet - Country Events -->
<template id="index_sidebar_country_event" inherit_id="website_event.index_sidebar" active="True" customize_show="True" name="Country Events">
    <xpath expr="//div[@id='o_we_index_sidebar']" position="inside">
        <div class="o_we_sidebar_block">
            <t t-call="website_event.s_country_events"/>
        </div>
    </xpath>
</template>

</odoo>