<!-- Index - Events list -->
<template id="events_list" name="Events list">
    <!-- Options -->
    <t t-set="opt_index_sidebar" t-value="request.website.viewref('website_event.opt_index_sidebar').active"/>

    <t t-if="opt_events_list_columns" t-set="opt_event_size" t-value="'col-md-6' if opt_index_sidebar else 'col-md-6 col-lg-4'"/>
    <t t-else="" t-set="opt_event_size" t-value="'col-12' if opt_index_sidebar else 'col-xl-10 offset-xl-1'"/>
    <!-- No events -->
    <t t-if="not event_ids">
        <div class="h2 mb-3">No events found.</div>
        <div class="alert alert-info text-center" groups="event.group_event_manager">
            <p class="m-0">Use the top button '<b>+ New</b>' to create an event.</p>
        </div>
    </t>
    <!-- List -->
    <div t-foreach="event_ids" t-as="event" t-attf-class=" #{opt_event_size} mb-4">
        <article t-attf-class="#{'card border-0 shadow-sm' if opt_events_list_cards else ''}" itemscope="itemscope" itemtype="http://schema.org/Event">
            <div class="row no-gutters">
                <!-- Header -->
                <header t-attf-class="overflow-hidden #{'col-12 rounded-top' if opt_events_list_columns else 'col-sm-4 col-lg-3 rounded-left'} #{'rounded shadow' if not opt_events_list_cards else ''} #{'rounded-top' if (not opt_events_list_cards and not opt_events_list_columns) else ''} #{events_cover_properties[event_index].get('background-color')}">
                    <!-- Image + Link -->
                    <a t-attf-href="/event/#{ slug(event) }/#{(not event.menu_id) and 'register' or ''}" class="d-block h-100 w-100" t-attf-style="background-image: url('#{events_cover_properties[event_index].get('img_url')}'); background-size: cover; background-position: 50% 50%;">
                        <!-- Short Date -->
                        <div class="o_we_event_date position-absolute bg-white shadow-sm">
                            <span t-esc="event.with_context(tz=event.date_tz).date_begin" t-options="{'widget': 'date', 'format': 'LLL'}" class="o_we_event_month"/>
                            <span t-esc="event.with_context(tz=event.date_tz).date_begin" t-options="{'widget': 'date', 'format': 'dd'}" class="o_we_event_day"/>
                        </div>
                        <!-- Participating -->
                        <small t-if="event.is_participating" class="o_we_event_participating bg-success">
                            <i class="fa fa-check mr-2"/>Registered
                        </small>
                        <!-- Unpublished -->
                        <small t-if="not event.website_published" class="o_we_event_unpublished bg-danger">
                            <i class="fa fa-ban mr-2"/>Unpublished
                        </small>
                    </a>
                </header>
                <div t-attf-class="#{'col-12' if opt_events_list_columns else 'col'}">
                    <!-- Body -->
                    <main t-attf-class="#{'card-body' if opt_events_list_cards else ('py-3' if opt_events_list_columns else 'px-4')}">
                        <!-- Title -->
                        <h5 t-attf-class="card-title mt-2 mb-0 text-truncate #{'text-danger' if not event.website_published else ''}">
                            <a t-attf-href="/event/#{ slug(event) }/#{(not event.menu_id) and 'register' or ''}" class="text-reset text-decoration-none" itemprop="url">
                                <span t-field="event.name" itemprop="name"/>
                            </a>
                        </h5>
                        <!-- Organizer -->
                        <div t-if="event.organizer_id" class="mb-3">
                            <small class="text-muted text-truncate">Organizer: <span t-field="event.organizer_id" itemprop="organizer"/></small>
                        </div>
                        <!-- Location -->
                        <div t-if="event.is_online">Online</div>
                        <div t-else="" itemprop="location" t-field="event.address_id" t-options="{'widget': 'contact', 'fields': ['city'], 'no_marker': 'true'}"/>
                        <!-- Start Date & Time -->
                        <time itemprop="startDate" t-att-datetime="event.date_begin">
                            <span t-field="event.with_context(tz=event.date_tz).date_begin" t-options="{'widget': 'date', 'format': 'long'}"/> -
                            <span t-field="event.with_context(tz=event.date_tz).date_begin" t-options="{'time_only': 'true', 'format': 'short'}"/>
                        </time>
                    </main>
                    <!-- Footer -->
                    <footer t-attf-class="small #{'card-footer' if opt_events_list_cards else ('border-top mx-4 mt-auto pt-2' if not opt_events_list_columns else 'border-top py-2')}">
                        <!-- TODO -->
                        <div itemprop="price"><span content="0" class="font-weight-bold text-uppercase">Free</span></div>
                    </footer>
                </div>
            </div>
        </article>
    </div>
    <!-- Pager -->
    <div class="form-inline justify-content-center my-3">
        <t t-call="website.pager"/>
    </div>
</template>

<template id="opt_events_list_columns" inherit_id="website_event.events_list" active="True" customize_show="True" name="Layout • Columns"/>

<template id="opt_events_list_cards" inherit_id="website_event.events_list" active="True" customize_show="True" name="'Cards' Design"/>

<template id="opt_events_list_categories" inherit_id="website_event.events_list" active="False" customize_show="True" name="Show categories">
    <xpath expr="//main" position="before">
        <a t-if="event.event_type_id" t-attf-href="/event?type=#{event.event_type_id.id}" t-attf-class="badge bg-secondary o_we_badge #{'o_we_badge_event' if opt_events_list_columns else 'float-right mt-3 mr-3'}" t-field="event.event_type_id"/>
    </xpath>
</template>

<!-- Index - Sidebar -->
<template id="index_sidebar" name="Sidebar">
