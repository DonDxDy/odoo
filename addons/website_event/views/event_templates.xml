</template>

<!-- Event -->
<template id="layout" name="Event">
    <t t-call="website.layout">
        <div id="wrap" class="o_we_event js_event">
            <t t-if="not event.menu_id">
                <nav class="navbar navbar-light border-top shadow-sm d-print-none">
                    <div class="container">
                        <a href="/event" class="navbar-brand h4 my-0 mr-4">
                            <i class="fa fa-long-arrow-left text-primary mr-2"/>All Events
                        </a>
                        <ul class="navbar-nav flex-row">
                            <li class="nav-item mr-3">
                                <a t-attf-href="/event?type=#{event.event_type_id.id}" t-if="event.event_type_id" class="nav-link">
                                    <i class="fa fa-folder-open text-primary mr-2"/><t t-esc="event.event_type_id.name"/>
                                </a>
                            </li>
                            <li class="nav-item mr-3">
                                <a t-if="event.country_id" t-attf-href="/event?country=#{event.country_id.id}" class="nav-link">
                                    <i class="fa fa-map-marker text-primary mr-2"/><t t-esc="event.country_id.name"/>
                                </a>
                            </li>
                        </ul>
                        <t t-call="website_event.search_box">
                            <t t-set="_classes" t-value="'form-inline ml-auto'"/>
                        </t>
                    </div>
                </nav>
            </t>
            <t t-else="">
                <nav class="navbar navbar-light border-top shadow-sm navbar-expand-md">
                    <div class="container">
                        <a href="#" t-field="event.name" class="navbar-brand h4 my-0 mr-4"/>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#o_we_event_submenu" aria-controls="o_we_event_submenu" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div id="o_we_event_submenu" class="collapse navbar-collapse">
                            <ul class="navbar-nav w-100">
                                <t t-foreach="event.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-value="'nav-item'"/>
                                        <t t-set="link_class" t-value="'nav-link'"/>
                                    </t>
                                </t>
                            </ul>
                        </div>
                    </div>
                </nav>
            </t>
            <!-- Content -->
            <t t-raw="0"/>
            <!-- TODO - Edition message + Mess up with event multi-pages option -->
            <div class="alert alert-info alert-dismissable mt16 css_non_editable_mode_hidden o_not_editable" t-ignore="True" role="status">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">&amp;times;</button>
                Following content will appear on all events
            </div>
            <!-- Drag/Drop Area -->
            <div class="oe_structure" id="oe_structure_website_event_layout_1"/>
        </div>
    </t>
</template>

<!-- Event - Banner -->
<template id="event_details" name="Event Header">
    <t t-call="website_event.layout">
        <div itemscope="itemscope" itemtype="http://schema.org/Event">
            <!-- Cover -->
            <section id="o_we_event_cover" t-attf-class="s_parallax parallax s_parallax_is_fixed" data-scroll-background-ratio="1">
                <!-- Image -->
                <span class="s_parallax_bg oe_img_bg oe_custom_bg" t-attf-style="background-image: url('#{event_cover_properties.get('img_url')}'); background-size: cover; background-position: 50% 50%;"/>
                <!-- Color Overlay -->
                <div id="o_we_banner_overlay" t-attf-class="position-absolute w-100 h-100 #{event_cover_properties.get('overlay_color')}"/>
                <div class="container pb80">
                    <div class="row">
                        <div class="col-lg-8 pt80 pb80">
                            <!-- TODO: <span t-if="event.is_participating" class="badge badge-success o_we_badge">Participating</span> -->
                            <h1 itemprop="name" t-field="event.name" class="display-4 text-white"/>
                            <!-- TODO: Add field for short_description -->
                            <p class="lead text-white mb-0">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
                        </div>
                    </div>
                    <!-- Registration Bar -->
                    <t t-call="website_event.registration_template"/>
                </div>
            </section>
            <!-- Body -->
            <t t-raw="0"/>
        </div>
    </t>
</template>

