<?xml version="1.0"?>
<odoo>
    <record id="website_event_meet.event_meeting_room_action" model="ir.actions.act_window">
        <field name="name">Meeting Room</field>
        <field name="res_model">event.meeting_room</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="event_meeting_room_view_search" model="ir.ui.view">
        <field name="name">event.meeting_room.search</field>
        <field name="model">event.meeting_room</field>
        <field name="arch" type="xml">
            <search string="Meeting Room">
                <field name="event_id"/>
            </search>
        </field>
    </record>
    <record id="event_meeting_room_view_form" model="ir.ui.view">
        <field name="name">event.meeting_room.form</field>
        <field name="model">event.meeting_room</field>
        <field name="arch" type="xml">
            <form string="Meeting Room">
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="summary"/>
                            <field name="target_audience"/>
                            <field name="pinned"/>
                        </group>
                        <group>
                            <field name="participant_count"/>
                            <field name="max_capacity"/>
                            <field name="lang_id" options="{'no_create': True}"/>
                            <field name="last_joined"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="event_meeting_room_view_tree" model="ir.ui.view">
        <field name="name">event.meeting_room.tree</field>
        <field name="model">event.meeting_room</field>
        <field name="arch" type="xml">
            <tree string="Meeting Room">
                <field name="name"/>
                <field name="summary"/>
                <field name="target_audience"/>
                <field name="pinned"/>
                <field name="participant_count"/>
                <field name="max_capacity"/>
                <field name="lang_id"/>
                <field name="last_joined"/>
            </tree>
        </field>
    </record>
</odoo>
