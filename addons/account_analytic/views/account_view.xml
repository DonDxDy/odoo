<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_reconcile_model_form" model="ir.ui.view">
            <field name="name">account.analytic.reconcile.model.form</field>
            <field name="model">account.reconcile.model</field>
            <field name="inherit_id" ref="account.view_account_reconcile_model_form"/>
            <field name="arch" type="xml">
                <field name="tax_ids" position="after">
                    <field name="analytic_account_id"
                        domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"
                        groups="analytic.group_analytic_tags"/>
                    <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" widget="many2many_tags"/>
                </field>
            </field>
        </record>

        <record id="view_account_reconcile_model_line_form" model="ir.ui.view">
            <field name="name">account.analytic.reconcile.model.line.form</field>
            <field name="model">account.reconcile.model.line</field>
            <field name="inherit_id" ref="account.view_account_reconcile_model_line_form"/>
            <field name="arch" type="xml">
                <field name="force_tax_included" position="after">
                    <field name="analytic_account_id" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]" groups="analytic.group_analytic_accounting"/>
                    <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" widget="many2many_tags"/>
                </field>
            </field>
        </record>

        <record id="view_tax_form" model="ir.ui.view">
            <field name="name">account.analytic.tax.form</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <field name="tax_group_id" position="after">
                    <field name="analytic" attrs="{'invisible':[('amount_type','=', 'group')]}"
                        groups="analytic.group_analytic_accounting" />
                </field>
            </field>
        </record>

        <record id="view_account_tax_template_form" model="ir.ui.view">
            <field name="name">account.analytic.tax.template.form</field>
            <field name="model">account.tax.template</field>
            <field name="inherit_id" ref="account.view_account_tax_template_form"/>
            <field name="arch" type="xml">
                <field name="description" position="after">
                    <field name="analytic" attrs="{'invisible':[('amount_type','=', 'group')]}"
                        groups="analytic.group_analytic_accounting" />
                </field>
            </field>
        </record>

    </data>
</odoo>