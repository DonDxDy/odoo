<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_form_inherit_l10n_in" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.l10n.in</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_id']" position="after">
                <field name="l10n_in_place_of_supply"/>
                <field name="l10n_in_import_export" invisible="1"/>
                <field name="l10n_in_export_type" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
                <field name="l10n_in_reverse_charge" attrs="{'invisible': [('l10n_in_export_type', '=', 'regular')]}"/>
                <field name="l10n_in_shipping_bill_number" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
                <field name="l10n_in_shipping_bill_date" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
                <field name="l10n_in_shipping_port_code_id" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="l10n_in_reseller_partner_id" groups="l10n_in.group_l10n_in_reseller"/>
            </xpath>
            <xpath expr="//page[@name='other_info']//field[@name='name']" position="after">
                <field name="l10n_in_refund_reason_id" attrs="{'invisible': [('type', 'not in', ('in_refund','out_refund'))], 'readonly': [('state','!=','draft')]}"/>
            </xpath>
        </field>
    </record>

    <record id="l10n_in_view_account_supplier_invoice_form" model="ir.ui.view">
        <field name="name">l10n.in.account.supplier.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="l10n_in_place_of_supply"/>
                <field name="l10n_in_import_export" invisible="1"/>
                <field name="l10n_in_partner_vat" invisible="1"/>
                <field name="l10n_in_reverse_charge" attrs="{'invisible': [('l10n_in_partner_vat', '!=', False)]}"/>
                <field name="l10n_in_shipping_port_code_id" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}" string="Bill on Entry Port Code"/>
                <field name="l10n_in_shipping_bill_number" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}" string="Bill on Entry Number"/>
                <field name="l10n_in_shipping_bill_date" attrs="{'invisible': [('l10n_in_import_export', '!=', True)]}" string="Bill on Entry Date"/>
            </xpath>
        </field>
    </record>
</odoo>
