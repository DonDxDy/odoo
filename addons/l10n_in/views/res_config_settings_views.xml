<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_l10n_in" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.l10n_in</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="default_taxes_setting_container" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box"
                    name="group_l10n_in_multiple_gstn"
                    title="Multiple GSTN Units"
                    attrs="{'invisible': [('country_code', '!=', 'IN')]}">
                    <div class="o_setting_left_pane">
                        <field name="group_l10n_in_multiple_gstn"/>
                    </div>
                    <div class="o_setting_right_pane" name="l10n_in_tax_right_pane">
                        <label for="group_l10n_in_multiple_gstn"/>
                        <div class="text-muted">
                            Manage multiple GSTN units within single company.
                        </div>
                        <div class="mt8" attrs="{'invisible':[('group_l10n_in_multiple_gstn','=',False)]}">
                            <button name="action_view_gstn_units" icon="fa-arrow-right" 
                                type="object" string="Manage GSTN Units" class="btn-link"/>
                        </div>
                    </div>
                </div>
            </div>

            <div id="invoicing_settings" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box"
                    name="ecommerce_reseller_setting"
                    title="Manage Reseller(E-Commerce)"
                    attrs="{'invisible': [('country_code', '!=', 'IN')]}">
                    <div class="o_setting_left_pane">
                        <field name="group_l10n_in_reseller"/>
                    </div>
                    <div class="o_setting_right_pane" name="l10n_in_invoice_right_pane">
                        <label for="group_l10n_in_reseller"/>
                        <div class="text-muted">
                            Use this if setup with Reseller(E-Commerce).
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
