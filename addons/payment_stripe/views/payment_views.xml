<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="acquirer_form_stripe" model="ir.ui.view">
        <field name="name">payment.acquirer.form.inherit</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'stripe')]}">
                    <field name="stripe_secret_key" attrs="{'required':[ ('provider', '=', 'stripe'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="stripe_publishable_key" attrs="{'required':[ ('provider', '=', 'stripe'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>
            <xpath expr='//group[@name="acquirer_config"]' position='after'>
                <group attrs="{'invisible': [('provider', '!=', 'stripe')]}">
                    <field name="stripe_image_url"/>
                </group>
            </xpath>
            <xpath expr='//form/sheet' position='before'>
                <header>
                    <button name="create_account" type="object" class="oe_highlight" string="Create a stripe account" attrs="{'invisible': ['|', ('provider', '!=', 'stripe'), ('stripe_secret_key', '!=', 'dummy')]}"/>
                </header>
            </xpath>
            <field name="inbound_payment_method_ids" position="after">
                <field name="stripe_connect_status_msg" invisible="1"/>
                <div class="alert alert-info text-center" attrs="{'invisible': [('stripe_connect_status_msg', '=', False)]}" role="alert">
                    <button class="close" role="alert" name="action_close_status_msg" type="object">x</button>
                    <div>
                        <strong>Your Stripe account is successfully configured!</strong>
                    </div>
                </div>
            </field>
        </field>
    </record>
</odoo>
