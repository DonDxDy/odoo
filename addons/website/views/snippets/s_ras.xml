<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_ras" name="Counter">
    <section class="s_count pt96 pb96" data-scroll-background-ratio="1">
        <div>
        <div class="ml-5">Counter</div>
        <div class=" w-25 ml-5 p-3 bg-info">
            <center><button class="d-inline-block plus">+</button>
            <button class="d-inline-block ml-2 result">0</button>
            <button class="d-inline-block ml-2 minus">-</button></center>
        </div>
        <button>reset</button>
    </div>
    </section>
</template>

<template id="s_ras_options" inherit_id="website.snippet_options">
    <xpath expr="." position="inside">
        <div data-js="SnipetCounter" data-selector=".s_count">
            <we-checkbox string="Reset Button" data-select-data-attribute="false|true" data-attribute-name="resetButtonDisplay"/>
        </div>
    </xpath>
</template>

<template id="assets_snippet_s_ras_js_000" inherit_id="website.assets_frontend">
    <xpath expr="//script[last()]" position="after">
        <script type="text/javascript" src="/website/static/src/snippets/s_ras/000.js"/>
    </xpath>
</template>

</odoo>
