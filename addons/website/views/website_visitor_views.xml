<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <!--page history-->
    <record id="action_website_visitor_page" model="ir.actions.act_window">
        <field name="name">Page Views History</field>
        <field name="res_model">website.visitor.page</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('visitor_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
              No page views yet for this visitor
            </p>
        </field>
    </record>

    <record id="website_visitor_page_view_tree" model="ir.ui.view">
        <field name="name">website.visitor.page.tree</field>
        <field name="model">website.visitor.page</field>
        <field name="arch" type="xml">
            <tree string="Visitor Page Views History">
                <field name="page_id"/>
                <field name="visit_date"/>
            </tree>
        </field>
    </record>

    <record id="website_visitor_page_view_search" model="ir.ui.view">
        <field name="name">website.visitor.page.search</field>
        <field name="model">website.visitor.page</field>
        <field name="arch" type="xml">
            <search string="Search Visitor">
                <field name="page_id"/>
                <field name="visit_date"/>

                <group string="Group By">
                    <filter string="Page" name="group_by_page" domain="[]" context="{'group_by': 'page_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- website visitor views -->
    <record id="website_visitor_view_form" model="ir.ui.view">
        <field name="name">website.visitor.form</field>
        <field name="model">website.visitor</field>
        <field name="arch" type="xml">
            <form string="Website Visitor" edit="0" create="0" delete="0">
                <header></header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" style="cursor: default"
                                icon="fa-globe">
                            <field name="visit_count" widget="statinfo" string="Visits"/>
                        </button>
                        <button name="%(website.action_website_visitor_page)d" type="action"
                                class="oe_stat_button"
                                icon="fa-tags">
                            <field name="page_view_count" widget="statinfo" string="Page views"/>
                        </button>
                    </div>
                    <div class="float-right" attrs="{'invisible': [('country_id', '=', False)]}"><field name="country_flag" widget="image" options='{"size": [32, 32]}'/></div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Visitor"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group id="general_info">
                        <group>
                            <field name="is_connected"/>
                            <field name="create_date"/>
                            <field name="last_connection_date"/>
                        </group>
                        <group>
                            <field name="lang_id"/>
                            <field name="unique_page_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="country_id" invisible="1"/>
                        <field name="partner_ids" widget="many2many"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="website_visitor_view_tree" model="ir.ui.view">
        <field name="name">website.visitor.tree</field>
        <field name="model">website.visitor</field>
        <field name="arch" type="xml">
            <tree string="Web Visitors" create="0" delete="0">
                <field name="country_flag" widget="image" options='{"size": [20, 20]}' string=" "/>
                <field name="name"/>
                <field name="create_date"/>
                <field name="time_last_action" widget="float_time"/>
                <field name="lang_id"/>
                <field name="visit_count"/>
                <field name="unique_page_ids" widget="many2many_tags"/>
                <field name="partner_count"/>
                <field name="is_connected" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="website_visitor_view_search" model="ir.ui.view">
        <field name="name">website.visitor.search</field>
        <field name="model">website.visitor</field>
        <field name="arch" type="xml">
            <search string="Search Visitor">
                <field name="lang_id"/>
                <field name="country_id"/>
                <field name="visit_count"/>
                <field name="unique_page_ids"/>
                <filter string="Visitors" name="type_visitor" domain="[('type', '=', 'visitor')]"/>
                <filter string="Customers" name="type_customer" domain="[('type', '=', 'customer')]"/>
                <separator/>
                <filter string="Is Connected" name="is_connected" domain="[('last_connection_date', '&gt;', datetime.datetime.now() - datetime.timedelta(minutes=5))]"/>

                <group string="Group By">
                    <filter string="Country" name="group_by_country" domain="[]" context="{'group_by': 'country_id'}"/>
                    <filter string="Lang" name="group_by_lang" domain="[]" context="{'group_by': 'lang_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_website_visitors" model="ir.actions.act_window">
        <field name="name">Web Visitors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">website.visitor</field>
        <field name="context">{'search_default_is_connected':1}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_website_visitor"
        name="Visitors"
        sequence="80"
        parent="website.menu_website_configuration"
        action="website.action_website_visitors"/>
</data></odoo>
