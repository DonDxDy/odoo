<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_inherit_form_view" model="ir.ui.view">
        <field name="name">product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='attribute_line_ids']" position="before">
                <group>
                    <field name="variant_type" widget="radio"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='attribute_line_ids']//tree" position="inside">
                <field name="is_custom_attr" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='attribute_line_ids']//tree//field[@name='value_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_custom_attr', '=', True)]}</attribute>
            </xpath>

            <xpath expr="//field[@name='attribute_line_ids']/tree/field[@name='attribute_id']" position="before">
                <field name="sequence" widget="handle"/>
            </xpath>
            <xpath expr="//p[@name='warning_msg']" position="attributes">
                <attribute name="attrs">{'invisible': [('variant_type', '=', 'configurable')]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_variant_inherit_form_view" model="ir.ui.view">
        <field name="name">product.variant.inherit.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <field name="attribute_value_ids" position="after">
                <field name="custom_value_ids">
                    <tree>
                        <field name="attribute_id"/>
                        <field name="value"/>
                        <field name="attachment_ids" widget="many2many_tags"/>
                    </tree>
                </field>
            </field>
        </field>
    </record>

</odoo>