<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_attribute_inherit_form_view" model="ir.ui.view">
        <field name="name">product.attribute.form</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='values_ids']" position="before">
                <group string="Custom Value" attrs="{'invisible':[('type','!=', 'custom')]}">
                    <field name="value_type"/>
                    <field name="min_value" attrs="{'invisible': [('value_type','not in', ['integer','float'])]}"/>
                    <field name="max_value" attrs="{'invisible':[('value_type','not in',['integer','float'])]}"/>
                    <field name="is_required"/>
                </group>
            </xpath>

            <xpath expr="//group[@name='values_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('type', '=', 'custom')]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>