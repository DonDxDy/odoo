<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_configuraator_action" model="ir.actions.client">
        <field name="name">Product Configurator</field>
        <field name="tag">product_configurator</field>
        <field name="target">new</field>
    </record>
    <record id="sale_order_inherit_form_view" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="order_line" position="before">
                <button string="Configure Product" name="%(action_product_configurator_wizard)d" type="action" class="oe_highlight" groups="product.group_product_variant"/>
            </field>

            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id']" position="after">
                <field name="is_configurable" invisible="1"/>
                <button name="%(action_product_configurator_wizard)d" type="action" icon="fa-cogs" groups="product.group_product_variant" attrs="{'invisible': [('is_configurable', '=', False)]}"/>
            </xpath>

            <xpath expr="//form//notebook//field[@name='order_line']/form/field[@name='name']" position="after">
                <div groups="product.group_product_variant">
                    <label for="custom_value_ids"/>
                    <field name="custom_value_ids">
                        <tree>
                            <field name="attribute_id"/>
                            <field name="name"/>
                            <field name="attachment_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </div>
            </xpath>
        </field>
    </record>

</odoo>