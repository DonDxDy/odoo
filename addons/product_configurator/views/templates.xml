<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="assets_frontend" inherit_id="website.assets_frontend">
		<xpath expr="." position="inside">
			<script type="text/javascript" src="/product_configurator/static/src/product_configurator_variant.js"></script>
		</xpath>
	</template>
	<template id="product_custom_value_vatiants" inherit_id="website_sale.product">
		
			<xpath expr="//div[@class='js_product']" position="before">
				<t t-set="attribute_value_ids" t-value="get_attribute_value_ids(product)"/>
		<ul t-attf-class="list-unstyled js_add_cart_variants #{ul_class}" t-att-data-attribute_value_ids="attribute_value_ids">
        <t t-foreach="product.attribute_line_ids.filtered(lambda r: r.attribute_id.type == 'custom_value')" t-as="variant_id">
          <li >
          	<strong t-field="variant_id.attribute_id.name"/>
          	
				<t t-if="variant_id.attribute_id.type == 'custom_value'">
					<input name="attribute_type" type="hidden" value="custom_value"/>
					<!-- <input name="product_tmpl_id" type="hidden" t-att-value="variant_id"/> -->
					<input name="attribute_name" type="hidden" t-att-value="variant_id.attribute_id.name"/>
					<t t-if="variant_id.attribute_id.value_type == 'char'">
						
							<input type="text" t-att-name ="'attribute-%s-%s' % (product.id, variant_id.attribute_id.id)"/>
						
					</t>
					<t t-if="variant_id.attribute_id.value_type == 'integer'">
						
							<input type="text" t-att-name ="'attribute-%s-%s' % (product.id, variant_id.attribute_id.id)"/>
						
					</t>
					<t t-if="variant_id.attribute_id.value_type == 'float'">
						
							<input type="text" t-att-name ="'attribute-%s-%s' % (product.id, variant_id.attribute_id.id)"/>
						
					</t>
					<t t-if="variant_id.attribute_id.value_type == 'textarea'">
						
							<textarea rows="3" cols="30" t-att-name="textarea"/>
						
					</t>
					<t t-if="variant_id.attribute_id.value_type == 'color'">
						
							<input class="js_product_variant_change" type="color" name="color" data-name="color"/>
					
					</t>
					<t t-if="variant_id.attribute_id.value_type == 'attachment'">
				        <div id="wrap" class="oe_structure oe_empty">
				            <div class="container">
				                <form class="website_fileupload_form" method="POST">
				                    <div class="form-group"> 
				                        <!-- <label class="control-label" for="file">File:</label>  -->
				                        <input type="file" t-att-t-att-name="attachment" class="form-control" accept="image/*,application/pdf"/> 
				                    </div>
				                </form>
				                <!-- <a class="btn btn-info website_fileupload_submit">Save</a> -->
				            </div>
				        </div>
					</t>
					<t t-if="variant_id.attribute_id.value_type == 'date'">
						<div class="form-group">
							<div class="o_product_configurator" id="datepicker">
					            <input type="text" class="form-control" data-date-format="YYYY-MM-DD" t-att-name="date" placeholder="YYYY-MM-DD" />
					            <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
					        </div>
				    	</div>
					</t>
					<t t-if="variant_id.attribute_id.value_type == 'datetime'">
						<div class="form-group">
							<div class="o_product_configurator" id="datetimepicker">
					            <input type="text" class="form-control" data-date-format="YYYY-MM-DD" t-att-name="datetime" placeholder="YYYY-MM-DD hh:mm:ss" />
					            <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
					        </div>
				        </div>
					</t>
					
				</t>
			
		  </li>
		 </t>
		</ul>
	</xpath>
	</template>
</odoo>