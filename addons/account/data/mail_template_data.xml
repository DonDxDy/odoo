<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
        <!--Email template -->
        <record id="email_template_edi_invoice" model="mail.template">
            <field name="name">Invoicing: Invoice email</field>
            <field name="email_from">${(object.user_id.email and '%s &lt;%s&gt;' % (object.user_id.name, object.user_id.email) or '')|safe}</field>
            <field name="subject">${object.company_id.name} Invoice (Ref ${object.number or 'n/a'})</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="account.model_account_invoice"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="account_invoices"/>
            <field name="report_name">Invoice_${(object.number or '').replace('/','_')}_${object.state == 'draft' and 'draft' or ''}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html" type="html">
<div>
<table border="0" cellpadding="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td align="center">
<table border="0" width="590" cellpadding="0" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;" summary="o_mail_notification">
<tbody>
    <!-- HEADER -->
    <tr>
        <td align="center" style="min-width: 590px;">
            <table width="590" border="0" cellpadding="0" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate; padding: 16px;">
                <tr><td valign="middle">
                    <span style="font-size: 10px;">Your Invoice<t t-esc="'%s' % model_description or 'document'"/></span><br/>
                    <span style="font-size: 20px; font-weight: bold;">${object.partner_id.name}</span>
                </td><td valign="middle" align="right">
                    <img src="/logo.png?company=${object.company_id.id}" style="padding: 0px; margin: 0px; height: auto; width: 100px;" t-att-alt="'%s' % company.name"/>
                </td></tr>
                <tr><td colspan="2" style="text-align:center;">
                  <hr width="100%" style="background-color: rgb(204,204,204); border: medium none; clear: both; display: block; font-size: 0px; height: 1px; line-height: 0; margin: 16px 0px 16px 0px;"/>
                </td></tr>
            </table>
        </td>
    </tr>

    <!-- CONTENT -->
    <tr>
        <td align="center" style="min-width: 590px;">
            <table width="590" border="0" cellpadding="0" bgcolor="#ffffff" style="min-width: 590px; background-color: rgb(255, 255, 255); padding: 16px; border-collapse:separate;">
                <tbody><td valign="top" style="font-family:Verdana,Helvetica,sans-serif; color: #555; font-size: 14px;">
                    <div style="margin-bottom: 35px; font-size: 14px; line-height: 1.7">
                        Hi,<br/>
                        Here's the invoice confirmation <strong>${object.number}</strong> amounting in <strong>${format_amount(object.amount_total, object.currency_id)}</strong> from ${object.company_id.name}.
                    </div>
                    <div>
                        <a href="${access_url}" style="background-color: #875A7B; padding: 10px; text-decoration: none; color: #ffffff; border-radius: 5px;" class="o_default_snippet_text">View &amp; Confirm Invoice</a>
                    </div>
                    <div style="font-size: 11px; color: #454748; opacity: 0.7; margin-top: 15px; padding-left: 5px">Or see attachments to this email
                    </div>
                    <div style="font-size: 14px; color: #454748; margin-top: 25px">Reply to this email if you have any questions.
                    </div>
                    <div style="font-size: 14px; margin-top: 25px">
                        Thank you,<br/>${object.user_id.signature | safe}
                    </div>
                    <tr><td colspan="2" style="text-align:center;">
                      <hr width="100%" style="background-color: rgb(204,204,204); border: medium none; clear: both; display: block; font-size: 0px; height: 1px; line-height: 0; margin: 16px 0px 16px 0px; margin-top: 25px"/>
                    </td></tr>
                </td></tbody>
            </table>
        </td>
    </tr>

    <!-- FOOTER -->
    <tr>
        <td align="center" style="min-width: 590px;">
            <table width="590" border="0" cellpadding="0" style="min-width: 590px; background-color: white; font-size: 12px; padding: 0px 8px 0px 8px; border-collapse: separate; padding: 16px">
                <tr><td valign="middle" align="left">
                    ${object.company_id.name}
                    <td align="right" style="opacity: 0.7;">
                    ${object.company_id.phone} | ${object.company_id.email} | 
                    ${object.company_id.website}
                    </td>
                </td></tr>
            </table>
        </td>
    </tr>
</tbody>
</table>
</td></tr>

    <!-- POWERED BY -->
    <tr><td align="center" style="min-width: 590px;">
        <table width="590" border="0" cellpadding="0" style="min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;">
          <tr><td style="text-align: center; font-size: 14px;">
            Powered by <a target="_blank" href="https://www.odoo.com" style="color: #875A7B;">odoo</a>
          </td></tr>
        </table>
    </td></tr>
</table>
</div>
</field>
</record>
</odoo>
