<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.form.inherit.account.taxes</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="sales" position="after">
                    <page string="Purchase" name="purchase" attrs="{'invisible': [('purchase_ok','=',False)]}" groups="account.group_account_user">
                        <!-- extended in purchase to make page also visible to purchase users -->
                        <group name="purchase">
                            <group string="Vendor Bills" name="bill">
                                <field name="supplier_taxes_id" widget="many2many_tags" context="{'default_type_tax_use':'purchase'}"/>
                            </group>
                        </group>
                    </page>
                </page>
                <xpath expr="//div[@name='pricing']" position="after">
                    <field name="taxes_id" widget="many2many_tags" context="{'default_type_tax_use':'sale'}"/>
                </xpath>
            </field>
        </record>

        <record id="product_template_form_view_account" model="ir.ui.view">
            <field name="name">product.template.form.inherit.account</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="groups_id" eval="[(4, ref('account.group_account_user'))]"/>
            <field name="arch" type="xml">
                <page name="inventory" position="after">
                    <page string="Accounting" name="invoicing">
                        <group name="properties">
                            <group string="Receivables">
                                <field name="property_account_income_id"
                                    domain="[('internal_type','=','other'),('deprecated','=',False)]"
                                    groups="account.group_account_user"/>
                            </group>
                            <group string="Payables" name="payables">
                                <field name="property_account_expense_id"
                                    domain="[('internal_type','=','other'),('deprecated','=',False)]"
                                    attrs="{'readonly': [('purchase_ok', '=', False)]}"
                                    groups="account.group_account_user"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record id="view_category_property_form" model="ir.ui.view">
            <field name="name">product.category.property.form.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <group name="first" position="after">
                    <group name="account_property" >
                        <group string="Account Properties" groups="account.group_account_user">
                            <field name="property_account_income_categ_id" domain="[('internal_type','=','other'),('deprecated', '=', False)]"/>
                            <field name="property_account_expense_categ_id" domain="[('internal_type','=','other'),('deprecated', '=', False)]"/>
                        </group>
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>
