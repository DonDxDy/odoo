<?xml version='1.0' encoding='utf-8'?>

<templates>
    <t t-name="AccountTaxGroupTemplate" owl="1">
        <table class="o_group o_inner_group oe_subtotal_footer border-0 my-0" style="min-width: 100%;">
            <tbody>
                <t t-foreach="value" t-as="line">
                    <tr>
                        <td class="o_td_label oe_tax_group_name">
                            <label class="o_form_label" t-esc="line[0]"/>
                        </td>
                        <td class="oe_tax_group_editable" t-att-data-tax-group-id="line[6]">
                            <t t-if="displayEditWidget">
                                <span t-attf-class="tax_group_edit {{ state.shouldDisplayEdit ? 'd-none' : '' }}"
                                    t-on-click.prevent="_onClick">
                                    <i class="fa fa-pencil"></i>
                                    <span class="oe_tax_group_amount_value">
                                        <t t-esc="line[3]"/>
                                    </span>
                                </span>
                                <span t-attf-class="tax_group_edit_input {{ !state.shouldDisplayEdit ? 'd-none' : '' }}">
                                    <input type="text"
                                        class="o_field_float o_field_number o_input"
                                        t-att-data-original-value="line[1]"
                                        t-on-keydown="_onKeydown"
                                        t-on-blur.prevent="_onBlur"/>
                                </span>
                            </t>
                            <t t-if="!displayEditWidget">
                                <span class="oe_tax_group_amount_value">
                                    <t t-esc="line[3]"/>
                                </span>
                            </t>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </t>
</templates>
