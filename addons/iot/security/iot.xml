<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_iot">
        <field name="name">IoT</field>
        <field name="description">Helps you manage IoT boxes, devices and messages.</field>
        <field name="sequence">5</field>
    </record>

    <record id="iot.group_iot_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_iot"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">The IoT user can use the devices and read their information. </field>
    </record>

    <record id="iot.group_iot_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_iot"/>
        <field name="implied_ids" eval="[(4, ref('iot.group_iot_user'))]"/>
        <field name="comment">The IoT manager can delete unused devices and change some information on them. </field>
    </record>
</odoo>