<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- SEARCH records-->
        <record id="search_only_employee" model="ir.ui.view">
            <field name='name'>search_only_employee</field>
            <field name='model'>res.users</field>
            <field name='arch' type='xml'>
                <search>
                    <field name="name" />
                    <!-- <filter name='employee' string="Employee" domain="[('is_company','=', False)]" /> -->
                </search>
            </field>
        </record>

        <record id="search_only_company" model="ir.ui.view">
            <field name='name'>search_only_company</field>
            <field name='model'>res.partner</field>
            <field name='arch' type='xml'>
                <search>
                    <field name="name" />
                    <filter name='company' string="Company" domain="[('is_company','=', True)]" />
                </search>
            </field>
        </record>

        <!-- FORM records -->
        <record id="lunch_location_form" model="ir.ui.view">
            <field name='name'>Lunch Location Form</field>
            <field name="model">lunch.location</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                        <field name="company_id" />
                    </group>
                </form>
            </field>
        </record>

        <record id="lunch_employee_form" model="ir.ui.view">
            <field name="name">lunch_employee_form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form> 
                    <sheet>
                        <field name="name" />
                        <group>
                            <field name="lunch_location_id"/>                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Action for Location-->
        <record id="lunch_location_act_window" model="ir.actions.act_window">
            <field name="name">lunch_location_act_window</field>
            <field name="res_model">lunch.location</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <menuitem name="Location" parent="menu_lunch_config" id="lunch_location_menu" action="lunch_location_act_window" sequence="99"/>

        <!--Action for Employees-->
        <record id="employee_act_window" model="ir.actions.act_window">
            <field name="name">employee_act_window</field>
            <field name="res_model">res.users</field>
            <field name="search_view_id" ref="search_only_employee"/>
            <field name="context">{"search_default_employee":1}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('base.view_partner_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('lunch_employee_form')})]"/>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Employee" parent="menu_lunch_config" id="employee_menu" action="employee_act_window" sequence="99"/>

        <!--Action for Companies-->
        <record id="company_act_window" model="ir.actions.act_window">
            <field name="name">company_act_window</field>
            <field name="res_model">res.partner</field>
            <field name="search_view_id" ref="search_only_company"/>
            <field name="context">{"search_default_company":1}</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem name="Company" parent="menu_lunch_config" id="company_menu" action="company_act_window" sequence="99"/>

    </data>
</odoo>