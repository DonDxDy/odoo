<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="lunch_company_form" model="ir.ui.view">
            <field name="name">Company Form</field>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name='name' />
                            <field name='location_ids' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="lunch_company_action" model="ir.actions.act_window">
            <field name="name">Companies</field>
            <field name="res_model">res.company</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        
        <menuitem name="Company" id="lunch_company_menu" parent="menu_lunch_config" action="lunch_company_action"/>
    </data>
</odoo>
