<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="user_form_view" model="ir.ui.view">
            <field name="name">User Form</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name='name' />
                            <field name='company_id' />
                            <field name='location_id' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="user_tree_view" model="ir.ui.view">
            <field name="name">Users List</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='name' />
                    <field name='location_id' />
                </tree>
            </field>
        </record>

        <record id="user_action" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="res_model">res.users</field>
            <field 
                name="view_ids" 
                eval="[
                    (5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('user_tree_view')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('user_form_view')})
                ]"
            />
            <field name="view_mode">kanban,tree,form</field>
        </record>
    </data>
</odoo>
