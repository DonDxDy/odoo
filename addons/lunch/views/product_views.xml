<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_tree_view" model="ir.ui.view">
            <field name="name">Products List</field>
            <field name="model">lunch.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="price" />
                    <field name="description" />
                    <field name="category_id" />
                    <field name="supplier_id" />
                </tree>
            </field>
        </record>

        <record id="product_action" model="ir.actions.act_window">
            <field name="name">Products</field>
            <field name="res_model">lunch.product</field>
            <field 
                name="view_ids" 
                eval="[
                    (5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('product_tree_view')}),
                ]"
            />
            <field name="view_mode">kanban,tree,form</field>
        </record>
    </data>
</odoo>
