<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="location_tree_view" model="ir.ui.view">
            <field name="name">Location Tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name='name' />
                    <field name='company_id' />
                    <field name='user_ids' />
                </tree>
            </field>
        </record>

        <record id="location_form_view" model="ir.ui.view">
            <field name="name">Location Form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <field name='user_ids_possible' invisible="1" />
                    <field name='is_work_location' invisible="1" />
                    <sheet>
                        <group>
                            <field name='name' />
                            <field name='company_id' />
                            <field name='user_ids' widget='many2many' domain="[('id', 'in', user_ids_possible)]" />
                            <field name='supplier_ids' />
                            <field name='product_ids' />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="location_action" model="ir.actions.act_window">
            <field name="name">Locations</field>
            <field name="res_model">res.partner</field>
            <field name="domain">[('is_work_location', '=', True)]</field>
            <field name="context">
                {
                    "default_is_work_location" : True
                }
            </field>
            <field 
                name="view_ids" 
                eval="[
                    (5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('location_tree_view')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('location_form_view')})
                ]"
            />
            <field name="view_mode">kanban,tree,form</field>
        </record>
    </data>
</odoo>
