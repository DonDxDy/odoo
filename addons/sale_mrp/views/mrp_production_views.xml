<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

    <record id="mrp_production_form_view_sale" model="ir.ui.view">
        <field name="name">mrp.production.inherit.form.sale</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="model">mrp.production</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_sale_order" type="object" icon="fa-wrench" attrs="{'invisible': [('sale_order_id', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">1</span>
                        <span class="o_stat_text">SO Source</span>
                        <field name="sale_order_id" invisible="1"/>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</data></odoo>
