<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <!-- tree view -->
    <record id="notify_user_tree" model="ir.ui.view">
        <field name="name">notify.user.tree</field>
        <field name="model">notify.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="current_user"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="notify_user_form" model="ir.ui.view">
        <field name="name">notify.user.form</field>
        <field name="model">notify.user</field>
        <field name="arch" type="xml">
            <form>
                <field name="name"/>
                <field name="current_user"/>
            </form>
        </field>
    </record>

    <!--action -->
    <record id="notify_user_action_view" model="ir.actions.act_window">
        <field name="name">Website Mail</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">notify.user</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- menuitem -->
    <menuitem  id="menu_mail_sub_menu"  name="Get User" parent="website.menu_website_configuration" sequence="100" action="notify_user_action_view"/>

</odoo>
