<?xml version="1.0" encoding="utf-8"?>
<odoo>


<menuitem name="Invoicing"
            id="menu_finance"
            sequence="40"/>
<record id="invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                    <field name="name"/>
                    <field name="payment_term"/>
                    <field name="extra_name"/>
                    <field name="second_stuff"/>
                </form>
            </field>
</record>

<record id="action_invoice" model="ir.actions.act_window">
    <field name="name">Invoice</field>
    <field name="res_model">account.invoice</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree</field>
    <field eval="False" name="view_id"/>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a vendor credit note
      </p><p>
        Note that the easiest way to create a vendor credit note it to do it directly from the vendor bill.
      </p>
    </field>
</record>
<record id="action_move" model="ir.actions.act_window">
    <field name="name">Moves</field>
    <field name="res_model">account.move</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree</field>
    <field eval="False" name="view_id"/>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a Move
      </p><p>
        Create Anything
      </p>
    </field>
</record>
<menuitem id="menu_finance_moves" name="Account Moves" parent="base.menu_administration"  action="action_invoice" sequence="2"/>
<menuitem id="menu_finance_invoices" name="Account Invoices" parent="base.menu_administration" action="action_move" sequence="3"/>
</odoo>