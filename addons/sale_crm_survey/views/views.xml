<odoo>
  <data>
    <record model="ir.ui.view" id="sale_crm_survey.form">
      <field name="name">sale_crm_survey form</field>
      <field name="model">sale.order.template</field>
      <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group" position="inside">
          <group>
            <field name="self_mode"/>
          </group>
        </xpath>
        <notebook name="main_book" position="inside">
            <page string="Self Mode"  attrs="{'invisible': [('self_mode','=',False)]}" id="self_mode">
                <group>
                    <field name="survey_id"/>
                    <field name="rule_ids"/>
                    <!-- <field name="user_input"/> -->
                    <field name="confirmation" widget="radio"/>
                    <!-- <field name="name" attrs="{'invisible': [('confirmation', '!=', 'opportunity')]}"/> -->
                    <field name="user_id" attrs="{'invisible': [('confirmation', '!=','confirm_order'), ('confirmation', '!=', 'opportunity')]}"/>
                    <field name="team_id" attrs="{'invisible': [('confirmation', '!=','confirm_order'), ('confirmation', '!=', 'opportunity')]}"/>
                    <field name="type" attrs="{'invisible': [('confirmation', '!=', 'opportunity')]}"/>
                    <field name="tag_ids" attrs="{'invisible': [('confirmation', '!=', 'opportunity')]}"/>
                    <field name="priority" attrs="{'invisible': [('confirmation', '!=', 'opportunity')]}"/>
                    <!-- <field name="quotation"/> -->
                    <!-- <field name="opportunity" widget="radio"/> -->
                    <!-- <field name="sale_id" attrs="{'invisible': [('confirm_order', '=',False)]}" id="confirm_order"/>
                    <field name="saleperson" attrs="{'invisible': [('confirm_order', '=',False)]}" id="confirm_order"/>
                    <field name="saleteam" attrs="{'invisible': [('confirm_order', '=',False)]}" id="confirm_order"/> -->
                </group>
            </page>
        </notebook>
      </field>
    </record>

    <record model="ir.ui.view" id="sale_crm_survey_rules_form">
      <field name="name">sale_crm_survey_rules form</field>
      <field name="model">sale_crm_survey.rules</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
           <group>
            <tree>
             <field name="template_id"/>
            </tree>
           </group>
          </sheet>
        </form>
      </field>
    </record>
   
