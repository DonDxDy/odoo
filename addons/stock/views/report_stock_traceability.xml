<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_mrp_line">
        <t t-foreach="lines" t-as="a">
            <t t-set="trclass" t-value="'o_stock_reports_level0' if a.get('model') == 'stock.move.line' else 'o_stock_reports_default_style'"/>
            <tr t-att-class="trclass"
                data-model="stock.traceability.report"
                data-method="get_lines_html"
                t-att-data-line_id="a['id']"
                t-att-data-model_id="a['model_id']"
                t-att-data-model_name="a['model']"
                t-att-data-level="a.get('level', -29) + 30">
                <t t-set="span_color" t-valuef="color: {{ '#a94442' if a['usage'] == 'out' else '#3c763d' if a['usage'] == 'in' else '#666666' }};"/>
                <t t-set="tdclass" t-value="'o_stock_reports_unfoldable' if a.get('unfoldable') else None"/>
                <t t-set="spanclass" t-value="None if a.get('unfoldable') else 'o_stock_reports_nofoldable'"/>
                <t t-foreach="a['columns']" t-as="c">
                      <td t-att-class="tdclass">
                        <t t-if="c_first">
                            <span t-attf-style="margin-left: {{a.get('level', 0)}}px;"/>
                            <t t-if="a.get('unfoldable')">
                                <span type="toggle" class="o_stock_reports_caret_icon"><i class="fa fa-fw fa-caret-right" role="img" aria-label="Unfold" title="Unfold"></i></span>
                            </t>
                            <t t-if="a.get('is_used')">
                                <a type="action" class="o_stock_reports_stream" title="Traceability Report" aria-label="Traceability Report"
                                   data-views='[[false, "qweb"]]'
                                   t-att-data-context="json.dumps({
                                       'active_id': a['model_id'],
                                       'model': a['model'],
                                       'lot_name': a['lot_name'],
                                   })"
                                ><i class="fa fa-fw fa-level-up fa-rotate-270"/></a>
                            </t>
                        </t>
                        <t t-if="a['reference'] == c">
                            <span t-if="c" t-att-class="spanclass">
                                <a tabindex="-1" type="action"
                                   t-att-data-model="a['res_model']"
                                   t-att-data-res-id="a['res_id']">
                                    <t t-esc="c"/>
                                </a>
                            </span>
                        </t>
                        <span t-elif="a['lot_name'] == c">
                            <a tabindex="-1" type="action"
                               t-att-data-domain="json.dumps([('id', '=', a['lot_id'])])"
                               data-views='[[false, "qweb"]]'
                               t-att-data-context="json.dumps({
                                    'active_id': a['lot_id'],
                                    'model': 'stock.production.lot',
                               })">
                                <t t-esc="c"/>
                            </a>
                        </span>
                        <t t-else="">
                            <span t-att-style="span_color">
                                <t t-esc="c"/>
                            </span>
                        </t>
                    </td>
                </t>
            </tr>
        </t>
    </template>

    <record model="ir.ui.view" id="report_stock_inventory">
        <field name="name">Traceability Report Teplate</field>
        <field name="model">stock.traceability.report</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
        <div class="container o_stock_reports_page o_stock_reports_no_print">
            <span t-if="lines" class="o_report_heading text-left"><h1>Traceability Report</h1></span>
            <div class="o_stock_reports_table table-responsive">
                <t t-if="not lines">
                    <span class="text-center"><h1>No operation made on this lot.</h1></span>
                </t>
                <t t-if="lines">
                    <table width='100%' class="table">
                        <thead>
                            <tr class="o_report_header">
                                <th class="o_report_line_header">Reference</th>
                                <th class="o_report_line_header">Product</th>
                                <th class="o_report_line_header">Date</th>
                                <th class="o_report_line_header">Lot/Serial #</th>
                                <th class="o_report_line_header">From</th>
                                <th class="o_report_line_header">To</th>
                                <th class="o_report_line_header">Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-call="stock.report_mrp_line"/>
                        </tbody>
                    </table>
                </t>
            </div>
        </div>
        </field>
    </record>

    <template id="assets_stock_print_report" inherit_id="web.assets_common" active="True">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/scss" href="/stock/static/src/scss/stock_traceability_report.scss"/>
        </xpath>
    </template>

    <template id="report_stock_inventory_print">
        <t t-raw="'&lt;base href=%s&gt;' % base_url"/>
        <t t-call="web.html_container">
            <t t-call-assets="stock.assets_stock_print_report" t-js="False"/>
            <t t-call='stock.report_stock_body_print'/>
        </t>
    </template>

    <template id="report_stock_body_print">
        <div class="container o_stock_reports_page o_stock_reports_no_print">
            <span class="text-left"><h3>Traceability Report</h3></span>
            <div class="table-responsive">
                <table width='100%' class="o_stock_reports_table table">
                    <thead>
                        <tr class="o_report_header">
                            <th class="o_report_line_header">Reference</th>
                            <th class="o_report_line_header">Product</th>
                            <th class="o_report_line_header">Date</th>
                            <th class="o_report_line_header">Lot/Serial #</th>
                            <th class="o_report_line_header">From</th>
                            <th class="o_report_line_header">To</th>
                            <th class="o_report_line_header">Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="space_td" t-value="'margin-left: 0'"/>
                        <t t-foreach="lines" t-as="a">
                            <t t-set="space_td" t-value="'margin-left: '+ str(a['level']) + 'px;'"/>
                            <t t-set="trclass" t-value="'o_stock_reports_default_style'"/>
                            <t t-if="a.get('model') == 'stock.move.line'"><t t-set="trclass" t-value="'o_stock_reports_level0'"/></t>
                            <t t-set="column" t-value="0" />
                            <tr t-att-data-id="a['id']" t-att-data-model="a['model']" t-att-class="trclass">
                                <t t-set="tdclass" t-value="''" />
                                <t t-if="a.get('unfoldable')"><t t-set="tdclass" t-value="'o_stock_reports_unfoldable'" /></t>
                                <t t-set="column" t-value="0" />
                                <t t-foreach="a['columns']" t-as="c">
                                    <t t-set="column" t-value="column + 1" />
                                    <td>
                                        <t t-if="column == 1">
                                            <span t-att-style="space_td"></span>
                                        </t>
                                        <span>
                                            <t t-raw="c" />
                                        </span>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </template>
</odoo>
