<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_insufficient_inventory" model="ir.ui.view">
            <field name="name">scrap.available.qty.location.wise</field>
            <field name="model">insufficient.inventory.wizard</field>
            <field name="arch" type="xml">
                <form>
                    The product <b><field name="product_id"/></b> is not available in sufficient quantity in <b><field name="location_id"/></b>.
                    <field name="wizard_line_ids"/>
                    <br/>
                    Are you sure you want to confirm this operation ? This may lead to inconsistencies in your inventory. 
                    <footer>
                        <button string="Discard" class="btn-primary" special="cancel"/>
                        <button string="Confirm" name="action_validate" type="object" class="btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_insufficient_inventory" model="ir.actions.act_window">
            <field name="name">Warning</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">insufficient.inventory.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

</odoo>