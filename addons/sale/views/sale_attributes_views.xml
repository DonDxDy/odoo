<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="sale_attributes_view_form" model="ir.ui.view">
            <field name="name">sale.attributes.form</field>
            <field name="model">sale.attributes</field>
            <field name="arch" type="xml">
                <form string="Attributes">
                    <sheet>
                        <group>
                            <field name="product_id" readonly="1" string="Product"/>
                            <field name="sale_order_line_id" invisible="1"/>
                        </group>
                        <field name="sale_attribute_lines">
                            <tree string="Sale Attribute Lines" editable="bottom" create="false" delete="false">
                                <field name="attribute_id" readonly="1" force_save="1"/>
                                <field name="product_tmpl_id" invisible="1"/>
                                <field name="attribute_value_line_id" domain="[('attribute_id', '=', attribute_id), ('product_tmpl_id', '=', product_tmpl_id)]" context="{'show_attribute': False}" options="{'no_open': True}"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_attributes_action" model="ir.actions.act_window">
            <field name="name">Update Order lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.attributes</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

</odoo>
