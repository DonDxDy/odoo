<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_template_sale_form_view">
        <field name="name">product.template.sales</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//group[@name='invoicing']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_product_product_kanban_sale" model="ir.ui.view">
        <field name="name">view.product.template.kanban.view</field>
        <field name="model">product.product</field>
        <field name="priority">998</field>
        <field name="arch" type="xml">
            <kanban edit="0" class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.product', 'image_64', record.id.raw_value)" alt="Product"/>
                            </div>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <div>
                                                <strong><span t-esc="record.name.value"/></strong>
                                            </div>
                                        </strong>
                                        <ul>
                                            <li><strong>Price: <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"></field></strong></li>
                                            <field name="currency_id" invisible="True"/>
                                        </ul>
                                    </div>
                                    <button type="object" class="col-12 h-100" name="product_add_sol_quantity" style="position: absolute;top: 0;left: 0;opacity: 0;"/>
                                    <div class="pull-right h-100 pt-2 flex-shrink-0" attrs="{'invisible': [('product_sol_quantity', '=', 0)]}"
                                        style="z-index:2;">
                                        <button class="btn btn-primary p-0" type="object" name="product_remove_sol_quantity" style="width:30px;height:30px;"><span style="font-size:1.5rem;">-</span></button>
                                        <span  class="align-middle p-0 pr-2 pl-2" style="font-size:2.5rem"><field name="product_sol_quantity"/></span>
                                        <button class="btn btn-primary p-0" type="object" name="product_add_sol_quantity" style="width:30px;height:30px;"><span style="font-size:1.5rem;">+</span></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
