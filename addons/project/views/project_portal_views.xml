<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="portal_task_view_kanban" model="ir.ui.view">
        <field name="name">Project Portal: Project Kanban View (readonly)</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_kanban_project_tasks"
                    examples="project" quick_create="false"
                    group_create="false" group_delete="false" group_edit="false"
                    edit="false" create="false" delete="false" duplicate="false"
                    archivable="false">
                <field name="color"/>
                <field name="priority"/>
                <field name="stage_id" options='{"group_by_tooltip": {"description": "Stage Description", "legend_priority": "Use of stars"}}'/>
                <field name="sequence"/>
                <field name="legend_blocked"/>
                <field name="legend_normal"/>
                <field name="legend_done"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content" t-att-data-id="id">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <field name="project_id" invisible="context.get('default_project_id', False)"/>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="kanban_state" widget="state_selection" groups="base.group_user"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="portal_task_view_form" model="ir.ui.view">
        <field name="name">Project Portal: Task Form View (readonly)</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_assign_to_me']" position="replace"/>
            <xpath expr="//button[@name='toggle_active']" position="replace"/>
            <xpath expr="//button[@name='%(portal.portal_share_action)d']" position="replace"/>
            <xpath expr="//field[@name='stage_id']" position="attributes">
                <attribute name="options">{'fold_field': 'fold'}</attribute>
            </xpath>
            <xpath expr="//field[@name='message_follower_ids']" position="replace"/>
            <xpath expr="//field[@name='activity_ids']" position="replace"/>
            <xpath expr="//field[@name='message_ids']" position="attributes">
                <attribute name="widget">portal_project_mail_thread</attribute>
            </xpath>
        </field>
    </record>

    <record id="portaledit_view_task_kanban" model="ir.ui.view">
        <field name="name">Project Portal: Project Kanban View (edit)</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="attributes">
                <attribute name="quick_create_view">project.portaledit_quick_create_task_form</attribute>

                <attribute name="quick_create">true</attribute>
                <attribute name="group_create">false</attribute>
                <attribute name="group_delete">false</attribute>

                <attribute name="create">true</attribute>
                <attribute name="delete">false</attribute>
                <attribute name="duplicate">false</attribute>
            </xpath>
            <xpath expr="//templates//field[@name='activity_ids']" position="replace"/>
            <xpath expr="//div[hasclass('o_dropdown_kanban')]" position="replace"/>
            <xpath expr="//img[hasclass('oe_kanban_avatar')]" position="replace"/>
        </field>
    </record>

    <record id="portaledit_view_task_form" model="ir.ui.view">
        <field name="name">Project Portal: Task Form View (edit)</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_assign_to_me']" position="replace"/>
            <xpath expr="//button[@name='toggle_active']" position="replace"/>
            <xpath expr="//button[@name='%(portal.portal_share_action)d']" position="replace"/>
            <xpath expr="//field[@name='message_follower_ids']" position="replace"/>
            <xpath expr="//field[@name='activity_ids']" position="replace"/>
            <xpath expr="//field[@name='message_ids']" position="attributes">
                <attribute name="widget">portal_project_mail_thread</attribute>
            </xpath>
        </field>
    </record>

    <record id="portaledit_quick_create_task_form" model="ir.ui.view">
        <field name="name">project.task.form.portaledit_quick_create</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.quick_create_task_form"/>
        <field name="mode">primary</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace"/>
        </field>
    </record>

    <record id="portal_view_task_search_form" model="ir.ui.view">
        <field name="name">portal.project.task.search.form</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Tasks"/>
                <field name="tag_ids"/>
                <field name="user_id" string="Assigned to" filter_domain="[('user_id','ilike',self)]"/>
            </search>
        </field>
    </record>

    <record id="action_portal_project_all_tasks" model="ir.actions.act_window">
        <field name="name">Project</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban</field>
        <field name="search_view_id" ref="project.portal_view_task_search_form"/>
    </record>
</odoo>
