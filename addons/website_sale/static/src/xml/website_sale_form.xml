<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="website_sale.default_customer_form">
        <t t-set="field" t-value="{}"/>
        <t t-set="field.formatInfo" t-value="{}"/>
        <t t-set="field.formatInfo.labelPosition" t-value="'left'"/>
        <t t-set="field.formatInfo.labelWidth" t-value="'200px'"/>

        <t t-call="website_form.field_char">
            <t t-set="field.custom" t-value="false"/>
            <t t-set="field.required" t-value="false"/>
            <t t-set="field.modelRequired" t-value="true"/>
            <t t-set="field.name" t-value="'name'"/>
            <t t-set="field.string" t-value="'Name'"/>
        </t>

        <t t-call="website_form.field_email">
            <t t-set="field.custom" t-value="false"/>
            <t t-set="field.required" t-value="true"/>
            <t t-set="field.modelRequired" t-value="false"/>
            <t t-set="field.name" t-value="'email'"/>
            <t t-set="field.string" t-value="'Email'"/>
        </t>

        <t t-call="website_form.field_char">
            <t t-set="field.custom" t-value="false"/>
            <t t-set="field.required" t-value="false"/>
            <t t-set="field.modelRequired" t-value="false"/>
            <t t-set="field.name" t-value="'phone'"/>
            <t t-set="field.string" t-value="'Phone'"/>
        </t>

        <t t-call="website_form.field_char">
            <t t-set="field.custom" t-value="false"/>
            <t t-set="field.required" t-value="false"/>
            <t t-set="field.modelRequired" t-value="false"/>
            <t t-set="field.name" t-value="'company_name'"/>
            <t t-set="field.string" t-value="'Company Name'"/>
        </t>
    </t>

</templates>
