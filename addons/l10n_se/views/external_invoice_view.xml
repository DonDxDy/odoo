<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="l10n_in_external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[hasclass('o_standard_footer')]/div/ul" position="inside">
            <li t-if="company.partner_id.corporate_id" class="list-inline-item d-inline">Corporate ID: <span t-field="company.partner_id.corporate_id"/></li>
        </xpath>
    </template>
    <template id="l10n_in_external_layout_background" inherit_id="web.external_layout_background">
        <xpath expr="//div[hasclass('o_background_footer')]/div/ul" position="inside">
            <li t-if="company.partner_id.corporate_id" class="list-inline-item d-inline">Corporate ID: <span t-field="company.partner_id.corporate_id"/></li>
        </xpath>
    </template>
    <template id="l10n_in_external_layout_boxed" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[hasclass('o_boxed_footer')]/div/ul" position="inside">
            <li t-if="company.partner_id.corporate_id" class="list-inline-item d-inline">Corporate ID: <span t-field="company.partner_id.corporate_id"/></li>
        </xpath>
    </template>

</odoo>
