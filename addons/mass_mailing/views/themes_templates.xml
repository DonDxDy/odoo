<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Default Theme -->
    <template id="theme_default_template">
        <div class="o_mail_block_header_logo">
            <div class="snippet_row">
                <div class="o_mail_snippet_general">
                    <table align="center" width="600" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles o_mail_h_padding">
                        <tr>
                            <td width="20%"/>
                            <td valign="center" width="60%" class="o_mail_logo_container text-center o_mail_v_padding">
                                <img border="0" src="/mass_mailing/static/src/img/theme_default/s_default_image_logo.png" style="height:auto;max-width:400px;" alt="Your Logo" />
                            </td>
                            <td width="20%" style="text-align:right"/>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="o_mail_block_title_text" style="margin-top:25px;">
            <div class="snippet_row">
                <div class="o_mail_snippet_general">
                    <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles" width="600">
                        <tbody>
                            <tr>
                                <td width="100%" class="o_mail_h_padding o_mail_v_padding">
                                    <p class="o_mail_display_2">Thank you for joining us!</p>

                                    <p>We want to take this opportunity to welcome you to our ever-growing community!<br/></p>
                                    <p>Your platform is ready for work. It will help you reduce the costs of digital signage, attract new customers and increase sales.</p>
                                    <p>Enjoy,</p>
                                    <img src="/mass_mailing/static/src/img/theme_default//demo/signature.png" style="width:125px; margin-top:8px;margin-bottom:-25px;" alt="Demo Signature"/>
                                    <p>
                                        <small>
                                            <strong>Michael Fletcher</strong><br/>
                                            <small>Community Manager</small>
                                        </small>
                                    </p>
                                    <div class="o_mail_v_padding text-center">
                                        <a href="#" class="o_mail_btn">LOGIN</a>
                                    </div>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <t t-call="mass_mailing.s_mail_block_footer_social"/>
    </template>

    <template id="theme_airmail_template">
        <div class="o_mail_block_header_social">
            <div class="snippet_row">
                <div class="o_mail_snippet_general">
                    <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles" width="600">
                        <tr>
                            <td width="80%"  class="o_mail_logo_container o_mail_h_padding o_mail_v_padding">
                                &amp;nbsp;
                                <a t-att-href="(company_id.website) or '#'" style="text-decoration:none;float:none;">
                                     <img border="0" src="/mass_mailing/static/src/img/theme_airmail/s_default_image_logo.png" style="height:auto;width:120px;max-width:400px;margin-left:-6px;" alt="Your Logo" />
                                </a>
                                &amp;nbsp;
                            </td>
                            <td width="20%">
                                <table t-if="website" class="o_mail_header_social" border="0" cellpadding="0" cellspacing="0" align="right" style="border-collapse:separate;">
                                    <tr>
                                        <t t-if="website.social_facebook">
                                            <td align="right">
                                                <a t-att-href="website.social_facebook">
                                                  <span class="fa fa-facebook"></span>
                                                </a>
                                            </td>
                                        </t>
                                        <t t-if="website.social_googleplus">
                                            <td align="right" style="padding-left:10px">
                                                <a t-att-href="website.social_googleplus">
                                                    <span class="fa fa-google-plus"></span>
                                                </a>
                                            </td>
                                        </t>
                                        <t t-if="website.social_linkedin">
                                            <td align="right" style="padding-left:10px">
                                                <a t-att-href="website.social_linkedin">
                                                    <span class="fa fa-linkedin"></span>
                                                </a>
                                            </td>
                                        </t>
                                        <t t-if="website.social_twitter">
                                            <td align="right" style="padding-left:10px">
                                                <a t-att-href="website.social_twitter">
                                                    <span class="fa fa-twitter"></span>
                                                </a>
                                            </td>
                                        </t>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
