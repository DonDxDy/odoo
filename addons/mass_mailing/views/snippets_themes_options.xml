<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="snippet_options">
    <t t-call="web_editor.snippet_options"/>
    <t t-raw="0"/>

    <div data-js='width-x'
        data-selector="img, .o_mail_col_mv">
    </div>

    <div data-js='table_column_mv'
        data-selector=".o_mail_col_mv"
        data-drop-near=".o_mail_col_mv">
    </div>

    <div data-js='content' class="hidden"
        data-selector="[class^='o_mail_block_']"
        data-drop-near=".o_mail_wrapper > *"
        data-drop-in=".o_mail_wrapper">
    </div>

    <div data-js='resize'
        data-selector="[class^='o_mail_block_']">
    </div>

    <div data-js='margin-y'
        data-selector="[class^='o_mail_block_'], .o_mail_col_mv">
    </div>

    <div data-js="colorpicker"
        data-selector="[class^='o_mail_block_'], [class^='o_mail_block_'] td">
        <li class="dropdown-submenu">
            <a tabindex="-1" href="#"><i class="fa fa-eyedropper"/>Background Color</a>
            <ul class="dropdown-menu">
                <li></li>
            </ul>
        </li>
    </div>
</template>

</odoo>
