<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="lead_enrichment_no_credits" model="mail.template">
            <field name="name">IAP Lead Enrichment Notification</field>
            <field name="email_from">iap@odoo.com</field>
            <field name="subject">IAP Lead Enrichment Notification</field>
            <field name="lang">${object.create_uid.lang}</field>
            <field name="model_id" ref="iap.model_iap_account"/>
            <field name="email_to">${object.create_uid.email}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Dear ${object.create_uid.name or 'Madam/Sir'},</p><br/>
                    <p>Unfortunately, there are no more credits on your IAP Lead Enrichment account.<br/>
                    You can charge it back from the Settings of the CRM app or from your IAP portal.<br/></p><br/>
                    <p>Best regards,</p><br/>
                    <p>Odoo S.A.</p>
                </div>
            </field>
        </record>
    </data>
</odoo>
