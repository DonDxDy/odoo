<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_products_recently_viewed" name="Products Recently Viewed">

        <section class="s_wtracking_products_recently_viewed bg-200 pt24 pb24">
            <div class="container">
                <div class="row s_nb_column_fixed">
                    <div class="col-lg-12 s_title pt16 pb8" style="text-align: center;">
                        <h3 class="s_title_default">Recently viewed Products</h3>
                    </div>
                </div>
            </div>
            <div id="myCarousel" class="s_carousel s_carousel_default pb-5" data-interval="0">
                <div class="container">
                    <div class="carousel-inner row w-100 mx-auto flex-nowrap py-3"/>
                </div>
                <div class="carousel-control-prev" data-target="#myCarousel" data-slide="prev" role="img" aria-label="Previous" title="Previous">
                    <span class="carousel-control-prev-icon"/>
                    <span class="sr-only">Previous</span>
                </div>
                <div class="carousel-control-next" data-target="#myCarousel" data-slide="next" role="img" aria-label="Next" title="Next">
                    <span class="carousel-control-next-icon"/>
                    <span class="sr-only">Next</span>
                </div>
            </div>
        </section>
    </template>

    <template id="snippets" inherit_id="website.snippets" name="tracking snippets">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
            <t t-snippet="website_tracking.s_products_recently_viewed" t-thumbnail="/website/static/src/img/snippets_thumbs/s_products_recently_viewed.png"/>
        </xpath>
    </template>

    <template id="remove_external_snippets" inherit_id="website.external_snippets">
        <xpath expr="//t[@t-install='website_tracking'][@id='s_products_recently_viewed']" position="replace"/>
    </template>
</odoo>
