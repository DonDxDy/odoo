<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_recently_viewed_products" name="Recently Viewed Products">
        <section class="s_recently_viewed_products bg-100 pt32 pb32">
            <div class="container">
                <div class="row s_nb_column_fixed">
                    <div class="col-lg-12 s_title">
                        <h3 class="s_title_default">Recently viewed Products</h3>
                    </div>
                </div>
            </div>
            <div id="myCarousel" class="s_carousel s_carousel_default carousel slide" data-interval="0">
                <div class="container">
                    <div class="carousel-inner row py-3"/>
                </div>
                <div class="carousel-control-prev" data-target="#myCarousel" data-slide="prev" role="img" aria-label="Previous" title="Previous">
                    <span class="carousel-control-prev-icon"/>
                    <span class="sr-only">Previous</span>
                </div>
                <div class="carousel-control-next" data-target="#myCarousel" data-slide="next" role="img" aria-label="Next" title="Next">
                    <span class="carousel-control-next-icon"/>
                    <span class="sr-only">Next</span>
                </div>
            </div>
        </section>
    </template>

    <template id="snippets" inherit_id="website.snippets" name="tracking snippets">
        <xpath expr="//div[@id='snippet_feature']//t[@t-snippet][last()]" position="after">
            <t t-snippet="website_tracking.s_recently_viewed_products" t-thumbnail="/website_tracking/static/src/img/snippets_thumbs/s_recently_viewed_products.png"/>
        </xpath>
    </template>

    <template id="remove_external_snippets" inherit_id="website.external_snippets">
        <xpath expr="//t[@t-install='website_tracking'][@id='s_recently_viewed_products']" position="replace"/>
    </template>
</odoo>
