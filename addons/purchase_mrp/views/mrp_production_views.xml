<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <record id="mrp_production_purchase_form_view" model="ir.ui.view">
        <field name="name">mrp.production.purchase.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_see_purchase_orders" type="object" icon="fa-credit-card" attrs="{'invisible': [('purchase_orders_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="purchase_orders_count"/></span>
                        <span class="o_stat_text">PO Generated</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</data></odoo>