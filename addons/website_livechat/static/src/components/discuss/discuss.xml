<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Discuss.content" t-inherit-mode="extension">
        <xpath expr="//*[hasclass('o-Discuss-thread')]" position="before">
            <t t-if="discuss.$$$thread(mself).$$$visitor(mself)">
                <VisitorBanner
                    visitor="discuss.$$$thread(mself).$$$visitor(mself)"
                />
            </t>
        </xpath>
    </t>
</templates>
