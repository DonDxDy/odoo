<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <act_window id="action_open_payment_edi_documents"
            name="Electronic invoicing"
            res_model="account.edi.document"
            view_mode="tree"
            domain="[('move_id.payment_id', '=', active_id)]"
        />

        <record id="view_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="after">
                    <div class="alert alert-warning" role="alert" style="margin-bottom:0px;"
                         attrs="{'invisible': [('edi_error_amount', '=', 0)]}">
                         <field name="edi_error_amount"/>
                         Electronic invoicing error(s)
                         <button name="%(action_open_payment_edi_documents)d" type="action" class="oe_link oe_inline" string="â‡’ See errors" /> 
                    </div>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="edi_document_ids" invisible="1" />
                    <field name="edi_state" invisible="1" />
                    <field name="edi_state" attrs="{'invisible': [('edi_document_ids', '=', [])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
