<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <!-- Success status -->
    <t t-name="website_form.status_success">
        <span id="o_website_form_result" class="text-success ml8">
            <i class="fa fa-check mr4" role="img" aria-label="Success" title="Success"/><t t-esc="message || 'The form has been sent successfully.'"/>
        </span>
    </t>

    <!-- Missing field status -->
    <t t-name="website_form.status_invalid">
        <span id="o_website_form_result" class="text-danger ml8">
            <i class="fa fa-close mr4" role="img" aria-label="Error" title="Error"/>Please fill in the form correctly.
        </span>
    </t>

    <!-- Error status -->
    <t t-name="website_form.status_error">
        <span id="o_website_form_result" class="text-danger ml8">
            <i class="fa fa-close mr4" role="img" aria-label="Error" title="Error"/>An error has occured, the form has not been sent.
        </span>
    </t>

    <t t-name="website_form.default_contactus_form">
        <div class="form-group col-12 form-field  o_website_form_custom o_website_form_required_custom">
            <div class="row s_col_no_resize s_col_no_bgcolor">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="name">Your Name</label>
                <div class="col">
                    <input type="text" class="form-control o_website_form_input" name="name" required=""/>
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_custom">
            <div class="row s_col_no_resize s_col_no_bgcolor">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="partner_phone">Phone Number</label>
                <div class="col">
                    <input type="text" class="form-control o_website_form_input" name="partner_phone"/>
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_required_custom">
            <div class="row s_col_no_resize s_col_no_bgcolor">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="email_from">Email</label>
                <div class="col">
                    <input type="email" class="form-control o_website_form_input" name="email_from" required=""/>
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_custom">
            <div class="row s_col_no_resize s_col_no_bgcolor">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="partner_name">Your Company</label>
                <div class="col">
                    <input type="text" class="form-control o_website_form_input" name="partner_name"/>
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_required_custom">
            <div class="row s_col_no_resize s_col_no_bgcolor">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="subject">Subject</label>
                <div class="col">
                    <input type="text" class="form-control o_website_form_input" name="subject" required=""/>
                </div>
            </div>
        </div>
        <div class="form-group col-12 form-field  o_website_form_custom o_website_form_required_custom">
            <div class="row s_col_no_resize s_col_no_bgcolor">
                <label style="width: 200px" class="col-auto col-form-label o_we_form_label" for="description">Your Question</label>
                <div class="col">
                    <textarea class="form-control o_website_form_input" name="description" required=""></textarea>
                </div>
            </div>
        </div>
    </t>

</templates>
