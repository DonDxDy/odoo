<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_partner_factoring_form" model="ir.ui.view">
            <field name="name">res.partner.factoring.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <notebook>
                    <page string="Factoring" groups="account.group_account_manager" attrs="{'invisible':[('company_type', '!=', 'company')]}">
                        <group>
                            <group>
                                <field name="finexkap_uuid"/>
                            </group>
                            <group>
                                <field name="finexkap_status"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('company_type', '!=', 'company')]}">
                            <group attrs="{'invisible': [('finexkap_status', '!=', 'Unknown')]}">
                                <p class="text-info">Enable financing for customer to get paid invoice quickly</p><br/>
                                <button name="action_request_financing_debtor" type="object" string="Enable Financing" attrs="{'invisible':[('company_type', '!=', 'company')]}" />
                            </group>
                            <group attrs="{'invisible': [('finexkap_status', 'in', ('Accepted', 'Rejected', 'Unknown'))]}">
                                <p class="text-info">Your request submitted waiting for approval</p><br/>
                                <button name="action_request_financing_debtor" type="object" string="Check Status" />
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="view_partner_factoring_tree" model="ir.ui.view">
            <field name="name">res.partner.factoring.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
                <xpath expr="field[@name='email']" position="after">
                    <field name="finexkap_status"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_factoring_kanban" model="ir.ui.view">
            <field name="name">res.partner.factoring.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view" />
            <field name="arch" type="xml">
                <xpath expr="//ul" position="after">
                    <div t-if="record.finexkap_status.raw_value and record.is_company.raw_value">
                        Financing Status: <strong><field name="finexkap_status"/></strong>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>