<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_factoring_form" model="ir.ui.view">
            <field name="name">res.company.factoring.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="mode">primary</field>
            <field name="priority">1025</field>
            <field name="arch" type="xml">
                <xpath expr="//h1" position="replace">
                    <h2><field name="name" readonly="1"/></h2>
                </xpath>
                <xpath expr="//notebook" position="replace">
                    <notebook>
                        <page string="Finexkap">
                            <group string="Finexkap Credentials">
                                <group>
                                    <p>Get your finexkap credentials on website <a href="https://www.finexkap.com" target="_new">https://www.finexkap.com</a></p>
                                    <field name="finexkap_username"/>
                                    <field name="finexkap_password" password="True" attrs="{'required': [('finexkap_username', '!=', False)]}"/>
                                </group>
                                <group>
                                    <field name="siret" required="1"/>
                                </group>
                            </group>
                        </page>
                        <hr />
                        <footer>
                            <button string="Save" type="object" class="oe_highlight" name="write"/>
                            <button string="Cancel" class="oe_link" special="cancel" />
                        </footer>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>