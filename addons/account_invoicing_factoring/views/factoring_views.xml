<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
		<record id="account_invoice_factoring_view" model="ir.ui.view">
            <field name="name">account.invoice.financing.form</field>
            <field name="model">account.invoice.financing</field>
            <field name="arch" type="xml">
                <form string="Request Financing">
                    <p>
                        Do you want to request a financing for the following invoices ?
                    </p>
                    <label for="invoice_ids" class="text-success"/>
                    <field name="invoice_ids">
                        <tree create="false">
                            <field name="state" invisible="1"/>
                            <field name="number"/>
                            <field name="partner_id"/>
                            <field name="date_due"/>
                            <field name="amount_total" string="Total" sum="Total"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                        </tree>
                    </field>
                    <footer>
                        <button string="Confirm" name="send_for_financing" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_account_invoice_financing"
            multi="True"
            key2="client_action_multi" name="Request Financing"
            res_model="account.invoice.financing" src_model="account.invoice"
            domain="[('state', '=', 'open')]"
            view_mode="form" target="new" view_type="form" />

        <record id="account_invoice_debtor_response_view" model="ir.ui.view">
            <field name="name">debtor.request.response.form</field>
            <field name="model">debtor.request.response</field>
            <field name="arch" type="xml">
                <form string="Request Financing" edit='false' create='false'>
                    <p>
                        Some of customers are failed to process
                    </p>
                    <label for="request_ids" class="text-success"/>
                    <field name="request_ids" readonly="1">
                        <tree>
                            <field name="partner_name"/>
                            <field name="siret"/>
                            <field name="reason"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <footer>
                        <button string="OK" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="account_invoice_view_form_inherit_factoring" model="ir.ui.view">
            <field name="name">account.invoice.view.form.inherit.factoring</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@id='account_invoice_payment_btn']" position="after">
                    <button name="action_request_financing" type="object" string="Request Financing" attrs="{'invisible':[('state', '!=', 'open')]}" class="oe_highlight" />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_factoring" type="object"
                            class="oe_stat_button" icon="fa-money"
                            attrs="{'invisible': [('state', '!=', 'open')]}">
                        Factoring
                    </button>
                </xpath>
            </field>
        </record>

        <record id="invoice_financing_offer_view_form" model="ir.ui.view">
            <field name="name">invoice.financing.offer.view.form</field>
            <field name="model">invoice.financing.offer</field>
            <field name="arch" type="xml">
                <form string="Financing Request" edit="false" create="false">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,request,accept" />
                    </header>
                    <sheet>
                        <group>
                            <h1><field name="name" nolabel="1"/></h1>
                            <field name="currency_id" invisible="1"/>
                            <field name="request_date"/>
                            <field name="invoice_amount"/>
                        </group>
                        <group groups="account.group_account_manager">
                            <group>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Invoices">
                                <field name="invoice_ids">
                                    <tree>
                                        <field name="state" invisible="1"/>
                                        <field name="number"/>
                                        <field name="date_due"/>
                                        <field name="partner_id"/>
                                        <field name="factoring_status"/>
                                        <field name="amount_total" string="Total" sum="Total"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="company_currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Informations" groups="account.group_account_manager">
                                <group>
                                    <group>
                                        <field name="request_uuid"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_financing_offer" model="ir.actions.act_window">
            <field name="name">Financing Offers</field>
            <field name="res_model">invoice.financing.offer</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>

        <menuitem
            id="menu_financing"
            name="Financing"
            parent="account.menu_finance_receivables" />

        <menuitem
            id="menu_action_financing_offer"
            action="action_financing_offer"
            parent="menu_financing" />

	</data>
</odoo>