<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
		<record id="account_invoice_factoring_view" model="ir.ui.view">
            <field name="name">account.invoice.financing.form</field>
            <field name="model">account.invoice.financing</field>
            <field name="arch" type="xml">
                <form string="Request Financing">
                    <p>
                        Do you want to request a financing for the following invoices ?
                    </p>
                    <label for="invoice_ids" class="text-success"/>
                    <field name="invoice_ids">
                        <tree create="false">
                            <field name="state" invisible="1"/>
                            <field name="number"/>
                            <field name="partner_id"/>
                            <field name="amount_total_signed" string="Total" sum="Total"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                        </tree>
                    </field>
                    <label for="ignored_invoice_ids" class="text-warning"/>
                    <field name="ignored_invoice_ids">
                        <tree create="false">
                            <field name="number"/>
                            <field name="partner_id"/>
                            <field name="amount_total_signed" string="Total" sum="Total"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <footer>
                        <button string="Confirm" name="send_for_financing" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_account_invoice_financing"
            multi="True"
            key2="client_action_multi" name="Request Financing"
            res_model="account.invoice.financing" src_model="account.invoice"
            domain="[('state', '=', 'open')]"
            view_mode="form" target="new" view_type="form" />

        <record id="account_invoice_view_form_inherit_factoring" model="ir.ui.view">
            <field name="name">account.invoice.view.form.inherit.factoring</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@id='account_invoice_payment_btn']" position="after">
                    <button name="action_request_financing" type="object" string="Request Financing" attrs="{'invisible':[('state', '!=', 'open')]}" class="oe_highlight" />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_factoring" type="object"
                            class="oe_stat_button" icon="fa-money"
                            attrs="{'invisible': [('state', '!=', 'open')]}">
                        Factoring
                    </button>
                </xpath>
            </field>
        </record>

	</data>
</odoo>